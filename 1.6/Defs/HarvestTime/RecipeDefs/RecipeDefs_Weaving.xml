	<!-- BLENDED CLOTH -->
		<!-- BASE -->
			<RecipeDef ParentName="TMM_WeaveRecipeBase" Name="TMM_BlendClothRecipeBase" Abstract="True">
				<jobString>blending cloth.</jobString>
				<allowMixingIngredients>true</allowMixingIngredients>
				<fixedIngredientFilter>
					<categories>
						<li>Textiles</li>
					</categories>
					<disallowedCategories>
						<li>Leathers</li>
						<li>Wools</li>
					</disallowedCategories>
					<disallowedThingDefs>
						<li>Cloth</li>
					</disallowedThingDefs>
				</fixedIngredientFilter>
				<recipeUsers>
					<li>TMM_LoomHand</li>
					<li>TMM_LoomElectric</li>
				</recipeUsers>
			</RecipeDef>
		<!-- BLENDED CLOTH LOOM WEAVE -->
			<RecipeDef ParentName="TMM_BlendClothRecipeBase">
				<defName>TMM_BlendClothLoom</defName>
				<label>Blend Cloth (Small Scale)</label>
				<description>Blend different fabrics into a simple cloth.\n\nMakes 25 cloth.</description>
				<workAmount>1200</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>Synthread</li>
								<li>DevilstrandCloth</li>
								<li>Hyperweave</li>
								<!-- <li>HempCloth</li> -->
								<!-- <li>Flaxcloth</li> -->
							</thingDefs>
						</filter>
						<count>20</count>
					</li>
				</ingredients>
				<products>
					<Cloth>25</Cloth>
				</products>
			</RecipeDef>
