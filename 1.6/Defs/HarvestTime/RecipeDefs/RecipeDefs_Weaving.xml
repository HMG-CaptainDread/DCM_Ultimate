	<!-- WEAVE BASE -->
		<RecipeDef Name="TMM_WeaveRecipeBase" Abstract="True">
			<jobString>weaving.</jobString>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<workSkill>Crafting</workSkill>
		</RecipeDef>
	<!-- COTTON TO CLOTH -->
		<!-- BASE -->
			<RecipeDef ParentName="TMM_WeaveRecipeBase" Name="TMM_WeaveCottonRecipeBase" Abstract="True">
				<jobString>weaving cloth.</jobString>
				<fixedIngredientFilter>
					<thingDefs>
						<li>TMM_RawCotton</li>
					</thingDefs>
				</fixedIngredientFilter>
			</RecipeDef>
		<!-- CLOTH HAND WEAVE -->
			<RecipeDef ParentName="TMM_WeaveCottonRecipeBase">
				<defName>TMM_WeaveCottonHand</defName>
				<label>Weave Cloth (Handwoven)</label>
				<description>Weave cloth from raw cotton.\n\nMakes 7 cloth.</description>
				<workAmount>700</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawCotton</li>
							</thingDefs>
						</filter>
						<count>5</count>
					</li>
				</ingredients>
				<products>
					<Cloth>7</Cloth>
				</products>
				<recipeUsers>
					<li>CraftingSpot</li>
				</recipeUsers>
			</RecipeDef>
		<!-- CLOTH LOOM WEAVE -->
			<RecipeDef ParentName="TMM_WeaveCottonRecipeBase">
				<defName>TMM_WeaveCottonLoom</defName>
				<label>Weave Cloth (Small Scale)</label>
				<description>Weave cloth from raw cotton.\n\nMakes 28 cloth.</description>
				<workAmount>700</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawCotton</li>
							</thingDefs>
						</filter>
						<count>20</count>
					</li>
				</ingredients>
				<products>
					<Cloth>28</Cloth>
				</products>
				<recipeUsers>
					<li>TMM_LoomHand</li>
					<li>TMM_LoomElectric</li>
				</recipeUsers>
			</RecipeDef>
		<!-- CLOTH LOOM WEAVE BULK -->
			<RecipeDef ParentName="TMM_WeaveCottonRecipeBase">
				<defName>TMM_WeaveCottonLoomBulk</defName>
				<label>Weave Cloth (Large Scale)</label>
				<description>Weave cloth from raw cotton.\n\nMakes 140 cloth.</description>
				<workAmount>2800</workAmount>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawCotton</li>
							</thingDefs>
						</filter>
						<count>100</count>
					</li>
				</ingredients>
				<products>
					<Cloth>140</Cloth>
				</products>
				<recipeUsers>
					<li>TMM_LoomHand</li>
					<li>TMM_LoomElectric</li>
				</recipeUsers>
			</RecipeDef>
