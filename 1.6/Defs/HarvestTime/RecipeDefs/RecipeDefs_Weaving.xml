						<filter>
							<thingDefs>
								<li>Synthread</li>
								<li>DevilstrandCloth</li>
								<li>Hyperweave</li>
								<!-- <li>HempCloth</li> -->
								<!-- <li>Flaxcloth</li> -->
							</thingDefs>
						</filter>
						<count>80</count>
					</li>
				</ingredients>
				<products>
					<Cloth>100</Cloth>
				</products>
			</RecipeDef>
</Defs>