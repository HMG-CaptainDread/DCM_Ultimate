	<!-- BASES -->
		<!-- MAIN BASE -->
			<RecipeDef Name="TMM_SmeltPlantRecipeBase" Abstract="True">
				<jobString>extracting resources from plants.</jobString>
				<workAmount>1200</workAmount>
				<workSpeedStat>SmeltingSpeed</workSpeedStat>
				<effectWorking>Smelt</effectWorking>
				<soundWorking>Recipe_Smelt</soundWorking>
				<recipeUsers>
					<li>ElectricSmelter</li>
				</recipeUsers>
				<workSkill>Crafting</workSkill>
			</RecipeDef>
	<!-- STEEL -->
		<!-- BASE -->
			<RecipeDef ParentName="TMM_SmeltPlantRecipeBase" Name="TMM_SmeltSteelshroomBase" Abstract="True">
				<fixedIngredientFilter>
					<thingDefs>
						<li>TMM_RawSteelshroom</li>
					</thingDefs>
				</fixedIngredientFilter>
				<skillRequirements>
					<Crafting>8</Crafting>
				</skillRequirements>
			</RecipeDef>
		<!-- REGULAR -->
			<RecipeDef ParentName="TMM_SmeltSteelshroomBase">
				<defName>TMM_ExtractSteelshrooms</defName>
				<label>Smelt Steelshrooms (Small Scale)</label>
				<description>Use heat and strong electromagnets to separate useful metal from Steelshrooms.\n\nMakes 4 steel from 16 shrooms.</description>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawSteelshroom</li>
							</thingDefs>
						</filter>
						<count>16</count>
					</li>
				</ingredients>
				<products>
					<Steel>4</Steel>
				</products>
			</RecipeDef>
		<!-- BULK -->
			<RecipeDef ParentName="TMM_SmeltSteelshroomBase">
				<defName>TMM_ExtractSteelshroomsBulk</defName>
