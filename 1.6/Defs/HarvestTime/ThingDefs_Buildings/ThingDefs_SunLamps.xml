	<!-- SUN LAMP BASES -->
		<!-- MAIN SUN LAMP BASE -->
			<ThingDef ParentName="LampBase" Name="TMM_SunLampBase" Abstract="True">
				<thingClass>Building_SunLamp</thingClass>
				<tickerType>Rare</tickerType>
				<selectable>true</selectable>
				<designationCategory>TMM_HarvestTimeDesignator</designationCategory>
			</ThingDef>
		<!-- MINI SUN LAMP BASE -->
			<ThingDef ParentName="TMM_SunLampBase" Name="TMM_MiniSunLampBase" Abstract="True">
				<designatorDropdown>TMM_MiniSunLampGroup</designatorDropdown>
				<blockWind>false</blockWind>
				<statBases>
					<WorkToBuild>200</WorkToBuild>
					<Mass>1.5</Mass>
				</statBases>
				<costList>
					<Steel>15</Steel>
				</costList>
				<comps>
					<li Class="CompProperties_Glower">
						<overlightRadius>3.5</overlightRadius>
						<glowRadius>6</glowRadius>
						<glowColor>(370,370,370,0)</glowColor>
					</li>
					<li Class="CompProperties_Power">
						<compClass>CompPowerTrader</compClass>
						<shortCircuitInRain>true</shortCircuitInRain>
						<basePowerConsumption>750</basePowerConsumption>
					</li>
				</comps>
				<specialDisplayRadius>2.8</specialDisplayRadius>
			</ThingDef>
