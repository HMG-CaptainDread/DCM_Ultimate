	<!-- CEILING LAMPS -->
		<!-- MINI -->
			<ThingDef ParentName="TMM_MiniSunLampBase">
				<defName>TMM_MiniCeilingSunLamp</defName>
				<label>Mini Ceiling Sun Lamp</label>
				<description>A very small ceiling mounted sun lamp which lights an area brightly enough to grow crops, but consumes a large amount of power. Automatically turns itself off at night.</description>
				<graphicData>
					<texPath>Modules/HarvestTime/Buildings/SunLamps/Ceiling/SunLampCeiling</texPath>
				</graphicData>
				<building>
					<isEdifice>false</isEdifice>
				</building>
				<comps>
					<li Class="CompProperties_Schedule">
						<!-- Match plant growing times -->
						<startTime>0.25</startTime>
						<endTime>0.8</endTime>
						<offMessage>Off for plant resting period</offMessage>
					</li>
				</comps>
			</ThingDef>
