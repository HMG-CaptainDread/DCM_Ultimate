<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- <></> -->

	<XmlExtensions.SettingsMenuDef>
		<defName>DCM_HarvestTime_Settings</defName>
		<!-- <modId>dread.dcm.ultimate</modId> -->
		<label>DCM Ultimate - Harvest Time Settings </label>
		<settings>
			<li Class="XmlExtensions.Setting.SetColor">
				<color>(187,0,0)</color>
			</li>
			<li Class="XmlExtensions.Setting.Text">
				<text>Any changes to settings require a game restart!</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
				<tKey>DCMSettingWarning</tKey>
			</li>
			<li Class="XmlExtensions.Setting.SetColor"/>
			<li Class="XmlExtensions.Setting.GapLine">
			</li>


			<!-- HARVEST TIME -->
				<li Class="XmlExtensions.Setting.Text">
					<text>Harvest Time Settings</text>
					<font>Medium</font>
					<anchor>Middle</anchor>
					<tKey>DCMHarvestTimeSettingTitle</tKey>
				</li>
				<li Class="XmlExtensions.Setting.Gapline">
				</li>
				<!-- TWEAK REGROWTH -->
					<li Class="XmlExtensions.Setting.Checkbox">
						<label>Enable Crop Regrowth</label>
						<key>DCM_HT_CropRegrowth</key>
						<defaultValue>true</defaultValue>
						<tKey>DCM_HT_CropRegrowth_TKey</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor">
						<color>(163,177,188)</color>
					</li>
					<li Class="XmlExtensions.Setting.Text">
						<text>Changes some crops to allow for multiple harvests from one planting season.</text>
						<tKey>DCM_HT_CropRegrowth_Desc_TKey</tKey>
					</li>
					<li Class="XmlExtensions.Setting.SetColor"/>
					<!--  -->
						<li Class="XmlExtensions.Setting.ToggleableSettings">
							<key>DCM_HT_CropRegrowth</key>
							<caseTrue>
								<!-- CORN -->
									<li Class="XmlExtensions.Setting.Checkbox">
										<label>Enable multiple harvests for Corn.</label>
										<key>DCM_HT_CropRegrowth_Corn</key>
										<defaultValue>true</defaultValue>
										<tKey>DCM_HT_CropRegrowth_Corn_TKey</tKey>
									</li>
									<li Class="XmlExtensions.Setting.SetColor">
										<color>(163,177,188)</color>
									</li>
									<li Class="XmlExtensions.Setting.Text">
										<text>Corn can be harvested multiple times.</text>
										<tKey>DCM_HT_CropRegrowth_Corn_Desc_TKey</tKey>
									</li>
									<li Class="XmlExtensions.Setting.SetColor"/>
							</caseTrue>
						</li>
		</settings>
	</XmlExtensions.SettingsMenuDef>
</Defs>