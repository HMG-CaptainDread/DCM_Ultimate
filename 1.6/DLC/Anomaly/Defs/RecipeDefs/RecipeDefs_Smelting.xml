<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- <></> -->
	<!--  -->



	<!-- BIOFERRITE -->
		<!-- BASE -->
			<RecipeDef ParentName="TMM_SmeltPlantRecipeBase" Name="TMM_SmeltBioferriteLeavesBase" Abstract="True">
				<fixedIngredientFilter>
					<thingDefs>
						<li>TMM_RawBioferriteLeaf</li>
					</thingDefs>
				</fixedIngredientFilter>
				<skillRequirements>
					<Crafting>6</Crafting>
				</skillRequirements>
			</RecipeDef>
		<!-- REGULAR -->
			<RecipeDef ParentName="TMM_SmeltBioferriteLeavesBase">
				<defName>TMM_ExtractBioferriteLeaves</defName>
				<label>Extract Bioferrite Leaves (Small Scale)</label>
				<description>Use heat and strong electromagnets to separate useful metal from bioferrite leaves.\n\nMakes 4 bioferrite from 16 leaves.</description>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawBioferriteLeaf</li>
							</thingDefs>
						</filter>
						<count>16</count>
					</li>
				</ingredients>
				<products>
					<Bioferrite>4</Bioferrite>
				</products>
			</RecipeDef>
		<!-- BULK -->
			<RecipeDef ParentName="TMM_SmeltBioferriteLeavesBase">
				<defName>TMM_ExtractBioferriteLeavesBulk</defName>
				<label>Extract Bioferrite Leaves (Large Scale)</label>
				<description>Use heat and strong electromagnets to separate useful metal from bioferrite leaves.\n\nMakes 16 bioferrite from 64 leaves.</description>
				<ingredients>
					<li>
						<filter>
							<thingDefs>
								<li>TMM_RawBioferriteLeaf</li>
							</thingDefs>
						</filter>
						<count>64</count>
					</li>
				</ingredients>
				<products>
					<Bioferrite>16</Bioferrite>
				</products>
			</RecipeDef>
</Defs>