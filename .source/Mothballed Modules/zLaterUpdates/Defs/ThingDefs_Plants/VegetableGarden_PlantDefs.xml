	<!-- FLOWERS AND GRASS -->
		<!-- GARDEN ROSE -->
			<ThingDef ParentName="PlantBase">
				<defName>VG_Rose</defName>
				<label>garden rose</label>
				<description>A beautiful cultivated flower, the rose has been a symbol of love since Earth's ancient era.</description>
				<statBases>
				<MaxHitPoints>85</MaxHitPoints>
				<Beauty>14</Beauty>
				<BeautyOutdoors>14</BeautyOutdoors>
				<Nutrition>0.05</Nutrition>
				</statBases>
				<graphicData>
				<texPath>Things/Plants/Rose</texPath>
				<graphicClass>Graphic_Random</graphicClass>
				</graphicData>
				<altitudeLayer>Item</altitudeLayer>
				<selectable>true</selectable>
				<ingestible>
				<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
				</ingestible>
				<plant>
				<dieIfLeafless>true</dieIfLeafless>
				<harvestTag>Standard</harvestTag>
				<sowWork>750</sowWork> <!-- 100 ticks per live day -->
				<sowTags>
					<li>Ground</li>
					<li>Decorative</li>
				</sowTags>
				<growMinGlow>0.3</growMinGlow>
				<topWindExposure>0.1</topWindExposure>
				<growDays>1.5</growDays>
				<lifespanDaysPerGrowDays>5</lifespanDaysPerGrowDays>
				<visualSizeRange>0.3~0.8</visualSizeRange>
				<wildOrder>1</wildOrder>
				<purpose>Beauty</purpose>
				</plant>
			</ThingDef>
		<!-- GARDEN DAYLILY -->
			<ThingDef ParentName="PlantBase">
				<defName>VG_Daylily</defName>
				<label>garden daylily</label>
				<description>A cultivated flower with wide petals and a short lifespan. Daylilies are very beautiful, but must be replanted often.</description>
				<statBases>
				<MaxHitPoints>85</MaxHitPoints>
				<Beauty>18</Beauty>
				<BeautyOutdoors>18</BeautyOutdoors>
				<Nutrition>0.05</Nutrition>
				</statBases>
				<graphicData>
				<texPath>Things/Plants/Daylily</texPath>
				<graphicClass>Graphic_Random</graphicClass>
				</graphicData>
				<altitudeLayer>Item</altitudeLayer>
				<selectable>true</selectable>
				<ingestible>
				<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
				</ingestible>
				<plant>
				<dieIfLeafless>true</dieIfLeafless>
				<harvestTag>Standard</harvestTag>
				<sowWork>540</sowWork> <!-- 120 ticks per live day for beauty -->
				<sowTags>
					<li>Ground</li>
					<li>Decorative</li>
				</sowTags>
				<growMinGlow>0.3</growMinGlow>
				<topWindExposure>0.1</topWindExposure>
				<growDays>1.5</growDays>
				<lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
				<visualSizeRange>0.3~0.8</visualSizeRange>
				<wildOrder>1</wildOrder>
				<purpose>Beauty</purpose>
				</plant>
			</ThingDef>
	<!-- CULTIVATED FRUIT TREES -->
	<!-- AMBROSIA BUSH -->
		<ThingDef ParentName="PlantBase">
			<defName>VG_PlantAmbrosia</defName>
			<label>ambrosia bush</label>
			<description>A bush which yields the ambrosia fruit. Ambrosia is pleasurable to eat and produces a slightly addictive chemical warmth effect. Grown in a Hydroponics basin. Does not destroy when harvested.</description>
			<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Nutrition>0.35</Nutrition>
			</statBases>
			<graphicData>
			<texPath>Things/Plant/Ambrosia</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.1, 0.2, 0.1)</volume>
			</shadowData>
			</graphicData>
			<selectable>true</selectable>
			<pathCost>10</pathCost>
			<plant>
			<fertilityMin>0.3</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>6</growDays>
			<leaflessGraphicPath>Things/Plant/Ambrosia_Leafless</leaflessGraphicPath>
			<immatureGraphicPath>Things/Plant/Ambrosia_Immature</immatureGraphicPath>
			<harvestYield>4</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestAfterGrowth>0.3</harvestAfterGrowth>
			<harvestedThingDef>Ambrosia</harvestedThingDef>
			<sowMinSkill>10</sowMinSkill>
			<visualSizeRange>0.5~1.1</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<sowTags>
				<li>Hydroponic</li>
			</sowTags>
			<sowResearchPrerequisites>
				<li>VG_Ambrosia</li>
			</sowResearchPrerequisites>
			</plant>
		</ThingDef>
	<!-- BABY AGARILUX -->
		<ThingDef ParentName="CavePlantBase">
			<defName>VGP_Agarilux</defName>
			<label>baby agarilux</label>
			<description>An purple mushroom. Its size and glowing protrusions make this fungus beautiful to look at. Dies when exposed to light. Faster grow than the kind that grow in nature, but also has a much smaller yield</description>
			<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<Beauty>3</Beauty>
			<Nutrition>0.5</Nutrition>
			</statBases>
			<graphicData>
			<texPath>Things/Plant/Agarilux</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.2, 0.3, 0.13)</volume>
				<offset>(-0.03,0,-0.44)</offset>
			</shadowData>
			</graphicData>
			<selectable>true</selectable>
			<pathCost>25</pathCost>
			<plant>
			<fertilityMin>0.3</fertilityMin>
			<fertilitySensitivity>0.30</fertilitySensitivity>
			<growDays>12</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestYield>17</harvestYield>
			<harvestTag>Standard</harvestTag>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<sowMinSkill>5</sowMinSkill>
			<neverBlightable>true</neverBlightable>
			<visualSizeRange>0.5~0.75</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<sowTags>
					<li>Hydroponic</li>
					<li>Ground</li>
			</sowTags>
			</plant>
			<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>5</glowRadius>
				<glowColor>(78, 226, 229, 0)</glowColor>
			</li>
			</comps>
		</ThingDef>
</Defs>