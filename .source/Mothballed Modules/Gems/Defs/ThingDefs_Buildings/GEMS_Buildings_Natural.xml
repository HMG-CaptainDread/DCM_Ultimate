        <!-- AMBER -->
            <ThingDef ParentName="DCM_MineableBase">
                <defName>DCM_U_MineableAmber</defName>
                <label>amber</label>
                <description>A rock that contains amber.</description>
                <graphicData>
                    <color>(114,92,83)</color>
                    <colorTwo>(206,140,80)</colorTwo>
                </graphicData>
                <statBases>
                    <MaxHitPoints>1500</MaxHitPoints>
                </statBases>
                <building>                    
                    <mineableThing>DCM_U_Raw_Amber</mineableThing>
                    <mineableYield>10</mineableYield>
                    <mineableScatterCommonality>0.15</mineableScatterCommonality>
                    <mineableScatterLumpSizeRange>2~6</mineableScatterLumpSizeRange>                    
                </building>
            </ThingDef>
