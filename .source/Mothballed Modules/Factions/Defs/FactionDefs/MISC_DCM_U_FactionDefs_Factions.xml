	<!-- RUN 'N' GUNNERS -->
	<FactionDef ParentName="FactionBase">
    <defName>CGF1_MWP_RunNGunners_Faction</defName>
    <label>Run'n'Gunners</label>
    <description>A small guild of gunsmiths, manufacturers, and tradesmen, the Run'N'Gunners are the principle arms producers and dealers on the Rim.\n\nThey do not concern themselves with conflict - except how they can profit off of it.</description>
    <pawnSingular>run'n'gunner</pawnSingular>
    <pawnsPlural>run'n'gunners</pawnsPlural>
	  <fixedName>Run'N'Gunners</fixedName>
    <listOrderPriority>200</listOrderPriority>
    <settlementGenerationWeight>1</settlementGenerationWeight>
	  <maxCountAtGameStart>1</maxCountAtGameStart>
	  <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>100</configurationListOrderPriority>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <leaderTitle>head industrialist</leaderTitle>
    <factionIconPath>CGF1/World/Runnin_Gunners</factionIconPath>
    <techLevel>Industrial</techLevel>
	  <fixedLeaderKinds>
      <li>CGF1_MWP_RunNGunners_Leader</li>
    </fixedLeaderKinds>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <allowedCultures><li>Rustican</li></allowedCultures>
	  <allowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Loyalist</li>
    </allowedMemes>
	  <structureMemeWeights>
      <Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
      <Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
    </structureMemeWeights>
    <backstoryFilters>
      <li>
        <categories>
          <li>Outlander</li>
        </categories>
        <commonality>1.00</commonality>
      </li>
    </backstoryFilters>
    <caravanTraderKinds>
      <li>CGF1_MWP_RunNGunners_TraderKind_GunDealer</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>CGF1_MWP_RunNGunners_TraderKind_Base</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
    <raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
	  <permanentEnemyToEveryoneExcept>
      <li>OutlanderCivil</li>
      <li>OutlanderRough</li>
      <li>TribeCivil</li>
      <li>TribeRough</li>
      <li>PlayerTribe</li>
      <li>PlayerColony</li>
      <li>Ancients</li>
      <li MayRequire="Ludeon.RimWorld.Royalty">Empire</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">NudistTribe</li>
      <li MayRequire="Ludeon.RimWorld.Biotech">OutlanderRoughPig</li>
      <li MayRequire="OskarPotocki.VFE.Tribals">VFET_WildMen</li>
    </permanentEnemyToEveryoneExcept>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <CGF1_MWP_RunNGunners_Trader>1</CGF1_MWP_RunNGunners_Trader>
        </traders>
        <carriers>
          <Horse>25</Horse>
          <Muffalo>1</Muffalo>
        </carriers>
        <guards>
          <CGF1_MWP_RunNGunners_Guard>10</CGF1_MWP_RunNGunners_Guard>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <CGF1_MWP_RunNGunners_Guard>10</CGF1_MWP_RunNGunners_Guard>
		  <CGF1_MWP_RunNGunners_Leader>0.6</CGF1_MWP_RunNGunners_Leader>
        </options>
      </li>
    </pawnGroupMakers>
    <settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
  </FactionDef>






</Defs>