<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- Cinders of the Embergarden Ancient Building patch -->

<!-- WorkToBuild and costList patch -->

<!-- Ancient Automatic Truck -->

<Operation Class="PatchOperationConditional">
	<success>Normal</success>
	<!-- ancient automatic truck check -->
	<xpath>*/ThingDef[defName="Cinder_AncientRustedChunk_A"]/statBases</xpath>
	<!-- Add WorkToBuild and costList -->
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="Cinder_AncientRustedChunk_A"]/statBases</xpath>
				<value>
					<!-- 15000 tick : 6 hours in game -->
					<WorkToBuild>15000</WorkToBuild>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="Cinder_AncientRustedChunk_A"]</xpath>
				<value>
					<costList>
						<ChunkSlagSteel>6</ChunkSlagSteel>
						<MedicineIndustrial>2</MedicineIndustrial>
						<MealSurvivalPack>5</MealSurvivalPack>
					</costList>
				</value>
			</li>
		</operations>
	</match>
	<nomatch/>
</Operation>

