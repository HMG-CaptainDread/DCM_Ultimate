  <Operation Class="PatchOperationSequence">
    <operations>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/thingCategories</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]</xpath>
          <value>
            <thingCategories>
              <li>BuildingsFurniture</li>
            </thingCategories>
          </value>
        </nomatch>
        <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/thingCategories</xpath>
          <value>
            <thingCategories>
              <li>BuildingsFurniture</li>
            </thingCategories>
          </value>
        </match>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/minifiedDef</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]</xpath>
          <value>
            <minifiedDef>MinifiedThing</minifiedDef>
          </value>
        </nomatch>
        <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/minifiedDef</xpath>
          <value>
            <minifiedDef>MinifiedThing</minifiedDef>
          </value>
        </match>
      </li>
      <li Class="PatchOperationConditional">
        <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/statBases/mass</xpath>
        <nomatch Class="PatchOperationAdd">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/statBases</xpath>
          <value>
            <Mass>5</Mass>
          </value>
        </nomatch>
        <match Class="PatchOperationReplace">
          <xpath>/Defs/ThingDef[defName="AG_AncientFaultyLamp" or defName="AG_RuinedLabLamp"]/statBases/mass</xpath>
          <value>
            <Mass>5</Mass>
          </value>
        </match>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationSequence">
