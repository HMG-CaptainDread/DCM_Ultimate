        <xpath>/Defs/ThingDef[ defName="AG_AncientWastepackAtomizer" or defName="AG_AncientSubcoreRipscanner" or defName="AG_AncientLargeMechGestator" or defName="AG_AncientMechGestator" or defName="AG_AncientLargeRecharger" or defName="AG_AncientHugeBank" or defName="AG_AncientGeneProcessor" or defName="AG_AncientGeneExtractor" or defName="AG_AncientGeneAssembler"]/costList</xpath>
        <value>
          <costList>
            <Steel>41</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
            <ChunkSlagSteel>1</ChunkSlagSteel>
          </costList>
        </value>
      </li>
    </operations>
  </Operation>

  <Operation Class="PatchOperationSequence">
