        <xpath>/Defs/ThingDef[ defName="AG_AncientBasicRecharger" or defName="AG_AncientBandNode" or defName="AG_AncientVitalsMonitor" or defName="AG_AncientLamp" or defName="AG_AncientGrowthVat" or defName="AG_AncientGeneBank" or defName="AG_AncientPollutionPump"]/costList</xpath>
