	<!-- VGP -->
		<!-- VEGETABLE GARDEN -->
			<!-- FLOOR BASE -->
				<TerrainDef Name="VG_FloorBase" Abstract="True">
					<layerable>true</layerable>
					<affordances>
					<li>Light</li>
					<li>Medium</li>
					<li>Heavy</li>
					</affordances>
					<tags>
					<li>Floor</li>
					</tags>
					<designationCategory>Floors</designationCategory>
					<fertility>0</fertility>
					<constructEffect>ConstructDirt</constructEffect>
					<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
						<isPaintable>true</isPaintable>
				</TerrainDef>
			<!-- BAMBOO FLOOR -->
				<TerrainDef ParentName="VG_FloorBase">
					<defName>BambooFloor</defName>
					<label>bamboo floor</label>
					<renderPrecedence>250</renderPrecedence>
					<description>bamboo flooring. For that warm, homey feeling.</description>
					<texturePath>Things/floor/bamboofloor</texturePath>
					<burnedDef>BurnedWoodPlankFloor</burnedDef>
					<statBases>
					<WorkToBuild>85</WorkToBuild>
					<Flammability>0.22</Flammability>
					<Beauty>1</Beauty>
					</statBases>
					<costList>
					<Bamboo>4</Bamboo>
					</costList>
					<constructEffect>ConstructWood</constructEffect>
				</TerrainDef>
			<!-- IRONWOOD FLOOR -->
				<TerrainDef ParentName="VG_FloorBase">
					<defName>IronwoodFloor</defName>
					<label>Ironwood floor</label>
					<renderPrecedence>250</renderPrecedence>
					<description>Simple ironwood flooring. Not as nice as what the Nobles use but uses a lot less wood and time to make.</description>
					<texturePath>Things/floor/IronwoodFloor</texturePath>
					<statBases>
					<WorkToBuild>85</WorkToBuild>
					<Beauty>1</Beauty>
					</statBases>
					<costList>
					<VG_IronWoodLog>4</VG_IronWoodLog>
					</costList>
					<constructEffect>ConstructWood</constructEffect>
				</TerrainDef>
