		<!-- PLACE SOIL -->
			<TerrainDef ParentName="NaturalTerrainBase">
				<defName>VG_PlaceSoil</defName>
				<label>Place Soil</label>
				<description>Places dirt onto rough stone floors to grow crops.</description>
				<texturePath>Terrain/Surfaces/Soil</texturePath>
				<edgeType>FadeRough</edgeType>
				<renderPrecedence>335</renderPrecedence>
				<pathCost>2</pathCost>
				<statBases>
				<Beauty>-3</Beauty>
				<BeautyOutdoors>0</BeautyOutdoors>
				<Cleanliness>-1</Cleanliness>
				<WorkToBuild>3000</WorkToBuild>
				</statBases>
				<designationCategory>GardenTools</designationCategory>
				<constructEffect>ConstructDirt</constructEffect>
				<scatterType>Rocky</scatterType>
				<affordances>
				<li>Light</li>
				<li>Medium</li>
				<li>Heavy</li>
				<li>GrowSoil</li>
				<li>Diggable</li>
				</affordances>
				<generatedFilth>Filth_Dirt</generatedFilth>
				<fertility>1.0</fertility>
				<takeFootprints>True</takeFootprints>
				<tools>
				<li>
					<label>dirt</label>
					<capacities>
					<li>KickMaterialInEyes</li>
					</capacities>
					<hediff>DirtInEyes</hediff>
					<cooldownTime>1.5</cooldownTime>
				</li>
				</tools>
				<avoidWander>True</avoidWander>
				<terrainAffordanceNeeded>SmoothableStone</terrainAffordanceNeeded>
				<researchPrerequisites>
				<li>SoilReclam</li>
				</researchPrerequisites>
				<costList>
				<VG_PileofDirt>5</VG_PileofDirt>
				</costList>
				<tags>
				<li>Soil</li>
				</tags>
			</TerrainDef>
