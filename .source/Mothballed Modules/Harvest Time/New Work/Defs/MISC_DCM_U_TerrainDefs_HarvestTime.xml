		<!-- EXCAVATED GROUND -->
			<TerrainDef ParentName="NaturalTerrainBase">
				<defName>VG_Excavation</defName>
				<label>excavated ground</label>
				<description>Ground excavation is used to replace any natural heavy land tile, including smoothed stone floors, to allow for the placement of Garden Soils or normal flooring. Use caution when using this, as it will destroy the fertility of the tile and turn it to a stony gravel natural floor.</description>	
				<texturePath>Terrain/Surfaces/Gravel</texturePath>
				<pollutedTexturePath>Terrain/Surfaces/GravelPolluted</pollutedTexturePath>
				<pollutionOverlayTexturePath>Terrain/Surfaces/RoughStonePollutionOverlay</pollutionOverlayTexturePath>
				<pollutionShaderType MayRequire="Ludeon.RimWorld.Biotech">TerrainFadeRoughLinearAdd</pollutionShaderType>
				<edgeType>FadeRough</edgeType>
				<renderPrecedence>320</renderPrecedence>
				<pathCost>2</pathCost>
				<statBases>
				<Beauty>-1</Beauty>
				<BeautyOutdoors>0</BeautyOutdoors>
				<Cleanliness>-1</Cleanliness>
				<WorkToBuild>500</WorkToBuild>
				</statBases>
				<layerable>false</layerable>
				<designationCategory>GardenTools</designationCategory>
				<constructEffect>ConstructDirt</constructEffect>
				<affordances>
				<li>Light</li>
				<li>Medium</li>
				<li>Heavy</li>
				<li>VG_ReclaimableSoil</li>
				</affordances>
				<generatedFilth>Filth_Dirt</generatedFilth>
				<fertility>0</fertility>
				<takeFootprints>False</takeFootprints>
				<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
				<tools>
				<li>
					<label>gravel</label>
					<capacities>
					<li>KickMaterialInEyes</li>
					</capacities>
					<hediff>GravelInEyes</hediff>
					<cooldownTime>1.5</cooldownTime>
				</li>
				</tools>
			</TerrainDef>
