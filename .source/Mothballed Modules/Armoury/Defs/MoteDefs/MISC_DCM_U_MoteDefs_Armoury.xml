	<!-- VWE-LASERS -->
		<!-- BLOOD PUFF -->
		<ThingDef ParentName="MoteBase">
    <defName>VWEL_Mote_BloodPuff</defName>
    <graphicData>
      <texPath>Effects/BloodPuff</texPath>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
      <fadeInTime>0.04</fadeInTime>
      <solidTime>0.25</solidTime>
      <fadeOutTime>0.1</fadeOutTime>
    </mote>
  </ThingDef>
		<!-- HEAT GLOW -->
		<ThingDef ParentName="MoteBase">
    <defName>HeatGlow</defName>
    <graphicData>
      <texPath>Things/Mote/FireGlow</texPath>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
	<mote>
   <fadeInTime>2.6</fadeInTime>
    <solidTime>1.5</solidTime>
    <fadeOutTime>3.3</fadeOutTime>
	 </mote>
  </ThingDef>
		<!-- MICRO SPARKS FAST -->
		<ThingDef ParentName="MoteBase">
    <defName>MicroSparksFast</defName>
    <graphicData>
      <texPath>Things/Mote/MicroSparks</texPath>
    </graphicData>
    <altitudeLayer>MoteOverhead</altitudeLayer>
	<mote>
    <fadeInTime>0.15</fadeInTime>
    <solidTime>0.3</solidTime>
    <fadeOutTime>0.45</fadeOutTime>
	 </mote>
  </ThingDef>
		<!-- SPARK THROWN FAST -->
		<FleckDef ParentName="FleckBase">
    <defName>SparkThrownFast</defName>
    <graphicData>
      <texPath>Things/Mote/SparkThrown</texPath>
      <shaderType>Transparent</shaderType>
    </graphicData>
    <altitudeLayer>Projectile</altitudeLayer>
    <fadeInTime>0.03</fadeInTime>
      <solidTime>0.04</solidTime>
      <fadeOutTime>0.13</fadeOutTime>
      <collide>true</collide>
  </FleckDef>
		<!-- LASER IMPACT -->
		<EffecterDef Name="VWELLaserImpact">
    <defName>VWELLaserImpact</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <fleckDef>SparkFlash</fleckDef>
        <positionLerpFactor>0.6</positionLerpFactor>
        <chancePerTick>0.2</chancePerTick>
        <scale>
          <min>2.5</min>
          <max>4.5</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.2</positionRadius>
        <fleckDef>AirPuff</fleckDef>
        <burstCount>
          <min>4</min>
          <max>5</max>
        </burstCount>
        <speed>
          <min>0.4</min>
          <max>0.8</max>
        </speed>
        <scale>
          <min>0.5</min>
          <max>0.8</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.02</positionRadius>
        <fleckDef>SparkThrownFast</fleckDef>
        <burstCount>
          <min>4</min>
          <max>5</max>
        </burstCount>
        <speed>
          <min>3.3</min>
          <max>5</max>
        </speed>
        <scale>
          <min>0.1</min>
          <max>0.2</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.02</positionRadius>
        <fleckDef>MicroSparksFast</fleckDef>
        <burstCount>
          <min>1</min>
          <max>1</max>
        </burstCount>
        <speed>
          <min>0.3</min>
          <max>0.4</max>
        </speed>
        <rotationRate>
          <min>5</min>
          <max>10</max>
        </rotationRate>
        <scale>
          <min>0.3</min>
          <max>0.5</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.1</positionRadius>
        <fleckDef>SparkFlash</fleckDef>
        <burstCount>
          <min>1</min>
          <max>1</max>
        </burstCount>
        <scale>
          <min>0.9</min>
          <max>1.3</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
    </children>
    <offsetTowardsTarget><min>0.0</min><max>0.0</max></offsetTowardsTarget>
    <positionRadius>0.01</positionRadius>
  </EffecterDef>
		<!-- LASER LIVING IMPACT -->
		<EffecterDef Name="VWELLaserLivingImpact">
    <defName>VWELLaserLivingImpact</defName>
    <children>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.2</positionRadius>
        <fleckDef>AirPuff</fleckDef>
        <burstCount>
          <min>4</min>
          <max>5</max>
        </burstCount>
        <speed>
          <min>0.4</min>
          <max>0.8</max>
        </speed>
        <scale>
          <min>0.5</min>
          <max>0.8</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
      <li>
        <subEffecterClass>SubEffecter_SprayerTriggered</subEffecterClass>
        <positionRadius>0.05</positionRadius>
        <moteDef>VWEL_Mote_BloodPuff</moteDef>
        <burstCount>
          <min>4</min>
          <max>7</max>
        </burstCount>
        <speed>
          <min>0.5</min>
          <max>2.0</max>
        </speed>
        <rotationRate>
          <min>320</min>
          <max>360</max>
        </rotationRate>
        <scale>
          <min>0.2</min>
          <max>0.85</max>
        </scale>
        <spawnLocType>OnSource</spawnLocType>
      </li>
    </children>
    <offsetTowardsTarget><min>0.0</min><max>0.0</max></offsetTowardsTarget>
    <positionRadius>0.3</positionRadius>
  </EffecterDef>
		<!-- LASER BEAM GRAPHIC -->
		<ThingDef>
    <defName>VWELBeamGraphic</defName>
    <thingClass>VEF.Weapons.LaserBeamGraphic</thingClass>
    <drawOffscreen>true</drawOffscreen>
    <label>laser beam</label>
    
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
  </ThingDef>
		<!-- LASER BEAM -->
		<ThingDef Abstract="True" Name="VWEL_Bullet_LaserGeneric" ParentName="BaseBullet">
    <thingClass>VEF.Weapons.LaserBeam</thingClass>
    <drawOffscreen>true</drawOffscreen>
    <beamGraphic>VWELBeamGraphic</beamGraphic>
   
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <texPath>Things/Projectile/Charge_Small</texPath>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>1.5</drawSize>
    </graphicData>
	
    <explosionEffect>VWELLaserImpact</explosionEffect>
    <hitLivingEffect>VWELLaserLivingImpact</hitLivingEffect>
    
    <projectile>
      <damageDef>Bomb</damageDef>
      <speed>10000</speed>
    </projectile>
    
    <seam>0.25</seam>
  </ThingDef>
