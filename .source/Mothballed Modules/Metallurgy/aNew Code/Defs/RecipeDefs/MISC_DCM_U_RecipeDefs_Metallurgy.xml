		<!-- SMELT PLASTEEL -->
		<RecipeDef>
			<defName>MakePlasteel</defName>
			<label>smelt plasteel</label>
			<description>Use heat to combine steel, titanium, silver and chemfuel into plasteel.</description>
			<jobString>Smelting plasteel.</jobString>
			<workAmount>6000</workAmount>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<effectWorking>Smelt</effectWorking>
			<soundWorking>Recipe_Smelt</soundWorking>
			<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Titanium</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Silver</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			</ingredients>
			<products>
			<Plasteel>30</Plasteel>
			</products>
			<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>Titanium</li>
				<li>Silver</li>
				<li>Chemfuel</li>
			</thingDefs>
			</fixedIngredientFilter>
			<skillRequirements>
				<Crafting>6</Crafting>
			</skillRequirements>
			<researchPrerequisite>AdvancedAlloyRefining</researchPrerequisite>
		</RecipeDef>
