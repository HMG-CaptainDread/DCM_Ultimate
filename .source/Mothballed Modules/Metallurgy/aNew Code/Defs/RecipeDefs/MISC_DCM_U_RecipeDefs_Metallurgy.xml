			<jobString>Smelting steel.</jobString>
			<workAmount>3500</workAmount>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<effectWorking>Smelt</effectWorking>
			<soundWorking>Recipe_Smelt</soundWorking>
			<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Iron</li>
					</thingDefs>
				</filter>
				<count>120</count>
			</li>
			</ingredients>
			<products>
			<Steel>80</Steel>
			</products>
			<fixedIngredientFilter>
				<thingDefs>
				<li>Iron</li>
				</thingDefs>
			</fixedIngredientFilter>
		</RecipeDef>
