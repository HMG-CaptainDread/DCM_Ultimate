	<!-- METALS+ -->
		<!-- SMELT STEEL FROM IRON -->
		<RecipeDef>
			<defName>MakeSteelFromIron</defName>
			<label>smelt steel from iron</label>
			<description>Use heat to refine iron down and make steel.</description>
			<jobString>Smelting steel.</jobString>
			<workAmount>1600</workAmount>
			<workSpeedStat>SmeltingSpeed</workSpeedStat>
			<effectWorking>Smelt</effectWorking>
			<soundWorking>Recipe_Smelt</soundWorking>
			<ingredients>
				<li>
				<filter>
				<thingDefs>
					<li>Iron</li>
				</thingDefs>
			</filter>
				<count>30</count>
				</li>
			</ingredients>
			<products>
				<Steel>20</Steel>
			</products>
			<fixedIngredientFilter>
				<thingDefs>
					<li>Iron</li>
				</thingDefs>
			</fixedIngredientFilter>
		</RecipeDef>
		<!-- SMELT STEEL FROM IRON (X4 BULK) -->
