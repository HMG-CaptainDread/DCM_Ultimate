		<!-- MINEABLE COPPER -->
			<ThingDef ParentName="RockBase">
				<defName>MineableCopper</defName>
				<label>copper ore seam</label>
				<description>A natural vein of copper.</description>
				<graphicData>
				<texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
				<graphicClass>Graphic_Single</graphicClass>
				<shaderType>CutoutComplex</shaderType>
				<color>(98,110,89)</color>
				<colorTwo>(127,189,165)</colorTwo>
				</graphicData>
				<statBases>
				<MaxHitPoints>600</MaxHitPoints>
				</statBases>
				<building>
				<isResourceRock>true</isResourceRock>
				<mineableThing>Copper</mineableThing>
				<mineableYield>40</mineableYield>
				<mineableScatterCommonality>1.0</mineableScatterCommonality>
				<mineableScatterLumpSizeRange>30~50</mineableScatterLumpSizeRange>
				</building>
			</ThingDef>
