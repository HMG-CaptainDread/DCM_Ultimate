<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationConditional">
        <success>Always</success>
        <xpath>/Defs/ThingDef[defName = "Sarcophagus"]/modExtensions</xpath>
        <match Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName = "Sarcophagus"]/modExtensions</xpath>
            <value>
                <li MayRequire="Anthitei.ATHsStyleableFramework.Style" Class="Aths_Stylables.SarcophagusExtension">
                    <sarcophageStyles>
                        <li>
                            <fullGraveGraphicData>
                                <texPath>Things/Building/BuildingStyles/Norse/Sarcophagus/SarcophagusNorse_full</texPath>
                                <graphicClass>Graphic_Multi</graphicClass>
                                <drawSize>(3,4)</drawSize>
                                <damageData>
                                    <cornerTL>Damage/Corner</cornerTL>
                                    <cornerTR>Damage/Corner</cornerTR>
                                    <cornerBL>Damage/Corner</cornerBL>
                                    <cornerBR>Damage/Corner</cornerBR>
                                </damageData>
                            </fullGraveGraphicData>
                            <styleDefName>Norse_Sarcophagus</styleDefName>
                        </li>
                    </sarcophageStyles>
                </li>
            </value>
        </match>
        <nomatch Class="PatchOperationAdd">
            <xpath>/Defs/ThingDef[defName = "Sarcophagus"]</xpath>
            <value>
                <modExtensions>
                    <li MayRequire="Anthitei.ATHsStyleableFramework.Style" Class="Aths_Stylables.SarcophagusExtension">
                        <sarcophageStyles>
                            <li>
                                <fullGraveGraphicData>
                                    <texPath>Things/Building/BuildingStyles/Norse/Sarcophagus/SarcophagusNorse_full</texPath>
                                    <graphicClass>Graphic_Multi</graphicClass>
                                    <drawSize>(3,4)</drawSize>
                                    <damageData>
                                        <cornerTL>Damage/Corner</cornerTL>
                                        <cornerTR>Damage/Corner</cornerTR>
                                        <cornerBL>Damage/Corner</cornerBL>
                                        <cornerBR>Damage/Corner</cornerBR>
                                    </damageData>
                                </fullGraveGraphicData>
                                <styleDefName>Norse_Sarcophagus</styleDefName>
                            </li>
                        </sarcophageStyles>
                    </li>
                </modExtensions>
            </value>
        </nomatch>
    </Operation>
</Patch>