<Defs>
  <ThingDef ParentName="BuildingFloorCoveringBroadBase">
    <defName>GothicSlab_Broad</defName>
    <label>Gothic slab (broad)</label>
    <description>A stone bas relief of Gothic imagery for decorating a floor.</description>
    <dominantStyleCategory>Gothic</dominantStyleCategory>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/FloorCoverings/SlabGothicBroad</texPath>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <stuffCategories>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>150</costStuffCount>
    <researchPrerequisites>
      <li>Stonecutting</li>
    </researchPrerequisites>
  </ThingDef>

