<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>[XND] Visible Pants</li>
		</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs</xpath>
				<value>
            <ThingStyleDef>
              <defName>Milsurp_Pants</defName>
              <wornGraphicPath>Things/ApparelStyles/PantsCamo/PantsCamo</wornGraphicPath>
              <graphicData>
                <texPath>Things/ApparelStyles/PantsCamo/PantsCamo</texPath>
                <graphicClass>Graphic_Single</graphicClass>
              </graphicData>
            </ThingStyleDef>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/StyleCategoryDef[defName="Milsurp"]/thingDefStyles</xpath>
				<value>
					<li>
						<thingDef>Apparel_Pants</thingDef>
						<styleDef>Milsurp_Pants</styleDef>
					</li>
				</value>
			</li>
		</operations>
		</match>
  </Operation>    




</Patch>