<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!--Large Auto Hydroponic-->
<ThingDef ParentName="BuildingBase">
  <defName>AutoHydroponic</defName>
  <label>large auto hydroponic</label>
  <description>A large automatic hydroponics bay that can grow various plants without the help of a person, instead utilizing mechanical saws and growers. Plants are grown deep in the ground, causing them to be resistant to temperature and toxicity, special gene modding allows plants to grow for a full twenty-four hours a day. 
  
One auto hydroponic is equal to eight hydroponics working all day and all night.</description>
  <drawerType>MapMeshAndRealTime</drawerType>
  <graphicData>
    <texPath>EmptyAutoHydroponic</texPath>
    <graphicClass>Graphic_Multi</graphicClass>
    <drawSize>3</drawSize>
  </graphicData>
  <altitudeLayer>FloorCoverings</altitudeLayer>
    <blocksAltitudes>
      <li>FloorCoverings</li>
    </blocksAltitudes>
<wipesPlants>true</wipesPlants>
  <passability>Standable</passability>
    <size>(3,3)</size>
  <statBases>
    <MaxHitPoints>500</MaxHitPoints>
    <Flammability>0.1</Flammability>
    <Beauty>0</Beauty>
	<WorkToBuild>36000</WorkToBuild>
  </statBases>
  <costList>
    <Steel>800</Steel>
    <ComponentIndustrial>8</ComponentIndustrial>
    <ComponentSpacer>2</ComponentSpacer>
  </costList>
      <researchPrerequisites>
        <li>Fabrication</li>
        <li>Hydroponics</li>
      </researchPrerequisites>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  <comps>
    <li Class="PipeSystem.CompProperties_AdvancedResourceProcessor">
      <processes>
        <!--Base Game-->
        <li>AutoHydroponic_Rice</li>
        <li>AutoHydroponic_Healroot</li>
        <li>AutoHydroponic_Potato</li>
        <li MayRequire="ludeon.rimworld.ideology">AutoHydroponic_Nutrifungus</li>
        <li>AutoHydroponic_Hay</li>
        <li>AutoHydroponic_Berries</li>
        <li>AutoHydroponic_Fibercorn</li>
	    	<li>AutoHydroponic_Hops</li>
		    <li>AutoHydroponic_Psychoid</li>
		    <li>AutoHydroponic_Smoke</li>
		    <li>AutoHydroponic_Dye</li>
		    <li>AutoHydroponic_Cotton</li>
		    <li>AutoHydroponic_Corn</li>
		    <li>AutoHydroponic_Devilstrand</li>
        <!--Paste and Chemfuel-->
        <li>AutoHydroponic_NutrientPaste</li>
        <li>AutoHydroponic_Chemfuel</li>
        <li MayRequire="vanillaexpanded.vchemfuele">AutoHydroponic_ChemfuelNetwork</li>
        <li MayRequire="vanillaexpanded.vnutriente">AutoHydroponic_NutrientPasteNetwork</li>
        <!--Giant Crops-->
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCBellPepper</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCCabbage</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCCarrot</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCCauliflower</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCEggplant</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCLettuce</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCOnion</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCPineapple</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCPumpkin</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCTomato</li>
        <li MayRequire="lingluo.giantcrop">AutoHydroponic_LGCWatermelon</li>
        <!--Hemofungus-->
        <li MayRequire="nosleep.hemofungus">AutoHydroponic_HFHemofungus</li>
        <!--Meatleaf-->
        <li MayRequire="argon.meatleaf">AutoHydroponic_MLMeatleaf</li>
        <!--GroThing-->
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTSteel</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTGold</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTPlasteel</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTJade</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTSilver</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTUranium</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTWood</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTPatchLeather</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTLightLeather</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTPlainLeather</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTHeavyLeather</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTSynthread</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTHyperweave</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTComponent</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTAdvancedComponent</li>
        <li MayRequire="dandman.grothingthings">AutoHydroponic_GTNeutroshroom</li>
        <!--Farmable Neutroamine-->
        <li MayRequire="kongkim.farmableneutroamine">AutoHydroponic_FNNeutroamine</li>
        <!--Neutroamine Network-->
        <li MayRequire="vanillaracesexpanded.android,kongkim.farmableneutroamine">AutoHydroponic_NNNeutroamine</li>
        <!--Vanilla Plants Expanded-->
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEAgave</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEOnion</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEPumpkin</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEPepper</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEPeas</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEEggplant</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPECabbage</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPEBeet</li>
        <li MayRequire="vanillaexpanded.vplantse">AutoHydroponic_VPETomato</li>
        <!--Erin's Hot Drinks-->
        <li MayRequire="erin.hotdrink">AutoHydroponic_EHDCoffee</li>
        <li MayRequire="erin.hotdrink">AutoHydroponic_EHDTea</li>
      </processes>
      <progressBarOffset>(0,0,-0.5)</progressBarOffset>
      <inProgressTexture>WorkingAutoHydroponic</inProgressTexture>
      <finishedTexture>EmptyAutoHydroponic</finishedTexture>
	  <notWorkingKey>EmptyAutoHydroponic</notWorkingKey>
    </li>
    <li Class="PipeSystem.CompProperties_GlowerOnProcess">
      <glowRadius>5</glowRadius>
      <glowColor>(245, 192, 226)</glowColor>
    </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1600</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="PipeSystem.CompProperties_Resource" MayRequire="vanillaexpanded.vnutriente">
        <pipeNet MayRequire="vanillaexpanded.vnutriente">VNPE_NutrientPasteNet</pipeNet>
      </li>
      <li Class="PipeSystem.CompProperties_Resource" MayRequire="vanillaexpanded.vchemfuele">
        <pipeNet MayRequire="vanillaexpanded.vchemfuele">VCHE_ChemfuelNet</pipeNet>
      </li>
      <li Class="PipeSystem.CompProperties_Resource" MayRequire="vanillaracesexpanded.android,kongkim.farmableneutroamine">
        <pipeNet MayRequire="vanillaracesexpanded.android,kongkim.farmableneutroamine">VREA_NeutroamineNet</pipeNet>
      </li>
  </comps>
  <inspectorTabs>
    <li>PipeSystem.ITab_Processor</li>
  </inspectorTabs>
  <tickerType>Rare</tickerType>
  <designationCategory>Production</designationCategory>
  <building>
    <buildingTags>
      <li>Production</li>
    </buildingTags>
    <isEdifice>false</isEdifice>
  </building>
  <clearBuildingArea>false</clearBuildingArea>
</ThingDef>

