<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="BuildingBase">
    <defName>VED_AncientDatabase</defName>
    <label>ancient database</label>
    <description>This database is created from a huge amount of fragmentary information from ancient techprints. While this information alone does not provide the full picture, but searching it helps researchers significantly reduce the time it takes to make scientific discoveries.</description>
    <graphicData>
      <texPath>Things/Building/Misc/Database</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2.46875</drawSize>
    </graphicData>
    <size>(2,2)</size>
    <uiIconScale>0.85</uiIconScale>
    <researchPrerequisites>
      <li>MicroelectronicsBasics</li>
    </researchPrerequisites>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationHotKey>Misc4</designationHotKey>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <canOverlapZones>false</canOverlapZones>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Mass>30</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <costList>
      <Steel>40</Steel>
      <VED_AncientTechprint>50</VED_AncientTechprint>
      <Gold>20</Gold>
    </costList>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <shortCircuitInRain>true</shortCircuitInRain>
        <basePowerConsumption>100</basePowerConsumption>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>2</glowRadius>
        <glowColor>(0,235,35,0)</glowColor>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.5</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
  </ThingDef>

</Defs>