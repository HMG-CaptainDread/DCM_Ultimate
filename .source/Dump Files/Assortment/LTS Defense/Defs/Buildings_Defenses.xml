<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!--Tank Trap-->
    <ThingDef parent="BuildingBase">
        <defName>LTS_TankTrap</defName>
        <label>tank trap</label>
        <description>A metallic structure used to bar the way.</description>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <graphicData>
            <drawSize>(1.1,1.1)</drawSize>
            <drawOffset>(0,0,0.2)</drawOffset>
            <texPath>Buildings/TankTrap</texPath>
            <graphicClass>Graphic_Random</graphicClass>
            <shadowData>
                <volume>(0.3, 0.5, 0.3)</volume>
                <offset>(0,0,-0.23)</offset>
            </shadowData>
            <damageData>
                <rect>(0.2,0.2,0.6,0.6)</rect>
            </damageData>
        </graphicData>
        <designationCategory>Security</designationCategory>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <fillPercent>0.4</fillPercent>
        <drawStyleCategory>Defenses</drawStyleCategory>
        <pathCost>75</pathCost>
        <selectable>true</selectable>
        <neverMultiSelect>true</neverMultiSelect>
        <coversFloor>false</coversFloor>
        <holdsRoof>false</holdsRoof>
        <castEdgeShadows>true</castEdgeShadows>
        <statBases>
            <MaxHitPoints>500</MaxHitPoints>
            <WorkToBuild>1000</WorkToBuild>
            <Mass>10</Mass>
            <Flammability>0</Flammability>
            <Beauty>-12</Beauty>
        </statBases>
        <stuffCategories>
            <li>Metallic</li>
        </stuffCategories>
        <researchPrerequisites>
            <li>Smithing</li>
        </researchPrerequisites>
        <costStuffCount>20</costStuffCount>
        <canOverlapZones>false</canOverlapZones>
        <rotatable>false</rotatable>
        <building>
            <isInert>true</isInert>
            <ai_chillDestination>false</ai_chillDestination>
        </building>
    </ThingDef>

    <!--Barbed Wire-->
    <ThingDef parent="BuildingBase">
        <defName>LTS_BarbedWire</defName>
        <label>barbed wire</label>
        <description>A barbed wire that both slows down and injures people who dare cross it. Quick to setup and overall is horrible.</description>
        <thingClass>Building_TrapDamager</thingClass>
        <category>Building</category>
        <graphicData>
            <texPath>Buildings/BarbedWire_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <linkType>Basic</linkType>
            <linkFlags>
                <li>Custom6</li>
            </linkFlags>
        </graphicData>
        <costList>
            <Steel>3</Steel>
        </costList>
        <statBases>
            <TrapMeleeDamage>5</TrapMeleeDamage>
            <TrapSpringChance>0.8</TrapSpringChance>
            <MaxHitPoints>100</MaxHitPoints>
            <Beauty>-10</Beauty>
            <WorkToBuild>50</WorkToBuild>
            <Flammability>0.2</Flammability>
        </statBases>
        <designationCategory>Security</designationCategory>
        <uiIconPath>Buildings/BarbedWire_UI</uiIconPath>
        <drawerType>MapMeshAndRealTime</drawerType>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <pathCost>100</pathCost>
        <fillPercent>0.15</fillPercent>
        <drawStyleCategory>Defenses</drawStyleCategory>
        <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <rotatable>false</rotatable>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <coversFloor>false</coversFloor>
        <blockWind>false</blockWind>
        <holdsRoof>false</holdsRoof>
        <canOverlapZones>false</canOverlapZones>
        <castEdgeShadows>false</castEdgeShadows>
        <tickerType>Normal</tickerType>
        <building>
            <allowAutoroof>false</allowAutoroof>
            <isTrap>true</isTrap>
            <isFence>true</isFence>
            <isInert>true</isInert>
            <trapDestroyOnSpring>false</trapDestroyOnSpring>
            <trapDamageCategory>Sharp</trapDamageCategory>
            <ai_chillDestination>false</ai_chillDestination>
            <blueprintGraphicData>
                <texPath>Buildings/BarbedWireBlueprint_Atlas</texPath>
                <linkType>Basic</linkType>
                <linkFlags>
                    <li>Custom6</li>
                </linkFlags>
            </blueprintGraphicData>
        </building>
        <researchPrerequisites>
            <li>Smithing</li>
        </researchPrerequisites>
        <repairEffect>Repair</repairEffect>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <filthLeaving>Filth_RubbleBuilding</filthLeaving>
    </ThingDef>

    <!--Barrier-->
    <ThingDef ParentName="BuildingBase">
        <defName>LTS_Barrier</defName>
        <label>barrier</label>
        <description>A waist high concrete barrier made to protect.</description>
        <thingClass>Building</thingClass>
        <category>Building</category>
        <replaceTags>
          <li>Barricade</li>
        </replaceTags>
        <graphicData>
            <texPath>Buildings/ConcreteBarrier_Atlas</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <linkType>Basic</linkType>
            <linkFlags>
                <li>Barricades</li>
            </linkFlags>
        </graphicData>
        <statBases>
            <MaxHitPoints>400</MaxHitPoints>
            <Beauty>-3</Beauty>
            <WorkToBuild>400</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <designationCategory>Security</designationCategory>
        <uiIconPath>Buildings/ConcreteBarrier_UI</uiIconPath>
        <drawerType>MapMeshAndRealTime</drawerType>
        <altitudeLayer>Building</altitudeLayer>
        <pathCost>42</pathCost>
        <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
        <passability>PassThroughOnly</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.55</fillPercent>
        <drawStyleCategory>Defenses</drawStyleCategory>
        <canOverlapZones>false</canOverlapZones>
        <uiOrder>10</uiOrder>
        <building>
            <allowAutoroof>false</allowAutoroof>
            <ai_chillDestination>false</ai_chillDestination>
            <isInert>true</isInert>
            <isFence>true</isFence>
            <blueprintGraphicData>
                <texPath>Buildings/ConcreteBarrierBlueprint_Atlas</texPath>
                <linkType>Basic</linkType>
                <linkFlags>
                    <li>Barricades</li>
                </linkFlags>
            </blueprintGraphicData>
        </building>
        <stuffCategories>
            <li>Stony</li>
        </stuffCategories>
        <costStuffCount>15</costStuffCount>
        <filthLeaving>Filth_RubbleBuilding</filthLeaving>
        <rotatable>false</rotatable>
        <selectable>true</selectable>
        <neverMultiSelect>true</neverMultiSelect>
        <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
        <staticSunShadowHeight>0.20</staticSunShadowHeight>
    </ThingDef>
</Defs>