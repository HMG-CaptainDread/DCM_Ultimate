<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="VEF.PatchOperationToggableSequence">
		<enabled>False</enabled>
		<mods>
		  <li>Medieval Overhaul</li>
		</mods>
		<label>Make battlefield remaints deconstructable:</label>
		<operations>
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ThingDef[@Name="DankPyon_SmallRuin"]/building/deconstructible</xpath>
				<value>
					<deconstructible>true</deconstructible>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DankPyon_RuinedBatteringRam"]</xpath>
				<value>
				<building><deconstructible>true</deconstructible></building>					
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DankPyon_RuinedSiegeTower"]</xpath>
				<value>
				<building><deconstructible>true</deconstructible></building>	
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>Defs/ThingDef[defName="DankPyon_AncientRuinedBarrel"]</xpath>
				<value>
				<building><deconstructible>true</deconstructible></building>	
				</value>
			</li>
			
		</operations>
	</Operation>
</Patch>	