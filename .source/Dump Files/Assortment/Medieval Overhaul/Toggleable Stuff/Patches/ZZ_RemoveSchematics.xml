<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="VEF.PatchOperationToggableSequence">
		<enabled>False</enabled>
		<mods>
		  <li>Medieval Overhaul</li>
		</mods>
		<label>[Tech] Remove the required research schematics:</label>
		<operations>
		
			<li Class="PatchOperationConditional">
			  <xpath>Defs/ResearchProjectDef/modExtensions/li[@Class='MedievalOverhaul.RequiredSchematic']</xpath>
			  <match Class="PatchOperationRemove">
				  	<xpath>Defs/ResearchProjectDef/modExtensions/li[@Class='MedievalOverhaul.RequiredSchematic']</xpath>
			  </match>	
			</li>
			
			<!-- baseCost 400 -->
			
			<li Class="PatchOperationReplace">
				<xpath>Defs/ResearchProjectDef[
				defName="DankPyon_Crossbow" or
				defName="DankPyon_Tar"
				][baseCost]/baseCost</xpath>
				<value>
					<baseCost>1000</baseCost>
				</value>
			</li>
			
			<!-- baseCost 600 -->
			
