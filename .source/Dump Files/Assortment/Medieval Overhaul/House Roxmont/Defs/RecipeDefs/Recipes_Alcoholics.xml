<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Abstract -->
	<RecipeDef Name="DankPyon_Make_WortBase" Abstract="True">
		<workSpeedStat>DrugCookingSpeed</workSpeedStat>
		<workSkill>Cooking</workSkill>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_Brewing</soundWorking>
		<allowMixingIngredients>true</allowMixingIngredients>
		<targetCountAdjustment>1</targetCountAdjustment>
		<recipeUsers>
			<li>Brewery</li>
			<li>DankPyon_RusticCookingTable</li>
		</recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>DankPyon_Make_Wort_RoxberryStout</defName>
		<label>make roxberry stout wort</label>
		<description>Make roxberry stout wort by crushing griffon berries. Needs to undergo fermentation in order to become ale.</description>
		<jobString>Making roxberry stout wort.</jobString>
		<workAmount>1000</workAmount>
		<recipeUsers>
			<li>Brewery</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RawWheat</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RawBerries</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DankPyon_RoxMilk</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>DankPyon_RawWheat</li>
				<li>RawBerries</li>
				<li>DankPyon_RoxMilk</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<DankPyon_Wort_RoxberryStout>5</DankPyon_Wort_RoxberryStout>
		</products>
		<researchPrerequisites>
			<li>Brewing</li>
		</researchPrerequisites>
	</RecipeDef>

</Defs>
