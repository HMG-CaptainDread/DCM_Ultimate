<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="MedTimes_BuildingBase">
    <defName>TS_ToolPile</defName>
    <label>neolitic tools</label>
    <description>Very simple tools from various components - bones, wood, small stones tied up with ropes and placed for everyone`s use.</description>
    <graphicData>
		<texPath>Things/Building/Mics/ToolsPile/ToolsPile</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shaderType>CutoutComplex</shaderType>   
		<drawRotated>false</drawRotated>
		<drawSize>(1,1)</drawSize>	  
    </graphicData>
    <size>(1,1)</size>
    <costStuffCount>30</costStuffCount>
    <costList>
      <EarlyTimes_NeoliticTools>8</EarlyTimes_NeoliticTools>
    </costList>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <rotatable>false</rotatable>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>25</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1200</WorkToBuild>
      <Mass>13</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <researchPrerequisites>
      <li>TS_Crafting</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>0.11</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>3</maxSimultaneous>
      </li>
    </comps>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
  </ThingDef>

  <ThingDef ParentName="MedTimes_BuildingBase">
    <defName>CookingToolCabinet</defName>
    <label>Cooking tool cabinet</label>
    <description>Increases cooking speed. One workbench use to up to two cooking tool cabinets.</description>
    <graphicData>
      <texPath>Things/Building/Misc/ToolCabinet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
      <color>(112, 54, 16)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>60</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(2,1)</size>
    <costList>
      <WoodLog>65</WoodLog>
      <MedTimes_CookingTools>12</MedTimes_CookingTools>
    </costList>
    <researchPrerequisites>
      <li>MedTimes_BasicFurniture</li>
      <li>MedTimes_BasicCooking</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <WorkTableWorkSpeedFactor>0.11</WorkTableWorkSpeedFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
      </li>
    </comps>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
  </ThingDef>
   
  <ThingDef ParentName="MedTimes_BuildingBase">
    <defName>MedicalToolCabinet</defName>
    <label>Medical tool cabinet</label>
    <description>Increases tend quality and surgery succsess chance. Two tool cabinets per one bed.</description>
    <graphicData>
      <texPath>Things/Building/Misc/ToolCabinet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
      <color>(187, 199, 194)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.5</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>60</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>1800</WorkToBuild>
      <Mass>40</Mass>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(2,1)</size>
    <costList>
      <Steel>65</Steel>
      <MedTimes_MedicalTools>12</MedTimes_MedicalTools>
    </costList>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
			<MedicalTendQualityOffset>0.08</MedicalTendQualityOffset>
			<SurgerySuccessChanceFactor>0.04</SurgerySuccessChanceFactor>
        </statOffsets>
        <maxSimultaneous>2</maxSimultaneous>
        <maxDistance>2</maxDistance>
      </li>
    </comps>
	<placeWorkers>
		<li>PlaceWorker_ShowFacilitiesConnections</li>
	</placeWorkers>
  </ThingDef>

  <ThingDef ParentName="MedTimes_BuildingBase">
    <defName>MedTimes_RefuelHopper</defName>
    <label>Refuel Hopper</label>
    <minifiedDef>MinifiedThing</minifiedDef>
    <description>Holds resources for refueling machines like smithy or stove.</description>
    <thingClass>EarlyTimes.Building_RefuelHopper</thingClass>
    <graphicData>
      <texPath>Things/Building/Mics/Hopper_Refueling</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.4</fillPercent>
    <castEdgeShadows>true</castEdgeShadows>    
    <tickerType>Long</tickerType>
	<costList>
      <Steel>15</Steel>
    </costList>
    <pathCost>60</pathCost>
    <statBases>
      <Mass>8</Mass>      
	  <WorkToBuild>300</WorkToBuild>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>0.5</Flammability>
    </statBases>
    <size>(1,1)</size>
    <hasInteractionCell>False</hasInteractionCell>
    <building>
      <preventDeteriorationOnTop>true</preventDeteriorationOnTop>
      <ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
            <li>Resource_Coal</li>
          </thingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
    <inspectorTabs>
      <li>ITab_Storage</li>
    </inspectorTabs>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <surfaceType>Item</surfaceType>
    <canOverlapZones>false</canOverlapZones>
    <designationCategory>Misc</designationCategory>
    <researchPrerequisites>
      <li>MedTimes_Mechanization</li>
    </researchPrerequisites>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
  </ThingDef>
  
  <ThingDef ParentName="MedTimes_BuildingBase">
    <defName>MedTimes_BookShelf</defName>
    <label>Bookshelf</label>
	<thingClass>EarlyTimes.Building_ContainerShelf</thingClass>
    <description>Used to hold books and scrolls.</description>
	<uiIconScale>0.9</uiIconScale>
    <graphicData>
      <texPath>Things/Building/Misc/ToolCabinet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
      <color>(153, 77, 28)</color>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>    
    <size>(2,1)</size>
	<altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.35</staticSunShadowHeight>
    <fillPercent>0.7</fillPercent>
    <canOverlapZones>false</canOverlapZones>
    <pathCost>80</pathCost>
    <designationCategory>Misc</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <rotatable>true</rotatable>
    <socialPropernessMatters>true</socialPropernessMatters>
    <thingCategories>
      <li>BuildingsMisc</li>
    </thingCategories>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>90</costStuffCount>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>5000</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
    </statBases>
	<comps>
	  <li Class="EarlyTimes.CompProperties_BookStorage">
	    <MaxStacksCapacity>30</MaxStacksCapacity>
	  </li>
	</comps>
	<building>
	  <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <preventDeteriorationInside>true</preventDeteriorationInside>
      <fixedStorageSettings>
        <filter>
          <categories>
            <li>ReadStuff</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <priority>Important</priority>
        <filter>
          <categories>
            <li>ReadStuff</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
	<researchPrerequisites>
		<li>ComplexFurniture</li>
		<li>MedTimes_BookWork</li>
	</researchPrerequisites>
    <inspectorTabs>
      <li>ITab_Storage</li>
	  <li>EarlyTimes.ITab_StorageInventory</li>
    </inspectorTabs>
  </ThingDef>
</Defs>