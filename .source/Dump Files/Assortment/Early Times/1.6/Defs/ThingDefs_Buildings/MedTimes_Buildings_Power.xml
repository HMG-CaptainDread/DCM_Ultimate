<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>KineticTransmission</defName>
    <label>Kinetic transmission</label>
    <description>Building with attached rotating shaft inside to transmit energy in form of rotation. Can be repurposed for different usages.</description>
    <thingClass>Building</thingClass>
	<size>(3,1)</size>
    <graphicData>
      <texPath>Things/Building/Power/TransmissionKinetic/IndTimes_KineticTransmission</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(3.5,1.2)</drawSize>
    </graphicData>
	<uiIconPath>Things/Building/Power/TransmissionKinetic/IndTimes_KineticTransmission_Icon</uiIconPath>	
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>100</pathCost>	
    <blockWind>false</blockWind>
    <holdsRoof>true</holdsRoof>
	<fillPercent>0.5</fillPercent>	
    <castEdgeShadows>true</castEdgeShadows>
    <rotatable>true</rotatable>
    <useHitPoints>true</useHitPoints>
    <minifiedDef>MinifiedThing</minifiedDef>    
	<thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <statBases>
      <Mass>25</Mass>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToBuild>3000</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Beauty>-4</Beauty>
    </statBases>
    <canOverlapZones>false</canOverlapZones>
	<stuffCategories>
      <li>Woody</li>
      <li>Stony</li>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>		
    <costList>
      <Steel>15</Steel>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_Flickable" />
    </comps>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <designationCategory>Power</designationCategory>
    <researchPrerequisites>
      <li>MedTimes_Mechanization</li>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
  </ThingDef>
</Defs>
