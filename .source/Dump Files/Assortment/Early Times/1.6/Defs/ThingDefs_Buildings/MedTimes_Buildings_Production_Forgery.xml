<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- =========================**** Workbenches ****==========================-->
	<!-- ===================== Crafting Tech ======================-->
	<!-- crafting station -->
	<ThingDef ParentName="MedTimes_BenchBaseTag">
		<defName>MedTimes_CraftingStation</defName>
		<label>Crafting Station</label>
		<thingClass>Building_WorkTable</thingClass>
		<description>A crafting station equipped with various tools for the production of various necessities and trade goods.</description>
		<size>(3,1)</size>
		<graphicData>
			<texPath>Things/Building/Production/CraftingStation/MedTimes_CraftingStation</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,1)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Production/CraftingStation/MedTimes_CraftingStation_Icon</uiIconPath>
		<stuffCategories>
			<li>Woody</li>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<costList>
			<Steel>20</Steel>
			<MedTimes_CraftingTools>1</MedTimes_CraftingTools>
		</costList>
		<fillPercent>0.5</fillPercent>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
					<li>MedTimes_BlacksmithForge</li>
					<li>MedTimes_ElectricBlacksmithForge</li>
					<li>MedTimes_BlacksmithForgeTierTwo</li>
					<li>MedTimes_ElectricBlacksmithForgeTierTwo</li>
					<li>FueledSmithy</li>
					<li>ElectricSmithy</li>
				</linkableFacilities>
			</li>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<WorkTableWorkSpeedFactor>0.09</WorkTableWorkSpeedFactor>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>4</maxDistance>
			</li>
		</comps>
		<researchPrerequisites>
			<li>MedTimes_Toolworking</li>
		</researchPrerequisites>
	</ThingDef>
