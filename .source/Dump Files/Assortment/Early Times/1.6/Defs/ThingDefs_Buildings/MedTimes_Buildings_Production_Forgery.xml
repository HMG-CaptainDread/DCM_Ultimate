	<!-- (Medieval) Fueled smelter -->
	<ThingDef ParentName="MedTimes_BenchBaseTag">
		<defName>MedTimes_FueledSmelter</defName>
		<label>Smelter</label>
		<drawerType>MapMeshAndRealTime</drawerType>
		<thingClass>Building_WorkTable</thingClass>
		<description>Heats materials placed inside to melt it or to incite different termal chemical reactions. Consumes a lot of combutable resource.</description>
		<size>(3,1)</size>
		<graphicData>
			<texPath>Things/Building/Production/Smelter/MedTimes_Smelter</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(3,1)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Production/Smelter/MedTimes_Smelter_Icon</uiIconPath>
		<stuffCategories>
			<li>Stony</li>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>60</costStuffCount>
		<costList>
			<Steel>15</Steel>
		</costList>
		<statBases>
			<WorkToBuild>1500</WorkToBuild>
			<MaxHitPoints>180</MaxHitPoints>
			<Mass>200</Mass>
			<WorkTableWorkSpeedFactor>1.2</WorkTableWorkSpeedFactor>
		</statBases>
		<fillPercent>0.5</fillPercent>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<recipes>
			<li>ExtractMetalFromSlag</li>
			<li>SmeltWeapon</li>
			<li>SmeltApparel</li>
			<li>SmeltCannonItems</li>
		</recipes>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<comps>
			<li Class="CompProperties_Refuelable">
				<fuelConsumptionRate>100.0</fuelConsumptionRate>
				<fuelCapacity>75.0</fuelCapacity>
				<fuelFilter>
					<thingDefs>
						<li>Resource_Coal</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
			</li>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities>
					<li>ToolCabinet</li>
				</linkableFacilities>
			</li>
		</comps>
		<building>
			<heatPerTickWhileWorking>0.5</heatPerTickWhileWorking>
		</building>
		<researchPrerequisites>
			<li>MedTimes_BasicSmelting</li>
		</researchPrerequisites>
	</ThingDef>
</Defs>
