    <ThingDef ParentName="MedTimes_ArtworkQuality">
        <defName>MedTimes_GodKingThrone</defName>
        <label>God King's Throne</label>
		
		<thingClass>Building_Throne</thingClass>
        <description>The kind of grandure reserved for only the glitterati of pompus postieriers. A large soft and comfy seat, Great for relaxation and lording over others in the room.</description>
        <graphicData>
            <texPath>Things/Building/Art/GodKingThrone/MedTimes_GodKingThrone</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawRotated>true</drawRotated>
            <drawSize>(3,2)</drawSize>
        </graphicData>
		<size>(3,2)</size>
        <uiIconPath>Things/Building/Art/GodKingThrone/MedTimes_GodKingThrone_Icon</uiIconPath>
        <drawerType>MapMeshOnly</drawerType>
        <rotatable>true</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <socialPropernessMatters>true</socialPropernessMatters>
        <statBases>
            <MaxHitPoints>220</MaxHitPoints>
            <WorkToMake>50000</WorkToMake>
            <Flammability>0.3</Flammability>
            <Beauty>300</Beauty>
            <Comfort>1.8</Comfort>
            <Mass>25</Mass>
			<MeditationFocusStrength>0.15</MeditationFocusStrength>
        </statBases>
		<comps>
		  <li Class="CompProperties_AssignableToPawn">
			<drawAssignmentOverlay>true</drawAssignmentOverlay>
			<compClass>CompAssignableToPawn_Throne</compClass>
		  </li>
		  <li Class="CompProperties_MeditationFocus">
			<statDef>MeditationFocusStrength</statDef>
			<focusTypes>
			  <li>Dignified</li>
			</focusTypes>
			<offsets>
			  <li Class="FocusStrengthOffset_ThroneSatisfiesRequirements">
				<offset>0.08</offset>
			  </li>
			  <li Class="FocusStrengthOffset_RoomImpressiveness">
				<curve>
				  <points>
					<li>(0,   -0.05)</li>
					<li>(30,   0.00)</li>
					<li>(60,   0.04)</li>
					<li>(100,  0.08)</li>
					<li>(170,  0.10)</li>
				  </points>
				</curve>
			  </li>
			</offsets>
		  </li>
		</comps>
        <costList>
            <Steel>125</Steel>
            <Gold>50</Gold>
        </costList>
        <pathCost>30</pathCost>
        <fillPercent>0.40</fillPercent>
        <building>
            <isSittable>true</isSittable>
        </building>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Artistic</workSkill>
            <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
            <effectWorking>Sculpt</effectWorking>
            <soundWorking>Recipe_Sculpt</soundWorking>
            <researchPrerequisite>MedTimes_Religions</researchPrerequisite>
            <recipeUsers Inherit="False">
                <li>MedTimes_BlacksmithForgeTierTwo</li>
            </recipeUsers>
        </recipeMaker>
		<drawPlaceWorkersWhileSelected>True</drawPlaceWorkersWhileSelected>
    </ThingDef>
</Defs>