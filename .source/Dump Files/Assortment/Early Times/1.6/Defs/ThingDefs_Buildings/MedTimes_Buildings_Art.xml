        <description>A person-sized piece of material sculpted into an artistic form.</description>
        <graphicData>
            <graphicClass>Graphic_Random</graphicClass>
            <texPath>Things/Building/Art/SculptureLarge</texPath>
            <drawSize>(3,3)</drawSize>
            <color>(180,210,230)</color>
        </graphicData>
        <tickerType>Normal</tickerType>
        <fillPercent>0.5</fillPercent>
        <statBases>
            <MaxHitPoints>150</MaxHitPoints>
            <Mass>25</Mass>
            <Beauty>80</Beauty>
            <WorkToMake>10000</WorkToMake>
        </statBases>
        <costList>
            <MedTimes_Resource_IceBlocks>75</MedTimes_Resource_IceBlocks>
        </costList>
        <building>
            <repairable>false</repairable>
        </building>
        <comps>
            <li Class="CompProperties_Forbiddable" />
            <li Class="EarlyTimes.CompProperties_HitpointRefuelable">
                <fuelConsumptionRate>1.0</fuelConsumptionRate>
                <destroyOnNoFuel>true</destroyOnNoFuel>
                <fuelCapacity>40.0</fuelCapacity>
                <fuelLabel>Ice Thickness</fuelLabel>
                <initialFuelPercent>1</initialFuelPercent>
                <fuelFilter>
                    <thingDefs>
                        <li>MedTimes_Resource_IceBlocks</li>
