    <!-- ================== General Armour Classes ================ -->
    <!-- Machinable Armour Base Class -->
	<ThingDef Name="Industrial_ArmorMachineableBase" Abstract="True">
		<thingClass>Apparel</thingClass>
        <recipeMaker>
            <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
            <workSkill>Crafting</workSkill>
            <effectWorking>Smith</effectWorking>
            <soundWorking>Recipe_Machining</soundWorking>
            <recipeUsers>
                <li>TableMachining</li>
            </recipeUsers>
            <researchPrerequisite>MedTimes_CombatArmor</researchPrerequisite>
            <unfinishedThingDef>UnfinishedArmor</unfinishedThingDef>
            <defaultIngredientFilter>
                <categories>
                    <li>Root</li>
                </categories>
                <disallowedThingDefs>
                    <li>Gold</li>
                    <li>Silver</li>
                    <li>Plasteel</li>
                    <li>Jade</li>
                    <li>Uranium</li>
                </disallowedThingDefs>
            </defaultIngredientFilter>
        </recipeMaker>
        <apparel>
            <careIfWornByCorpse>false</careIfWornByCorpse>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
            <tags>
                <li>IndustrialMilitaryBasic</li>
            </tags>
        </apparel>
    </ThingDef>
	
	<!-- Armour base classes -->
    <ThingDef Name="IndustrialTimes_ArmourBase" ParentName="Industrial_ArmorMachineableBase" Abstract="True">
        <thingClass>Apparel</thingClass>
        <category>Item</category>
        <techLevel>Medieval</techLevel>
        <selectable>True</selectable>
        <pathCost>10</pathCost>
		<useHitPoints>True</useHitPoints>
        <graphicData>
            <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
        </graphicData>
        <drawGUIOverlay>true</drawGUIOverlay>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>2</DeteriorationRate>
            <SellPriceFactor>0.6</SellPriceFactor>
            <Insulation_Cold>3</Insulation_Cold>
            <EquipDelay>5</EquipDelay>
            <Beauty>-5</Beauty>
            <Mass>10</Mass>
        </statBases>
        <altitudeLayer>Item</altitudeLayer>
        <alwaysHaulable>True</alwaysHaulable>
        <tickerType>Never</tickerType>
        <thingCategories>
            <li>BodyArmour</li>
        </thingCategories>
        <apparel>
            <layers>
                <li>Middle</li>
            </layers>
            <bodyPartGroups>
				<li>Neck</li>
                <li>Shoulders</li>
                <li>Torso</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
        </apparel>
    </ThingDef>
    
