	<!-- Armour defs -->
    <ThingDef ParentName="IndustrialTimes_Helmet">
        <defName>IndustrialTimes_Helm_CombatArmour</defName>
        <label>Combat Armour Helmet</label>
        <description>An advanced combat helmet that is comfortable, light and protective and does not block vision. Also its fairly easy to produce on right equipment.</description>
        <graphicData>
            <texPath>Things/Pawn/Humanlike/Apparel/Headwear/Combat/MedTimes_Combat</texPath>
        </graphicData>
        <apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
            <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Headwear/Combat/MedTimes_Combat</wornGraphicPath>
        </apparel>
        <stuffCategories>
            <li>Metallic</li>
            <li>Ceramic</li>
        </stuffCategories>        
		<costStuffCount>30</costStuffCount>
        <equippedStatOffsets>
            <MoveSpeed>-0.04</MoveSpeed>
        </equippedStatOffsets>
		<statBases>
            <Mass>1.8</Mass>
			<WorkToMake>6000</WorkToMake>
			<MaxHitPoints>90</MaxHitPoints>
			<StuffEffectMultiplierArmor>0.65</StuffEffectMultiplierArmor>
            <ArmorRating_Blunt>0.39</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.0</ArmorRating_Sharp>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>2.5</EquipDelay>
        </statBases>
		<costList>
			<ComponentIndustrial>1</ComponentIndustrial>
            <Cloth>30</Cloth>
		</costList>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
            <li Class="CompProperties_Forbiddable" />
        </comps>
    </ThingDef>
	
