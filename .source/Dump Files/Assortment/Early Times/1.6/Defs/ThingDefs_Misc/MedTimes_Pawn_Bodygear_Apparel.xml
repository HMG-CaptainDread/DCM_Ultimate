<!-- ============= Middle Layer apparel =================-->
<!-- Padded Jacket -->		 
  <ThingDef ParentName="MedTimes_Tail_ApparelJacket">
    <defName>MedTimes_ArmBody_Gambison</defName>
    <label>Gambison</label>
    <description>A long coat which is heavily padded to help protect the wearer. It is also referred to as an aketon. It is good for defence against blunt weapons and is designed to be worn under another heavier set of armour. Since this one is made of fabrics, the coat breathes and doesn't get nearly as hot as one might suspect.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Bodywear_Armor/Gambison/MedTimes_Gambison</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stuffCategories><li>Fabric</li></stuffCategories>	
    <apparel>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Bodywear_Armor/Gambison/MedTimes_Gambison</wornGraphicPath>	  
    </apparel>		
  </ThingDef>
 
<!-- (Medieval) Padded Jacket 'Leather' -->  
 <ThingDef ParentName="MedTimes_Tail_ApparelJacket">
    <defName>MedTimes_ArmBody_PaddedJacket</defName>
    <label>Padded Jacket</label>
    <description>A long leather coat which is heavily padded to help protect the wearer. This one is made from treated animal hides. It has extra layers of hardened animal hides for extra protection and is designed for use under heavier armour. All this of course means it can get quite hot underneath.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Bodywear_Armor/PaddedJacket/MedTimes_PaddedJacket</texPath>
