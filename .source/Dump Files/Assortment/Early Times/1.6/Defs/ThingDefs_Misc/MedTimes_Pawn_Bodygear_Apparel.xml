<!-- Start of thingDefs --> 
<!-- ================== Apparel Classes ================ --> 
<!-- Apparel Base Class -->
  <ThingDef Name="MedTimes_ApparelBase" Abstract="True">
    <thingClass>Apparel</thingClass>
    <category>Item</category>
	<techLevel>Medieval</techLevel>	
    <selectable>True</selectable>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>	
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>2</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
		<EquipDelay>2</EquipDelay>			  	  
		<Beauty>-5</Beauty>
		<Mass>2.5</Mass>		
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li><compClass>CompColorable</compClass></li>
      <li><compClass>CompQuality</compClass></li>
    </comps>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
    <tradeTags>
		<li>MedTimes_Gear</li>
	</tradeTags>	
  </ThingDef>

  

  <!-- Apparel Medieval Base -->  
  <ThingDef Name="MedTimes_Apparel_Tier1" ParentName="MedTimes_ApparelBase" Abstract="True">
    <thingCategories>
		<li>Bodygear</li>
	</thingCategories>
	<stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>	  
    </stuffCategories>
    <costStuffCount>50</costStuffCount>	
    <statBases>
	  <WorkToMake>5000</WorkToMake>
      <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>  
    </statBases>
    <apparel>	
      <defaultOutfitTags>
		<li>Worker</li>
	  </defaultOutfitTags>
      <layers>
		<li>OnSkin</li>
	  </layers>	  
    </apparel>			
  </ThingDef>
  
