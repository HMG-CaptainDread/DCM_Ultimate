<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- ========================= Resource Base Classes ==========================-->
    <!-- Resource Base Class -->
    <ThingDef Name="MedTimes_ResourceBase" Abstract="True">
        <thingClass>ThingWithComps</thingClass>
        <category>Item</category>
        <resourceReadoutPriority>Middle</resourceReadoutPriority>
        <useHitPoints>true</useHitPoints>
        <selectable>true</selectable>
        <altitudeLayer>Item</altitudeLayer>
        <stackLimit>75</stackLimit>
        <comps>
            <li Class="CompProperties_Forbiddable" />
        </comps>
        <alwaysHaulable>true</alwaysHaulable>
        <drawGUIOverlay>true</drawGUIOverlay>
        <rotatable>false</rotatable>
        <pathCost>15</pathCost>
    </ThingDef>
    <!--=============== Manufactured stuffs ====================-->
   
    <!-- ============= Paper sheets  =================-->
    <ThingDef ParentName="ResourceBase">
        <defName>MedTimes_Resource_PaperSheets</defName>
        <label>Paper sheets</label>
        <description>Plain thin sheets that can be written or drawn upon.</description>
        <graphicData>
            <texPath>Things/Item/TradeGoods/Books/MedTimes_Papers</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.8,0.8)</drawSize>
        </graphicData>
        <soundInteract>Stone_Drop</soundInteract>
        <soundDrop>Stone_Drop</soundDrop>
        <stackLimit>800</stackLimit>
        <statBases>
            <MarketValue>1</MarketValue>
            <MaxHitPoints>100</MaxHitPoints>
            <Mass>0.01</Mass>
            <DeteriorationRate>2</DeteriorationRate>
            <Beauty>-5</Beauty>
            <Flammability>2.0</Flammability>
        </statBases>
        <thingCategories>
            <li>TradeGoods</li>
        </thingCategories>
    </ThingDef>
    <!-- ============= Wax =================-->
    
</Defs>