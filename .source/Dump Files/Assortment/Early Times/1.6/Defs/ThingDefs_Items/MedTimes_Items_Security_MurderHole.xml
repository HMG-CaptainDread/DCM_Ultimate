<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Quicklime Pitch -->
	<ThingDef ParentName="MedTimes_ResourceBase">
		<defName>MedTimes_Resource_Quicklime</defName>
		<label>Quicklime Pitch</label>
		<description>Ejected from Murder Holes, Murders on impact.</description>
		<graphicData>
			<texPath>Things/Item/Resource/Produced/MedTimes_WoodPitchWick</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(0.6,0.6)</drawSize>
		</graphicData>
		<soundInteract>Standard_Drop</soundInteract>
		<soundDrop>Standard_Drop</soundDrop>
		<tickerType>Normal</tickerType>
		<stackLimit>25</stackLimit>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<MarketValue>10</MarketValue>
			<Flammability>5.0</Flammability>
			<DeteriorationRate>1</DeteriorationRate>
			<Mass>0.25</Mass>
		</statBases>
		<thingCategories>
			<li>MedArtillery</li>
		</thingCategories>
		<comps>
			<li Class="CompProperties_Explosive">
				<explosiveRadius>2.5</explosiveRadius>
				<explosiveDamageType>Flame</explosiveDamageType>
				<explosiveExpandPerStackcount>0.3</explosiveExpandPerStackcount>
				<startWickHitPointsPercent>0.5</startWickHitPointsPercent>
				<wickTicks>
					<min>5</min>
					<max>10</max>
				</wickTicks>
			</li>
		</comps>
		<projectileWhenLoaded>MedTimes_Round_Quicklime</projectileWhenLoaded>
	</ThingDef>
	<ThingDef ParentName="MedTimes_ArrowBase">
		<defName>MedTimes_Round_Quicklime</defName>
		<thingClass>Projectile_Explosive</thingClass>
		<label>Quicklime Pitch Splatter</label>
		<graphicData>
			<texPath>Things/Building/Security/MurderHole/MedTimes_WoodPitchSplatter</texPath>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile>
			<damageDef>Flame</damageDef>
			<flyOverhead>true</flyOverhead>
			<damageAmountBase>5</damageAmountBase>
			<explosionRadius>1.1</explosionRadius>
			<speed>20</speed>
			<preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
			<preExplosionSpawnChance>0.75</preExplosionSpawnChance>
			<soundImpactAnticipate>MedTimes_Sound_WoodPitch_Splatter</soundImpactAnticipate>
			<ai_IsIncendiary>true</ai_IsIncendiary>
		</projectile>
	</ThingDef>
</Defs>