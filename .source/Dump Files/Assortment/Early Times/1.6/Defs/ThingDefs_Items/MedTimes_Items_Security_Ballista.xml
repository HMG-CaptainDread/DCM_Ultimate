				<li>MedTimes_BlacksmithForge</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<researchPrerequisite>MedTimes_Ballista</researchPrerequisite>
		</recipeMaker>
	</ThingDef>
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_Ballista_Standart</defName>
