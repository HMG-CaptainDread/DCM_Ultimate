<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="ET_FactionBase">
		<defName>MedTimes_Faction_Warbourne</defName>
		<label>Warbourne Wanderer</label>
		<description>The Warbourne Cultist worship Pang Li, the patron saint of violence, death and retribution. They band together and wander the world as Pang Li once did, looking for their own death in glorious battle.</description>
		<pawnsPlural>Wanderers</pawnsPlural>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<fixedName>Warbourne Cultist</fixedName>
		<techLevel>Medieval</techLevel>
		<leaderTitle>Pang Li incarnate</leaderTitle>
		<configurationListOrderPriority>27</configurationListOrderPriority>
		<hidden>true</hidden>
		<rescueesCanJoin>true</rescueesCanJoin>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
		<allowedArrivalTemperatureRange>
			<min>-10</min>
			<max>50</max>
		</allowedArrivalTemperatureRange>
		<structureMemeWeights>
			<Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Ideological>
			<Structure_Archist MayRequire="Ludeon.RimWorld.Ideology">1</Structure_Archist>
		</structureMemeWeights>
		<requiredMemes>
		  <li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
		</requiredMemes>
		<allowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">PainIsVirtue</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">FleshPurity</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Structure_Animist</li>
		</allowedMemes>
		<disallowedPrecepts>
		  <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
		  <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
		</disallowedPrecepts>
		<backstoryFilters>
			<li>
				<categories>
					<li>Offworld</li>
				</categories>
				<commonality>0.05</commonality>
			</li>
			<li>
				<categories>
				  <li>Outlander</li>
				</categories>
				<commonality>0.1</commonality>
			</li>
			<li>
				<categories>
				  <li>Pirate</li>
				</categories>
				<commonality>0.1</commonality>
			</li>
			<li>
				<categories>
				  <li>Tribal</li>
				</categories>
				<commonality>0.75</commonality>
			</li>
		</backstoryFilters>
		<permanentEnemy>true</permanentEnemy>
		<canUseAvoidGrid>false</canUseAvoidGrid>
		<autoFlee>false</autoFlee>
		<canStageAttacks>true</canStageAttacks>
		<canSiege>false</canSiege>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<earliestRaidDays>75</earliestRaidDays>
		<allowedCultures>
			<li>Rustican</li>
			<li>Corunan</li>
			<li>Astropolitan</li>
		</allowedCultures>
		<!-- ====== Pawn Groups ====== -->
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<MedTimes_Warbourne_Berserker_Cheap>1</MedTimes_Warbourne_Berserker_Cheap>
					<MedTimes_Warbourne_Berserker>100</MedTimes_Warbourne_Berserker>
					<MedTimes_Warbourne_ManAtArms>100</MedTimes_Warbourne_ManAtArms>
				</options>
			</li>
			  <li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Miners</kindDef>
				<commonality>1</commonality>
				<options>
				  <Miner>2</Miner>
				</options>
			  </li>
			  <li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Hunters</kindDef>
				<commonality>1</commonality>
				<options>
				  <Hunter>3</Hunter>
				</options>
			  </li>
			  <li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Loggers</kindDef>
				<commonality>1</commonality>
				<options>
				  <Logger>2</Logger>
				</options>
			  </li>
		</pawnGroupMakers>
		<factionIconPath>World/WorldObjects/Factions/MedTimes_WarBourne</factionIconPath>
		<colorSpectrum>
			<li>(0.6, 1, 0)</li>
			<li>(0.8, 0.75, 0)</li>
			<li>(0.3, 0.2, 0)</li>
		</colorSpectrum>
	</FactionDef>
</Defs>