<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- Catapult balls -->
	<RecipeDef>
		<defName>MedTimes_MakeArtilleryBalls</defName>
		<label>Make Artillery Ammo</label>
		<description>Shape rock chunks into form more appropriate for catapult.</description>
		<jobString>Making stone balls.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>1200</workAmount>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<researchPrerequisite>MedTimes_SiedgeMechanisms</researchPrerequisite>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>MedTimes_CraftingStation</li>
			<li>MedTimes_ArtisanStation</li>
			<li>TableSculpting</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<MedTimes_CatapultBall>4</MedTimes_CatapultBall>
		</products>
	</RecipeDef>
	<!-- reinforced pipe -->
	<RecipeDef>
		<defName>MedTimes_MakeReinforcedPipe</defName>
		<label>Make reinforced pipe</label>
		<description>Carefuly shape and temper metal in form of pipe.</description>
		<jobString>Making reinforced pipe.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<workAmount>10600</workAmount>
		<unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
		<researchPrerequisite>MedTimes_Cannons</researchPrerequisite>
		<recipeUsers>
			<li>MedTimes_BlacksmithForgeTierTwo</li>
			<li>MedTimes_ElectricBlacksmithForgeTierTwo</li>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
			<li>TableMachining</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<ReinforcedBarrel>1</ReinforcedBarrel>
		</products>
	</RecipeDef>
	<!-- Cannon item stuff -->
	<RecipeDef>
		<defName>SmeltCannonItems</defName>
		<label>smelt items</label>
		<description>Use heat to break down smeltable items into useful resources.</description>
		<jobString>Smelting item.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<specialProducts>
			<li>Smelted</li>
		</specialProducts>
		<recipeUsers>
			<li>ElectricSmelter</li>
			<li>MedTimes_FueledSmelter</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedTimes_CannonBallMetal</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedTimes_CannonBallMetal</li>
			</thingDefs>
		</fixedIngredientFilter>
		<forceHiddenSpecialFilters>
			<li>AllowSmeltable</li>
		</forceHiddenSpecialFilters>
	</RecipeDef>
	
