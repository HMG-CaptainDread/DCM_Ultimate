<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <RecipeDef Name="ScrolLRecipeBase" Abstract="true">
        <description>Make some scroll from paper and free time.</description>
        <soundWorking>Recipe_Tailor</soundWorking>
        <workAmount>18000</workAmount>
        <label>Make scroll.</label>
        <jobString>Making some scrolls.</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <efficiencyStat>ComposingQuality</efficiencyStat>
        <unfinishedThingDef>MedTimes_UnfinishedScroll</unfinishedThingDef>
		<researchPrerequisite>MedTimes_Paperwork</researchPrerequisite>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>MedTimes_Resource_PaperSheets</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
        </ingredients>
		<recipeUsers>
			<li>MedTimes_Desk</li>
		</recipeUsers>
        <fixedIngredientFilter>
            <thingDefs>
                <li>MedTimes_Resource_PaperSheets</li>
            </thingDefs>
        </fixedIngredientFilter>
    </RecipeDef>
	
	<!-- entertainment -->
    <RecipeDef ParentName="ScrolLRecipeBase">
        <defName>MedTimes_MakeEntertainScroll_Recipe</defName>
        <description>Make entertainment scrolls from paper and free time.</description>
        <label>Make entertainment scrolls.</label>
        <jobString>Making entertainment scrolls.</jobString>
		<products>
			<NoteGraphicNovel>20</NoteGraphicNovel>
		</products>	
		<skillRequirements>
			<Intellectual>3</Intellectual>
			<Artistic>3</Artistic>
			<Social>3</Social>
		</skillRequirements>
    </RecipeDef>
	
