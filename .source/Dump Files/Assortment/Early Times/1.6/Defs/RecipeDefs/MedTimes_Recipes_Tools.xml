<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<!-- ==================== tools production ====================== -->    
<!-- Neolitic Tools -->
  <RecipeDef>
    <defName>MedTimes_MakeNeoliticTools</defName>
    <label>Make Neolitic Tools</label>
    <description>Craft most simple tools from most common materials.</description>
	<effectWorking>Smelt</effectWorking>
	<soundWorking>Recipe_Smelt</soundWorking>
	<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    <jobString>Making Neolitic Tools.</jobString>
    <workSkill>Crafting</workSkill>	
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	<recipeUsers>
		<li>CraftingSpot</li>
	</recipeUsers>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1200</workAmount>
    <ingredients>
       <li>
        <filter>
			<categories>
				<li>ResourcesRaw</li>
			</categories>
		  <disallowedCategories>
			<li>PlantMatter</li>
		  </disallowedCategories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>		
    <fixedIngredientFilter>
		<categories>
			<li>ResourcesRaw</li>
		</categories>
      <disallowedCategories>
        <li>PlantMatter</li>
      </disallowedCategories>
    </fixedIngredientFilter>
	<researchPrerequisite>TS_Crafting</researchPrerequisite>
    <products>
      <EarlyTimes_NeoliticTools>1</EarlyTimes_NeoliticTools>
    </products>
  </RecipeDef> 
  
