<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<RecipeDef Name="MakeStoneBlocksBaseNeolitic" Abstract="True">
		<jobString>Cutting stone blocks from chunk.</jobString>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<researchPrerequisite>TS_PrimitiveStonecutting</researchPrerequisite>
		<targetCountAdjustment>10</targetCountAdjustment>
		<workAmount>1500</workAmount>
		<recipeUsers>
			<li>TS_StonecuttingSpot</li>
		</recipeUsers>
	</RecipeDef>
	
	<RecipeDef ParentName="MakeStoneBlocksBaseNeolitic">
		<defName>Make_StoneBlocksAny_Neolitic</defName>
		<label>make any stone blocks</label>
		<description>Cut rock chunks into usable stone blocks.</description>
		<workerCounterClass>RecipeWorkerCounter_MakeStoneBlocks</workerCounterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>StoneChunks</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>StoneChunks</li>
			</categories>
		</fixedIngredientFilter>
		<specialProducts>
			<li>Butchery</li>
		</specialProducts>
	</RecipeDef>
	
	
	<RecipeDef ParentName="MakeStoneBlocksBaseNeolitic">
		<defName>MakeStoneBlocksBaseNeolitic_Neolitic</defName>
		<label>make sandstone blocks</label>
		<description>Cuts sandstone chunks into usable blocks.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ChunkSandstone</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>ChunkSandstone</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<BlocksSandstone>20</BlocksSandstone>
		</products>
	</RecipeDef>
	
