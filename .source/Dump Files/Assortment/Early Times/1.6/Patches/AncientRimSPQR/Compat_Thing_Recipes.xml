<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient Rim - SPQRim</li>
            <li>Ancient Rim - SPQRim (Continued)</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name="RomeArmourMakeableBase"]/recipeMaker/recipeUsers</xpath>
					<value>			
						<recipeUsers>
							<li>MedTimes_BlacksmithForge</li>
							<li>MedTimes_ElectricBlacksmithForge</li>
						</recipeUsers>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name="RomeShields"]/recipeMaker/recipeUsers</xpath>
					<value>		
						<recipeUsers>
							<li>MedTimes_BlacksmithForge</li>
							<li>MedTimes_ElectricBlacksmithForge</li>
						</recipeUsers>	
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name="BaseMeleeWeapon_Rome"]/recipeMaker/recipeUsers</xpath>
					<value>			
						<recipeUsers>
							<li>MedTimes_BlacksmithForge</li>
							<li>MedTimes_ElectricBlacksmithForge</li>
						</recipeUsers>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[@Name="BaseWeaponRangedRome"]/recipeMaker/recipeUsers</xpath>
					<value>			
						<recipeUsers>
							<li>MedTimes_CraftingStation</li>
						</recipeUsers>
					</value>
				</li>
				
			</operations>
		</match>
    </Operation>
	
</Patch>				