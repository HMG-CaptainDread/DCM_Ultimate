<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient Rim - SPQRim</li>
            <li>Ancient Rim - SPQRim (Continued)</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_RedWall"]/costStuffCount</xpath>
					<value>			
						<costStuffCount>15</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_RedWall"]/researchPrerequisites</xpath>
					<value>			
						<researchPrerequisites>
							<li>TS_PrimitiveClothing</li>
							<li>MedTimes_ReinforcedStructure</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="AR_Pillar"]</xpath>
					<value>			
						<researchPrerequisites>
							<li>TS_Columns</li>
							<li>MedTimes_BasicArt</li>
						</researchPrerequisites>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>/Defs/ThingDef[defName="AR_Smithy_Rome"]</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_Kliani" or defName="AR_DoubleKlinai"]/researchPrerequisites</xpath>
					<value>			
						<researchPrerequisites>
							<li>TS_PrimitiveClothing</li>
							<li>ComplexFurniture</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="AR_OilLamp"]/researchPrerequisites</xpath>
					<value>			
						<li>MedTimes_ContainedFire</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_FoldingStool"]/researchPrerequisites</xpath>
					<value>			
						<researchPrerequisites>
							<li>TS_PrimitiveClothing</li>
							<li>MedTimes_BasicFurniture</li>
						</researchPrerequisites>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[
						defName="AR_CartibulumShort" or 
						defName="AR_CartibulumLong" or 
						defName="AR_MonopodiumSquareBig" or 
						defName="AR_MonopodiumRoundBig"]/researchPrerequisites</xpath>
					<value>			
						<researchPrerequisites>
							<li>MedTimes_BasicFurniture</li>
							<li>MedTimes_BasicArt</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/thingDef[defName="AR_Press"]/researchPrerequisites</xpath>
					<value>			
						<li>MedTimes_BasicCooking</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_ClassicalSculpture"]/recipeMaker</xpath>
					<value>						
						<recipeMaker>
							<researchPrerequisite>MedTimes_BasicArt</researchPrerequisite>
							<recipeUsers>
								<li>MedTimes_ArtisanStation</li>
								<li>TableSculpting</li>
							</recipeUsers>
						</recipeMaker>
					</value>
				</li>				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name="Mosaic"]</xpath>
					<value>			    
						<researchPrerequisites>
							<li>Stonecutting</li>
							<li>MedTimes_Art</li>
						</researchPrerequisites>
					</value>
				</li>			
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_1x2Fountain"]/researchPrerequisites</xpath>
					<value>			    
						<researchPrerequisites>
							<li>MedTimes_BasicArt</li>
							<li>AR_Project_Water_Cooling</li>
						</researchPrerequisites>
					</value>
				</li>		
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_2x2Fountain"]/researchPrerequisites</xpath>
					<value>			    
						<researchPrerequisites>
							<li>MedTimes_Art</li>
							<li>AR_Project_Water_Cooling</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="AR_Aqueduct"]/researchPrerequisites</xpath>
					<value>			    
						<researchPrerequisites>
							<li>MedTimes_ReinforcedStructure</li>
							<li>AR_Project_Water_Cooling</li>
							<li>TS_Bridges</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="MedTimes_Firepit"]/researchPrerequisites</xpath>
					<value>			    
						<researchPrerequisites>
							<li>AR_Project_Hypocaustum</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
    </Operation>
	
</Patch>				