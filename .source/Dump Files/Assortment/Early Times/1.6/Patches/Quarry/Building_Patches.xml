<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Quarry</li>
		  <li>Quarry [Adopted]</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[@Name="QRY_QuarryBase"]</xpath>
			<value>
				<researchPrerequisites>
					<li>MedTimes_Quarry</li>
				</researchPrerequisites>
			</value>
		</li>
		<li Class="PatchOperationAdd">
			<xpath>/Defs/ThingDef[defName="QRY_Platform"]</xpath>
			<value>
				<researchPrerequisites>
					<li>MedTimes_Quarry</li>
					<li>TS_PrimitiveFurniture</li>
				</researchPrerequisites>
			</value>
		</li>
		<li Class="PatchOperationReplace">
			<xpath>/Defs/ThingDef[defName="QRY_Platform"]/designationCategory</xpath>
			<value>
				<designationCategory>Furniture</designationCategory>
			</value>
		</li>
		</operations>
	</match>
  </Operation>

</Patch>




