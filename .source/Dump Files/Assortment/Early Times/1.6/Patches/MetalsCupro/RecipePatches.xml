			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "CAL_RecipeAlloyBase"]/recipeUsers</xpath>
					<value>
						<li>MedTimes_FueledSmelter</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[@Name = "CAL_ConversionBase"]/recipeUsers</xpath>
					<value>
						<li>MedTimes_CraftingStation</li>
					</value>
				</li>
			</operations>
		</match>
