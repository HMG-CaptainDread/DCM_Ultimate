<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Rimworld Westernization Project</li>
		  <li>Rimworld Westernization Project (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="TurretGun_M1881Gatling"]/thingClass</xpath>
				<value>
					<thingClass>EarlyTimes.Building_TurretGunRotableCell</thingClass>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="RWPArtilleryBuilding"]/size</xpath>
				<value>
					<size>(3,3)</size>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="RWPArtilleryBuilding"]/thingClass</xpath>
				<value>
					<thingClass>EarlyTimes.Building_TurretGunRotableCell</thingClass>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
 
</Patch>