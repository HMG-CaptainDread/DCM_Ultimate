<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Rimworld Westernization Project</li>
		  <li>Rimworld Westernization Project (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ResearchProjectDef[defName="RWP_FallingBlock"]/prerequisites</xpath>
				<value>
					<prerequisites>
					  <li>MedTimes_BasicFirearms</li>
					</prerequisites>	
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ResearchProjectDef[defName="RWP_LeverAction"]/prerequisites</xpath>
				<value>
					<prerequisites>
					  <li>MedTimes_BasicFirearms</li>
					</prerequisites>	
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ResearchProjectDef[defName="Mortars"]/prerequisites</xpath>
				<value>
					  <li>RWP_Artillery</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ResearchProjectDef[defName="RWP_Watchmaking"]/prerequisites</xpath>
				<value>
					  <li>MedTimes_Mechanization</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ResearchProjectDef[defName="RWP_LawEnforcement"]/prerequisites</xpath>
				<value>
					  <li>TS_MethodicalResearch</li>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ResearchProjectDef[defName="RWP_Optometry"]/prerequisites</xpath>
				<value>
					  <li>MedTimes_Glasswork</li>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
	
	
</Patch>