<?xml version="1.0" encoding="utf-8" ?>

<Patch>  

	<Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>RimWriter - Books, Scrolls, Tablets, and Libraries</li>
		  <li>RimWriter - Books, Scrolls, Tablets, and Libraries (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="Jecrell_Book"]/stuffCategories</xpath>
			</li>		
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[@Name="Jecrell_Book"]/costStuffCount</xpath>
			</li>	

			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_Paper"]</xpath>
			</li>

			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_Parchment"]</xpath>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_ClothPaper"]</xpath>
			</li>
			
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_Guidebook"]</xpath>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_Skillbook"]</xpath>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]</xpath>		
				<value>
					<costList>
						<MedTimes_Resource_PaperSheets>10</MedTimes_Resource_PaperSheets>
					</costList>
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]/stuffCategories</xpath>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]/recipeMaker/recipeUsers</xpath>	
				<value>
					<recipeUsers>
						<li>CraftingSpot</li>
						<li>MedTimes_Desk</li>
						<li>RimWriter_TableWriting</li>
					</recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]/recipeMaker/researchPrerequisite</xpath>	
				<value>
					<researchPrerequisite>MedTimes_Paperwork</researchPrerequisite>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]/recipeMaker/researchPrerequisite</xpath>	
				<value>
					<researchPrerequisite>MedTimes_Paperwork</researchPrerequisite>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Jecrell_LeatherScroll"]/recipeMaker/soundWorking</xpath>	
				<value>
					<soundWorking>RimWriter_SoundManualPencil</soundWorking>
				</value>
			</li>	
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Jecrell_Tablet"]</xpath>	
				<value>
					<costStuffCount>5</costStuffCount>
				</value>
			</li>	
		</operations>
	</match>
  </Operation>
	
</Patch>