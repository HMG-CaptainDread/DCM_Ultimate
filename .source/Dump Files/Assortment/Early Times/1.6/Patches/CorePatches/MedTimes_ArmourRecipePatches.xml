						<xpath>/Defs/ThingDef[defName="Apparel_FlakVest"]/stuffCategories</xpath>
						<value>
							<li>Ceramic</li>
						</value>
					</match>
					<nomatch Class="PatchOperationAdd">
						<xpath>/Defs/ThingDef[defName="Apparel_FlakVest"]</xpath>
						<value>
							<stuffCategories>
								<li>Steeled</li>
								<li>Ceramic</li>
							</stuffCategories>
						</value>
					</nomatch>
				</li>
