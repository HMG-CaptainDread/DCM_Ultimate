						<xpath>/Defs/ThingDef[defName="Apparel_FlakJacket"]</xpath>
						<value>
							<stuffCategories>
								<li>Steeled</li>
								<li>Ceramic</li>
							</stuffCategories>
						</value>
					</nomatch>
				</li>
				<!-- (core) power armour -->
