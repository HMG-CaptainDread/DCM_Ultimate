<?xml version="1.0" encoding="utf-8" ?>

<Patch>		

	<!-- ========== Core Pawns add Hand/Foot Gear ========== -->
	<!-- === Neolithic Tribals === -->
	<!-- Add Hand/Foot to Tribals -->
	<Operation Class="PatchOperationSequence">
	  <success>Always</success>
	  <operations>
		<li Class="PatchOperationTest">
		  <xpath>/Defs/PawnKindDef[@Name = "TribalBase"]/apparelRequired</xpath>
		  <success>Invert</success>
		</li>	  
		<li Class="PatchOperationAdd">
			<xpath>/Defs/PawnKindDef[@Name = "TribalBase"]</xpath>
			<value>
				<apparelRequired />
			</value>
		</li>	  
	  </operations>
	</Operation>	  

	<Operation Class="PatchOperationAdd">
		<xpath>/Defs/PawnKindDef[@Name = "TribalBase"]/apparelRequired</xpath>
		<value>
			<li>MedTimes_Gloves_Tribal</li>	
			<li>MedTimes_Boots_Tribal</li>
		</value>
	</Operation>
	
	
