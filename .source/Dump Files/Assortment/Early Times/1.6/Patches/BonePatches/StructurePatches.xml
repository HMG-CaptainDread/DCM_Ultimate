<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim of Madness - Bones</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "BoneWall"]</xpath>
					<value>
					  <researchPrerequisites>
						<li>MedTimes_ReinforcedStructure</li>
					  </researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName = "BoneWall"]/costList</xpath>
					<value>
						<costList>
							<BoneItem>10</BoneItem>
						</costList>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>