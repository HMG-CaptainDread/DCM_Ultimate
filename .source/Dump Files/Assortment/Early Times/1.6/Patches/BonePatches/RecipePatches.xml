<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Rim of Madness - Bones</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MedTimes_Firepit"]/recipes</xpath>
					<value>
						<li>MakeBoneChina</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MedTimes_CorpseBonfire"]/recipes</xpath>
					<value>
						<li>MakeBoneChina</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MedTimes_StoneHearth"]/recipes</xpath>
					<value>
						<li>MakeBoneChina</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MedTimes_ButcherBlock"]/recipes</xpath>
					<value>
						<li>MakeMarrowFromBone</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "MedTimes_FoodPrepStation"]/recipes</xpath>
					<value>
						<li>MakeGelatinFromMarrow</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName = "MakeBoneChina"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>TS_PrimitiveCooking</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName = "MakeMarrowFromBone"]/products</xpath>
					<value>
						<BoneChina>10</BoneChina>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/RecipeDef[defName = "MakeGelatinFromMarrow"]/researchPrerequisite</xpath>
					<value>
						<researchPrerequisite>MedTimes_Cooking</researchPrerequisite>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>