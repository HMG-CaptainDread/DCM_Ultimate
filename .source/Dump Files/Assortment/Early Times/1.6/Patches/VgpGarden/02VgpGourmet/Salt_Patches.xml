<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>VGP Garden Gourmet</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "ChunkSalt"]</xpath>		
				<value>
					<deepCommonality>3</deepCommonality>
					<deepCountPerPortion>230</deepCountPerPortion>   
					<deepLumpSizeRange>
					  <min>11</min>
					  <max>23</max>
					</deepLumpSizeRange>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
    
</Patch>