<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>VGP Vegetable Garden</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- flowers and grass -->
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VG_Campfire"]</xpath>		
				<value>
					<researchPrerequisites>
					  <li>TS_Firemaking</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VG_TorchLamp"]</xpath>		
				<value>
					<researchPrerequisites>
					  <li>TS_Firemaking</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VG_JellyFarm"]</xpath>		
				<value>
					<researchPrerequisites>
					  <li>TS_Crafting</li>
					</researchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
    
</Patch>