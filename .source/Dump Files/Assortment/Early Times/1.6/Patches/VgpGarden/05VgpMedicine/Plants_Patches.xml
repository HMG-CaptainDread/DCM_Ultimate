<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>VGP Garden Medicine</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Plant_DecoNeutroFlower"]/plant</xpath>		
				<value>
					<sowResearchPrerequisites>
						<li>DrugProduction</li>
						<li>TS_Botany</li>
					</sowResearchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="PlantTobacco"]/plant</xpath>		
				<value>
					<sowResearchPrerequisites>
						<li>TS_Smokeleaf</li>
					</sowResearchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="PlantDandelionPatch"]/plant</xpath>		
				<value>
					<sowResearchPrerequisites>
						<li>DrugProduction</li>
						<li>TS_DomHerb</li>
					</sowResearchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
    
</Patch>