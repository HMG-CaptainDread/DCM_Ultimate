<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>VGP Garden Fabrics</li>
		  <li>VGP Garden Fabrics Simplified</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "TableLoom"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_MedievalTailoring</li>
						<li>MedTimes_Mechanization</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "TableElecLoom"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_MedievalTailoring</li>
						<li>Electricity</li>
					</researchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
    
</Patch>