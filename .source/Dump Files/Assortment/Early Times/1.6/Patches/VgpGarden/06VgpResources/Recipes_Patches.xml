<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>VGP Garden Resources</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<!-- blk stuff, BEGONE, too many stuff to patch up -->
			<li Class="PatchOperationSequence">
				<success>Always</success>
				<operations>
					<li Class="PatchOperationRemove">
						<xpath>/Defs/RecipeDef[defName="ExtractBulkSteelLeaf" or 
											   defName="ExtractBulkPlasteelLeaf" or 
											   defName="ExtractbulkGoldLeaf" or 
											   defName="ExtractBulkRawJadeLeaf" or 
											   defName="ExtractBulkSilverLeaf" or 
											   defName="ExtractBulkUraniumLeaf"]</xpath>	
											   
					</li>	
					<li Class="PatchOperationAdd">
						<xpath>/Defs/RecipeDef[defName="ExtractRawJadeLeaf"]/recipeUsers</xpath>	
						<value>
							   <li>MedTimes_Firepit</li>
							   <li>MedTimes_BlacksmithForge</li>
							   <li>MedTimes_ElectricBlacksmithForge</li>
						</value>		
					</li>	
				</operations>
			</li>
		</operations>
	</match>
  </Operation>
    
</Patch>