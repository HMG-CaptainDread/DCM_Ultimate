<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Damage amount is handled in a Harmony patch -->
	<Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>[HLX] ReGrowth - Cold Bog Expansion</li>
		  <li>ReGrowth: Cold Bog Expansion</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RG-B_Plant_Volopus"]/plant/sowResearchPrerequisites</xpath>
				<value>
					<sowResearchPrerequisites>
						<li>TS_FungusDom</li>
					</sowResearchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="RG-CB_Dervish"]/plant</xpath>
				<value>
					<sowResearchPrerequisites>
						<li>TS_Botany</li>
					</sowResearchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>

</Patch>