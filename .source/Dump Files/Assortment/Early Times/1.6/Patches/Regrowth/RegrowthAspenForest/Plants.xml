<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <!-- Damage amount is handled in a Harmony patch -->
	<Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>ReGrowth: Aspen Forests</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="RG-AF_Plant_Deathbell"]/plant</xpath>
				<value>			
					<sowResearchPrerequisites>
						<li>TS_DomHerb</li>
					</sowResearchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="RG-AF_Plant_RedMountainFlower"]/plant</xpath>
				<value>
					<sowResearchPrerequisites>
						<li>TS_DomHerb</li>
					</sowResearchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>

</Patch>