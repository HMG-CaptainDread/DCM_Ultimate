<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Early Firearms mod</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Bullet_Ball_EAFA"]/projectile/armorPenetrationBase</xpath>
				<value>
					<armorPenetrationBase>0.11</armorPenetrationBase>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="13_17ArmorMakeableBase"]/recipeMaker</xpath>
				<value>
					<researchPrerequisite>MedTimes_CombatArmor</researchPrerequisite>
					<recipeUsers>
						<li>ElectricSmithy</li>
						<li>FueledSmithy</li>
					</recipeUsers>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
	
</Patch>