<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Medieval Festival</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/RecipeDef[defName="VBYRoyalFeast" or defName="VBYSpitRoastedAnimal"]</xpath>
				<value>
					<researchPrerequisite>MedTimes_BasicCooking</researchPrerequisite>
				</value>			   
			</li>		
		</operations>
	</match>
  </Operation>
    
</Patch>