<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Tribal Signal Fire</li>
            <li>Tribal Signal Fire (Continued)</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="SignalFire"]</xpath>
					<value>			
						<researchPrerequisites>
							<li>TS_PrimitiveCooking</li>
							<li>TS_MethodicalResearch</li>
						</researchPrerequisites>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="SignalFire"]/description</xpath>
					<value>			
						<description>Learn how to use different materials to produce different smoke colors. This allows contact with remote traders as well as other factions for trade and diplomacy.</description>
					</value>
				</li>
				
			</operations>
		</match>
    </Operation>
	
</Patch>				