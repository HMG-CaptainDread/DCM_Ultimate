<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Vanilla Furniture Expanded - Security</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFES_Turret_Ballista"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_SiedgeMechanisms</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFES_CavalrySpikes"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>TS_BasicTraps</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFES_BearTrap"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>TS_BasicTraps</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFES_ShortWall"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
  
</Patch>




