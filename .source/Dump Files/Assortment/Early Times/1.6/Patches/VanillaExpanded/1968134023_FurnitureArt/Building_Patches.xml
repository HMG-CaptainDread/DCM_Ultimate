<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Vanilla Furniture Expanded - Art</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="MedTimes_ArtworkRug"]/recipeMaker/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>VFE_Res_Rugs</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="RugBase"]/recipeMaker/recipeUsers</xpath>		
				<value>
					<recipeUsers>
						<li>MedTimes_ArtisanStation</li>
						<li>HandTailoringBench</li>
						<li>ElectricTailoringBench</li>
					</recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VFE_StatueSmall"]/recipeMaker</xpath>		
				<value>
					<recipeUsers>
						<li>MedTimes_ArtisanStation</li>
					</recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="VFE_DecorativePlantPot"]/researchPrerequisites</xpath>		
				<value>
					<li>MedTimes_PlantPots</li>
				</value>
			</li>	
		</operations>
	</match>
  </Operation>
  
</Patch>




