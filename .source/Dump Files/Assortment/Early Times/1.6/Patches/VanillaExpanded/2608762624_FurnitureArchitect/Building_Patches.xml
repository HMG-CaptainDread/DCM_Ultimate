<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Vanilla Furniture Expanded - Architect</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFEArch_LogWall"]/costList</xpath>		
				<value> 
					<costList>
					  <WoodLog>12</WoodLog>
					</costList>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFEArch_ChainlinkFence"]/researchPrerequisites</xpath>		
				<value> 
					<researchPrerequisites>
						<li>MedTimes_MedievalCrafting</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEArch_PicketFence"]</xpath>		
				<value> 
					<researchPrerequisites>
						<li>ComplexFurniture</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFEArch_BrickFence"]/researchPrerequisites</xpath>		
				<value> 
					<researchPrerequisites>
						<li>Stonecutting</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEArch_LowFence"]</xpath>		
				<value> 
					<researchPrerequisites>
						<li>ComplexFurniture</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEArch_HedgeWall"]</xpath>		
				<value> 
					<researchPrerequisites>
						<li>TS_Botany</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEArch_AnimalGate"]</xpath>		
				<value> 
					<researchPrerequisites>
						<li>ComplexFurniture</li>
						<li>MedTimes_Fence</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEArch_SingleDoor"]</xpath>		
				<value> 
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			
		</operations>
	</match>
  </Operation>
  
</Patch>




