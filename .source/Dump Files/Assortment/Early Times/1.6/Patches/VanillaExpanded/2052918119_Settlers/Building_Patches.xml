<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Vanilla Factions Expanded - Settlers</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "ChemBoiler"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_ContainedFire</li>
						<li>MedTimes_Mechanization</li>
						<li>BiofuelRefining</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Chemlamp" or defName="ChemlampPost"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_ContainedFire</li>
						<li>MedTimes_Mechanization</li>
						<li>BiofuelRefining</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="DoorSaloon"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>TS_Shelter</li>
						<li>ComplexFurniture</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Post"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>TS_Columns</li>
						<li>ComplexFurniture</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="TableCircular"]</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_BasicFurniture</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="TableFaro"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_ComplexGames</li>
						<li>MedTimes_BasicFurniture</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="TableFiveFingerFilet"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>TS_SimpleGames</li>
						<li>MedTimes_BasicFurniture</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Windmill"]/researchPrerequisites</xpath>		
				<value>
					<researchPrerequisites>
						<li>MedTimes_Mechanization</li>
						<li>MedTimes_ReinforcedStructure</li>
					</researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="Turret_GatlingGun"]/thingClass</xpath>		
				<value>
					<thingClass>EarlyTimes.Building_TurretGunRotableCell</thingClass>
				</value>
			</li>
			
		</operations>
	</match>
  </Operation>
  
</Patch>




