<?xml version="1.0" encoding="utf-8"?>
<Patch>
  
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Vanilla Factions Expanded - Medieval</li>
		<li>Vanilla Factions Expanded - Medieval (Fork)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName = "VFEM_MeleeWeapon_Claymore"]/statBases</xpath>		
				<value>
					<statBases>
						<WorkToMake>22000</WorkToMake>
						<Mass>3.6</Mass>
					</statBases>
				</value>
			</li>
			<li Class="PatchOperationAttributeRemove">
				<xpath>/Defs/ThingDef[defName = "VFEM_MeleeWeapon_Claymore"]/recipeMaker</xpath>	
				<attribute>Inherit</attribute>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_Tabard"]</xpath>		
				<value>
					<recipeMaker>
						<researchPrerequisite>Smithing</researchPrerequisite>
					</recipeMaker>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_JesterOutfit"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_DameDress"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_KingsRobes"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_JesterHat"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_DameHat"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName = "VFEM_Apparel_PlagueMask"]/recipeMaker</xpath>		
				<value>
				  <recipeUsers>
					<li>MedTimes_TailoringStation</li>
				  </recipeUsers>
				</value>
			</li>

		</operations>
	</match>
  </Operation>
  
</Patch>




