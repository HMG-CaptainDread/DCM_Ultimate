<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>[RF] Concrete (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "MakeGlass"]/ingredients</xpath>
				<value>
				  <ingredients>
					<li>
					  <filter>
						<thingDefs>
						  <li>Resource_Sand</li>
						</thingDefs>
					  </filter>
					  <count>4</count>
					</li>
				  </ingredients>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "MakeGlass"]/fixedIngredientFilter</xpath>
				<value>
				  <fixedIngredientFilter>
					<thingDefs>
					  <li>Resource_Sand</li>
					</thingDefs>
				  </fixedIngredientFilter>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "MakeCircularGlass"]/ingredients</xpath>
				<value>
				  <ingredients>
					<li>
					  <filter>
						<thingDefs>
						  <li>Resource_Sand</li>
						</thingDefs>
					  </filter>
					  <count>4</count>
					</li>
				  </ingredients>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "MakeCircularGlass"]/fixedIngredientFilter</xpath>
				<value>
				  <fixedIngredientFilter>
					<thingDefs>
					  <li>Resource_Sand</li>
					</thingDefs>
				  </fixedIngredientFilter>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "SmeltGlass"]/ingredients</xpath>
				<value>
				  <ingredients>
					<li>
					  <filter>
						<thingDefs>
						  <li>Resource_Sand</li>
						</thingDefs>
					  </filter>
					  <count>2</count>
					</li>
					<li>
					  <filter>
						<thingDefs>
						  <li>Steel</li>
						</thingDefs>
					  </filter>
					  <count>2</count>
					</li>
				  </ingredients>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/RecipeDef[defName = "SmeltGlass"]/fixedIngredientFilter</xpath>
				<value>
				  <fixedIngredientFilter>
					<thingDefs>
					  <li>Resource_Sand</li>
					  <li>Steel</li>
					</thingDefs>
				  </fixedIngredientFilter>
				</value>
			</li>
		</operations>
		
	</match>
  </Operation>
		

</Patch>