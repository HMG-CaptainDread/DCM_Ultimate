<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>[RF] Concrete</li>
		  <li>[RF] Concrete (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="RFFCement"]</xpath>
			</li>	
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="CrushedRocks"]</xpath>
			</li>		
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ThingDef[defName="SandPile"]</xpath>
			</li>	
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Resource_Sand"]</xpath>
				<value>
					<tradeTags>
					  <li>TerraformingResources</li>
					</tradeTags>
				</value>
			</li>	
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="Crushed_Stones"]</xpath>
				<value>
					<tradeTags>
					  <li>TerraformingResources</li>
					</tradeTags>
				</value>
			</li>	
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="MedTimes_Resource_Cement"]</xpath>
				<value>
					<tradeTags>
					  <li>TerraformingResources</li>
					</tradeTags>
				</value>
			</li>	
		</operations>
		
	</match>
  </Operation>
		

</Patch>