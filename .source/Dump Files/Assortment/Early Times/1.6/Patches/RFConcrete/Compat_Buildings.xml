<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>[RF] Concrete</li>
		  <li>[RF] Concrete (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="RockMill"]/statBases</xpath>
				<value>
					<WorkTableWorkSpeedFactor>2.5</WorkTableWorkSpeedFactor>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RockMill"]/researchPrerequisites</xpath>
				<value>
					<researchPrerequisites>
						<li>MedTimes_Mechanization</li>
					</researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFConcreteDoor"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFPlasticreteDoor"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFConcreteAutodoor"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>Autodoors</li>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFPlasticreteAutodoor"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>Autodoors</li>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="RFFConcreteWall"]</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFReinforcedConcreteWall"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFPlasticreteWall"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_ReinforcedStructure</li>
				  </researchPrerequisites>
				</value>
			</li>
			
			<li Class="PatchOperationConditional">
				<xpath>/Defs/ThingDef[defName="Embrasure"]/researchPrerequisites</xpath>
				<match Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Embrasure"]/researchPrerequisites</xpath>
					<value>
						<researchPrerequisites>
							<li>MedTimes_Embrasures</li>
						</researchPrerequisites>
					</value>
				</match>
				<nomatch Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Embrasure"]</xpath>
					<value>
						<researchPrerequisites>
							<li>MedTimes_Embrasures</li>
						</researchPrerequisites>
					</value>
				</nomatch>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="BrickEmbrasure"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_Embrasures</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFConcreteEmbrasure"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_Embrasures</li>
				  </researchPrerequisites>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="RFFPlasticreteEmbrasure"]/researchPrerequisites</xpath>
				<value>
				  <researchPrerequisites>
					<li>MedTimes_Embrasures</li>
				  </researchPrerequisites>
				</value>
			</li>
		</operations>
	</match>
  </Operation>
	
</Patch>