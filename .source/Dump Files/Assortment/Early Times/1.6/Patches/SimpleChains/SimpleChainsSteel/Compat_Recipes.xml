<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Chains: Steel</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Owl_RefineSteel"]</xpath>
					<value>    
						<researchPrerequisite>MedTimes_MedievalCrafting</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Owl_RefineSteel"]/recipeUsers</xpath>
					<value>    
						<li>MedTimes_FueledSmelter</li>
					</value>
				</li>
            </operations>
		</match>
    </Operation>
	
	
	
</Patch>