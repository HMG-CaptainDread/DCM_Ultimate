<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Chains: Steel</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName="Owl_Bloomery"]</xpath>
					<value>    
						<researchPrerequisites>
						  <li>MedTimes_MedievalCrafting</li>
						</researchPrerequisites>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Owl_Bloomery"]/stuffCategories</xpath>
					<value>    
						<stuffCategories>
						  <li>Stony</li>
						</stuffCategories>
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThingDef[defName="Owl_Bloomery"]/costStuffCount</xpath>
					<value>    
						<costStuffCount>45</costStuffCount>
					</value>
				</li>	
				
            </operations>
		</match>
    </Operation>
	
</Patch>