<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Chains: Lumber</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Owl_MakeFirewood"]</xpath>
					<value>    
						<researchPrerequisite>TS_Firemaking</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Owl_MakeGreenLumber"]</xpath>
					<value>    
						<researchPrerequisite>TS_Crafting</researchPrerequisite>
					</value>
				</li>
            </operations>
		</match>
    </Operation>
	
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Simple Chains: Lumber</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Make_ChemfuelFromWood"]/fixedIngredientFilter/thingDefs</xpath>
					<value>    
						<li>Owl_WoodLog</li>
						<li>Owl_Firewood</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="Make_ChemfuelFromWood"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>    
						<li>Owl_WoodLog</li>
						<li>Owl_Firewood</li>
					</value>
				</li>
				
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="EarlyTimes_MakeCoalFromWood"]/fixedIngredientFilter/thingDefs</xpath>
					<value>    
						<li>Owl_WoodLog</li>
						<li>Owl_Firewood</li>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/RecipeDef[defName="EarlyTimes_MakeCoalFromWood"]/ingredients/li[1]/filter/thingDefs</xpath>
					<value>    
						<li>Owl_WoodLog</li>
						<li>Owl_Firewood</li>
					</value>
				</li>
            </operations>
		</match>
    </Operation>
	
	
	
</Patch>