<?xml version="1.0" encoding="utf-8" ?>

<Patch>
 
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Steam World</li>
		  <li>Steam World (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationRemove">
				<xpath>/Defs/ResearchProjectDef[defName="SteamWorld_CoalMining"]</xpath>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ResearchProjectDef[defName="SteamWorld_SteamPower"]/prerequisites</xpath>
				<value>
					<prerequisites>
					  <li>MedTimes_Mechanization</li>
					</prerequisites>
				</value>
			</li>	
		</operations>
	</match>
  </Operation>


	
</Patch>