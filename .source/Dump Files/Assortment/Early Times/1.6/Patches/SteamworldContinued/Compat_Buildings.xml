<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	
  <Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Steam World</li>
		  <li>Steam World (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="SW_CoalGenerator"]/comps/li[@Class="CompProperties_Refuelable"]</xpath>
				<value>
					<li Class="CompProperties_Refuelable">
						<fuelConsumptionRate>16.0</fuelConsumptionRate>
						<fuelCapacity>200.0</fuelCapacity>
						<fuelFilter>
						  <thingDefs>
							<li>Resource_Coal</li>
						  </thingDefs>
						</fuelFilter>
					</li>	
				</value>
			</li>
		</operations>
	</match>
  </Operation>
	
</Patch>