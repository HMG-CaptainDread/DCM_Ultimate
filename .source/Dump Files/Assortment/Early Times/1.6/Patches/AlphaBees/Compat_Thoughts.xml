<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Bees</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						  <ThoughtDef>
							<defName>RB_AteHoney</defName>
							<durationDays>1</durationDays>
							<stages>
							  <li>
								<label>ate delicious honey</label>
								<description>The honey is sweet and tasty.</description>
								<baseMoodEffect>2</baseMoodEffect>
							  </li>
							</stages>
						  </ThoughtDef>

						  <ThoughtDef>
							<defName>RB_AteHoneyIngredient</defName>
							<durationDays>2</durationDays>
							<stages>
							  <li>
								<label>ate delicious honey</label>
								<description>The honey that was made with tasted incredible.</description>
								<baseMoodEffect>1</baseMoodEffect>
							  </li>
							</stages>
						  </ThoughtDef>
					</value>
				</li>	
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[@Name="RB_HoneyBase"]/ingestible</xpath>
					<value>
						<tasteThought>RB_AteHoney</tasteThought>
						<specialThoughtAsIngredient>RB_AteHoneyIngredient</specialThoughtAsIngredient>
					</value>
				</li>	
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThoughtDef[defName="RB_AtePsychotropicHoney"]/durationDays</xpath>
					<value>
						<durationDays>2</durationDays>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThoughtDef[defName="RB_AtePsychotropicHoneyIngredient"]/durationDays</xpath>
					<value>
						<durationDays>2</durationDays>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ThoughtDef[defName="RB_AteTastyHoneyIngredient"]/durationDays</xpath>
					<value>
						<durationDays>2</durationDays>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	
</Patch>