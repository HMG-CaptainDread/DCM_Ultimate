<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Bees</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Vanilla Cooking Expanded</li>
			</mods>

			<match Class="PatchOperationSequence">
				<operations>
					<li Class="PatchOperationReplace"> 
						<xpath>/Defs/ThingDef[defName="RB_Spicy_Honeycomb"]/butcherProducts/RB_Beeswax</xpath>
						<value>
							<MedTimes_Wax>5</MedTimes_Wax>
						</value>
					</li>
					<li Class="PatchOperationReplace"> 
						<xpath>/Defs/RecipeDef[defName="RB_CentrifugeSpicyCombBulk"]/products/RB_Beeswax</xpath>
						<value>
							<MedTimes_Wax>50</MedTimes_Wax>
						</value>
					</li>
				</operations>
			</match>
		</match>
	</Operation>
	
</Patch>

