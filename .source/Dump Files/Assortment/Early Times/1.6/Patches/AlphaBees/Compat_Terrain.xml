<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Bees</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
	<li Class="PatchOperationAdd">
		<xpath>/Defs/TerrainDef[@Name="RB_WaxFloorBase"]</xpath>
		<value>
			<researchPrerequisites>
				<li>MedTimes_WaxUsage</li>
				<li>TS_IndoorFlooring</li>
			</researchPrerequisites>
		</value>
	</li>	
	
	<li Class="PatchOperationAdd">
		<xpath>/Defs/TerrainDef[@Name="RB_WaxTiledFloorBase"]</xpath>
		<value>
			<researchPrerequisites>
				<li>MedTimes_WaxUsage</li>
				<li>TS_IndoorFlooring</li>
			</researchPrerequisites>
		</value>
	</li>	
	
	<li Class="PatchOperationReplace">
		<xpath>/Defs/TerrainDef[defName="RB_BeesWaxFloor"]/costList</xpath>
		<value>
			<costList>
				<MedTimes_Wax>4</MedTimes_Wax>
			</costList>
		</value>
	</li>
	<li Class="PatchOperationReplace">
		<xpath>/Defs/TerrainDef[defName="RB_BeesWaxTileFloor"]/costList</xpath>
		<value>
			<costList>
				<MedTimes_Wax>4</MedTimes_Wax>
			</costList>
		</value>
	</li>
			</operations>
		</match>
	</Operation>
	
</Patch>