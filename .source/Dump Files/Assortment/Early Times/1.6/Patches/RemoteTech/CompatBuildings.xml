<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
	  <mods>
		  <li>Remote Tech</li>
		  <li>Remote Tech (Continued)</li>
	  </mods>
	  <match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[@Name="rxFoamWallBase"]/building/repairable</xpath>
				<value>
					<repairable>true</repairable>
				</value>			
			</li>
			<li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[@Name="rxRemoteExplosiveBase"]</xpath>
				<value>
					<researchPrerequisites><li>rxMakeshiftExplosives</li></researchPrerequisites>
				</value>			
			</li>
		</operations>
	</match>
  </Operation>
</Patch>