<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<!-- Mod Support for VWE -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>The Black Armory</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="MedTimes_Cannons"]/prerequisites</xpath>
					<value>
						<li>BA_Blackpowder</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Weapons Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ResearchProjectDef[defName="MedTimes_Cannons"]/prerequisites</xpath>
					<value>
						<li>VWE_Gunpowder</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>