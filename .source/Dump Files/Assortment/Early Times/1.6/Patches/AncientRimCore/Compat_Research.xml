<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient Rim - core</li>
            <li>Ancient Rim - Core (Continued)</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Metal_I"]</xpath>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Metal_II"]</xpath>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Metal_III"]/prerequisites/li[text()="AR_Project_Metal_II"]</xpath>
					<value>    
						<li>Smithing</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Polearms"]/prerequisites</xpath>
					<value>    
						<prerequisites>
						  <li>MedTimes_WeaponsMetal</li>
						  <li>MedTimes_AdvancedMedievalSmithing</li>
						</prerequisites>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Chainmail"]/prerequisites</xpath>
					<value>    
						<prerequisites>
						  <li>MedTimes_ArmorScaled</li>
						</prerequisites>	
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Light_Armour"]/prerequisites</xpath>
					<value>    
						<prerequisites>
						  <li>TS_PrimitiveArmor</li>
						  <li>MedTimes_MedievalTailoring</li>
						</prerequisites>	
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="AR_Project_Segmental_Armour"]/prerequisites</xpath>
					<value>    
						<prerequisites>
							<li>PlateArmor</li>
							<li>Smithing</li>
						</prerequisites>	
					</value>
				</li>	
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="MedTimes_CombatArmor"]/prerequisites</xpath>
					<value>    
						<prerequisites>
							<li>AR_Project_Segmental_Armour</li>
							<li>MedTimes_Mechanization</li>
						</prerequisites>	
					</value>
				</li>	
            </operations>
		</match>
    </Operation>
	
	
	
</Patch>