<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Ancient Rim - core</li>
            <li>Ancient Rim - Core (Continued)</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloyBronze"]/researchPrerequisite</xpath>
					<value>    
						<researchPrerequisite>MedTimes_MedievalCrafting</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloySteel"]/researchPrerequisite</xpath>
					<value>    
						<researchPrerequisite>MedTimes_AdvancedMedievalSmithing</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloyBronzeBulk"]/researchPrerequisite</xpath>
					<value>    
						<researchPrerequisite>MedTimes_MedievalCrafting</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloySteelBulk"]/researchPrerequisite</xpath>
					<value>    
						<researchPrerequisite>MedTimes_AdvancedMedievalSmithing</researchPrerequisite>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloyBronze"]/recipeUsers/li[text()="AR_Smelter"]</xpath>
					<value>    
						<li>MedTimes_FueledSmelter</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/recipeDef[defName="AR_AlloySteel"]/recipeUsers/li[text()="AR_Smelter"]</xpath>
					<value>    
						<li>MedTimes_FueledSmelter</li>
					</value>
				</li>
            </operations>
		</match>
    </Operation>
	
	
	
</Patch>