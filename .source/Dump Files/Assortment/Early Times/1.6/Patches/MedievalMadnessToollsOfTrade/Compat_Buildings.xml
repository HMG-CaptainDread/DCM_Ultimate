<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Madness: Tools of the Trade</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
			   <li Class="PatchOperationReplace">
				<xpath>/Defs/ThingDef[defName="CraftingWorkBench"]/researchPrerequisites</xpath>
				<value>
					<researchPrerequisites>
						<li>MedTimes_Toolworking</li>
					</researchPrerequisites>
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
				<xpath>/Defs/ThingDef[defName="CraftingWorkBench"]/comps/li[@Class="CompProperties_AffectedByFacilities"]/linkableFacilities</xpath>
				<value>
					<li>TS_ToolPile</li>
					<li>MedTimes_BlacksmithForge</li>
					<li>MedTimes_ElectricBlacksmithForge</li>
					<li>MedTimes_BlacksmithForgeTierTwo</li>
					<li>MedTimes_ElectricBlacksmithForgeTierTwo</li>
					<li>FueledSmithy</li>
					<li>ElectricSmithy</li>
				</value>
			  </li>
            </operations>
		</match>
    </Operation>

</Patch>