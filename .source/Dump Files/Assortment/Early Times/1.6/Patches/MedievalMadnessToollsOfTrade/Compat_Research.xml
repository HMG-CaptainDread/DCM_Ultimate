<?xml version="1.0" encoding="utf-8" ?>

<Patch>
	<Operation Class="PatchOperationFindMod">
        <mods>
            <li>Medieval Madness: Tools of the Trade</li>
        </mods>		
        <match Class="PatchOperationSequence">
            <operations>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicTools"]/researchViewX</xpath>
					<value>    
						<researchViewX>0.00</researchViewX>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="BasicTools"]/researchViewY</xpath>
					<value>    
						<researchViewY>2.80</researchViewY>
					</value>
				</li>
			  
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="ThrowingWeapons"]/prerequisites</xpath>
					<value>
						<prerequisites>
						  <li>MedTimes_Toolworking</li>
						</prerequisites>	
					</value>
				</li>
			  
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="AdvancedMeleeWeapons"]</xpath>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="HeavyWeapons"]</xpath>
				</li>
				
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="BasicCrossbows"]</xpath>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="MultishotCrossbows"]/prerequisites</xpath>
					<value>
						<prerequisites>
						  <li>MedTimes_Crossbow</li>
						</prerequisites>	
					</value>
				</li>
				
				<li Class="PatchOperationRemove">
					<xpath>/Defs/ResearchProjectDef[defName="HeavyCrossbows"]</xpath>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="LongBows"]/researchViewX</xpath>
					<value>    
						<researchViewX>2.00</researchViewX>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>/Defs/ResearchProjectDef[defName="LongBows"]/researchViewY</xpath>
					<value>    
						<researchViewY>0.70</researchViewY>
					</value>
				</li>
            </operations>
		</match>
    </Operation>
	
	
	
</Patch>