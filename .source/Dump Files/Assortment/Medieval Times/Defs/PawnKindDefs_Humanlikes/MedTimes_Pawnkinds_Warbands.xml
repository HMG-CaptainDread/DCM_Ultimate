<!-- ==================== Medieval Faction Classes ================= -->

  <!-- ==== (Class) Warband Core ==== -->
  <PawnKindDef Name="MedTimes_Class_WarbandCore" Abstract="True">
    <race>Human</race>
    <defaultFactionType>MedTimes_Faction_Warband</defaultFactionType>	
    <combatPower>25</combatPower>    
    <maxGenerationAge>28</maxGenerationAge>
	
    <backstoryCategories>
      <li>Tribal</li>
    </backstoryCategories>	
    <backstoryCryptosleepCommonality>0.01</backstoryCryptosleepCommonality>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>	
    <invNutrition>2.5</invNutrition>
    <invFoodDef>MedTimes_MealJerkedMeats</invFoodDef>
    <itemQuality>Normal</itemQuality>
    <apparelAllowHeadgearChance>0.75</apparelAllowHeadgearChance>	
    <gearHealthRange>
      <min>0.75</min>
      <max>1.1</max>
    </gearHealthRange>
    <apparelMoney>
      <min>350</min>
      <max>800</max>
    </apparelMoney>
    <weaponMoney>
      <min>350</min>
      <max>450</max>
    </weaponMoney>		
    <inventoryOptions>
      <skipChance>0.6</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>50</choiceChance>		
          <thingDef>Silver</thingDef>
          <countRange>
            <min>5</min>
            <max>25</max>
          </countRange>
        </li>
        <li>
		  <choiceChance>50</choiceChance>
          <thingDef>MedicineHerbal</thingDef>
          <countRange>
            <min>1</min>
            <max>1</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
	  <initialWillRange>0~3</initialWillRange>
	  <initialResistanceRange>7~20</initialResistanceRange>
  </PawnKindDef>
  
