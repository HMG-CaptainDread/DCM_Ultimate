<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<FactionDef ParentName="FactionBase">
		<defName>MedTimes_Faction_Warbourne</defName>	
		<label>Warbourne Wanderer</label>
		<description>The Warbourne Cultist worship Pang Li, the patron saint of violence, death and retribution. They band together and wander the world as Pang Li once did, looking for their own death in glorious battle.</description>
		<pawnsPlural>Wanderers</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<maxConfigurableAtWorldCreation>1</maxConfigurableAtWorldCreation>
		<displayInFactionSelection>false</displayInFactionSelection>
		<maxCountAtGameStart>1</maxCountAtGameStart>
		<fixedName>Warbourne Cultist</fixedName>
		<techLevel>Medieval</techLevel>
		<hidden>true</hidden>		
		<rescueesCanJoin>true</rescueesCanJoin>
    <backstoryCategories>
      <li>Tribal</li>
    </backstoryCategories>		
		<permanentEnemy>true</permanentEnemy>		
		<canUseAvoidGrid>false</canUseAvoidGrid>
		<autoFlee>false</autoFlee>	
		<canStageAttacks>true</canStageAttacks>		
		<canSiege>false</canSiege>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
		</requiredMemes>	
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
		<raidLootMaker>TribeRaidLootMaker</raidLootMaker>
    <raidLootValueFromPointsCurve>
      <points>
        <li>(35,     15)</li>
        <li>(100,   120)</li>
        <li>(1000,  500)</li>
        <li>(2000,  800)</li>
        <li>(4000, 1000)</li>
      </points>
    </raidLootValueFromPointsCurve>
	<earliestRaidDays>75</earliestRaidDays>
		<allowedCultures>
			<li>Kriminul</li>
		</allowedCultures>
   <factionIconPath>World/WorldObjects/DefaultSettlement</factionIconPath>
	
    <allowedArrivalTemperatureRange>-50~50</allowedArrivalTemperatureRange>		

<!-- ====== Pawn Groups ====== -->	

 <pawnGroupMakers>	
      <li>
        <kindDef>Combat</kindDef>	
        <options>
            <MedTimes_Warbourne_Berserker_Cheap>1</MedTimes_Warbourne_Berserker_Cheap>
            <MedTimes_Warbourne_Berserker>100</MedTimes_Warbourne_Berserker>
            <MedTimes_Warbourne_ManAtArms>100</MedTimes_Warbourne_ManAtArms>
        </options>
      </li>			
 </pawnGroupMakers>  
 
	</FactionDef>
</Defs>