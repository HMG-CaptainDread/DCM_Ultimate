      <soundWorking>Recipe_MakeStoneBlocks</soundWorking>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>	  
      <recipeUsers><li>MedTimes_CraftingStation</li></recipeUsers>
    </recipeMaker>	
    <comps>
