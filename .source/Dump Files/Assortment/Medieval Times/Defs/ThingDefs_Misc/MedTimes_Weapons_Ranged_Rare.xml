    </comps>
    <inspectorTabs><li>ITab_Art</li></inspectorTabs>  	
    <thingCategories><li>WeaponsRanged_Art</li></thingCategories>	
    <tradeTags><li>MedTimes_Artifact</li></tradeTags>		
  </ThingDef>
 
 
<!--  (Legendary) Ranged Weapon -->
