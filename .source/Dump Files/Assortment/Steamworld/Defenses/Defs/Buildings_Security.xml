  <ThingDef ParentName="StWoDe_ExplosiveCrates">
    <defName>StWoDe_ExplosiveCrateSmall</defName>
    <label>small explosive crate</label>
    <description>A small wooden crate filled with explosives. Thought stabilized condition an explosion might be triggered by either flames or another previous explosion.</description>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Building/Crates/ExplosiveCrate_small</texPath>
      <drawSize>(1,1)</drawSize>
	  <graphicClass>Graphic_Single</graphicClass>
      <shadowData>
        <volume>(0.65, 0.35, 0.8)</volume>
      </shadowData>
    </graphicData>
    <size>(1, 1)</size>
	<costList>
      <Cloth>20</Cloth>
	  <Chemfuel>50</Chemfuel>
	  <WoodLog>10</WoodLog>
    </costList>
    <statBases>
      <Mass>10</Mass>
	  <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>300</WorkToBuild>
    </statBases>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
		<!-- damage amount is the damage def default -->
        <startWickHitPointsPercent>0.3</startWickHitPointsPercent>
        <wickTicks>50~150</wickTicks>
        <startWickOnDamageTaken>
          <li>Flame</li>
		  <li>Bomb</li>
        </startWickOnDamageTaken>
		<explodeOnKilled>true</explodeOnKilled>
      </li>
    </comps>	
	<specialDisplayRadius>2.9</specialDisplayRadius>
  </ThingDef>

