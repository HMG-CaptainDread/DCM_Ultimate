<?xml version="1.0" encoding="utf-8" ?>
<Defs>
 
  <ThingDef ParentName="ResourceBase">
    <defName>StWoDe_SmallShell</defName>
    <label>light field cannon shell</label>
    <description>A small shell filled with explosives to be fired from light artillery pieces. Explodes when damaged.</description>
    <possessionCount>1</possessionCount>
    <graphicData>
      <texPath>Resource/LightShell</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <explosiveExpandPerStackcount>0.4</explosiveExpandPerStackcount>
        <startWickHitPointsPercent>0.7</startWickHitPointsPercent>
        <wickTicks>30~60</wickTicks>
      </li>
    </comps>
    <projectileWhenLoaded>StWoDe_SmallShell_Bullet</projectileWhenLoaded>
    <costList>
      <Steel>7</Steel>
      <Chemfuel>7</Chemfuel>
    </costList>
	<soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>30</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>60</MaxHitPoints>
      <MarketValue>35</MarketValue>
      <Mass>1.25</Mass>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>1.5</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>StWoDeShells</li>
    </thingCategories>
    <tradeTags>
      <li>MortarShell</li>
    </tradeTags>
	<recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <effectWorking>Cook</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>500</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>100</displayPriority>
	  <researchPrerequisite>SteamworldResearch_Field_Guns</researchPrerequisite>
    </recipeMaker>
  </ThingDef>  
  <ThingDef ParentName="BaseBullet">
    <defName>StWoDe_SmallShell_Bullet</defName>
    <label>small shell</label>
    <graphicData>
      <texPath>Things/Projectile/LauncherShot</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <!-- damage amount is the damage def default -->
      <speed>41</speed>
      <explosionRadius>1.9</explosionRadius>
      <flyOverhead>false</flyOverhead>
      <soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>


