  <ThingDef ParentName="BaseSteamworldGun">
    <defName>StWoDe_BreechLoadingRifle</defName>
    <label>breech loading rifle</label>
    <description>An archaic pattern breech loading rifle. The bullet is inserted by a simple bolt action mechanism at the guns breech. Its relatively small caliber allows greater range at the cost of damage.</description>
    <graphicData>
      <texPath>Weapon/BreechLoader</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(1.1,1.0)</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
	<weaponTags>
	  <li>SimpleGun</li>
    </weaponTags>
    <weaponClasses>
      <li>LongShots</li>
    </weaponClasses>
    <statBases>
      <WorkToMake>12000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.70</AccuracyTouch>
      <AccuracyShort>0.80</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.70</AccuracyLong>
      <RangedWeapon_Cooldown>2.9</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <skillRequirements>
        <Crafting>4</Crafting>
      </skillRequirements>
      <displayPriority>450</displayPriority>
    </recipeMaker>
    <verbs>
      <li>
        <verbClass>VEF.Weapons.Verb_ShootWithFlintlockSmoke</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>StWoDe_Bullet_BreechLoadingRifle</defaultProjectile>
