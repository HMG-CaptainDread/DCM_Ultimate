<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  
  <Operation Class="VEF.PatchOperationToggableSequence">
    
	<enabled>True</enabled>
	
    <label>accessory items occupy an extra layer</label>
	
    <operations>
	
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="StWoUn_Epaulettes"]/apparel/layers/li[1]</xpath>
        <value>
		  <li>VFEC_OuterShell</li>
        </value>
      </li>
	  <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="StWoUn_Epaulettes"]/apparel</xpath>
        <value>		  
		  <drawData>
			<dataNorth>
			  <layer>89</layer>
			</dataNorth>
		  </drawData>
        </value>
      </li>
	  
    </operations>
  </Operation>
  
  <Operation Class="VEF.PatchOperationToggableSequence">
    
	<enabled>True</enabled>
	
    <label>shouldered bed roll occupies an extra layer</label>
	
    <operations>
	
      <li Class="PatchOperationReplace">
        <xpath>Defs/ThingDef[defName="StWoUn_BedRoll"]/apparel/layers/li[1]</xpath>
        <value>
		  <li>VFEC_OuterShell</li>
        </value>
      </li>	
	  <li Class="PatchOperationAdd">
        <xpath>Defs/ThingDef[defName="StWoUn_BedRoll"]/apparel</xpath>
        <value>		  
		  <drawData>
			<dataNorth>
			  <layer>89</layer>
			</dataNorth>
		  </drawData>
        </value>
      </li>
    </operations>
  </Operation>
  
  <Operation Class="VEF.PatchOperationToggableSequence">
    
	<enabled>False</enabled>
	
    <label>mark the uniforms research project as medieval</label>
	
    <operations>
	
      <li Class="PatchOperationReplace">
		<xpath>Defs/ResearchProjectDef[defName="StWoUn_Project"]/techLevel</xpath>
        <value>
          <techLevel>Medieval</techLevel>
		</value>
      </li>
	  
    </operations>
  </Operation>
  
</Patch>