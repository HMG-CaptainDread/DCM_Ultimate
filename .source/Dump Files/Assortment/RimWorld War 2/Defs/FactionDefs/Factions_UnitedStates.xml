        </categories>
        <commonality>1</commonality>
      </li>
    </backstoryFilters>
    <allowedArrivalTemperatureRange>-10~45</allowedArrivalTemperatureRange>
    <raidLootMaker>K4G_WW2RaidLootMaker</raidLootMaker>
    <maxPawnCostPerTotalPointsCurve>
