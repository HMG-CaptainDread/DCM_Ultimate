<Defs>

<!-- Single-Shot Pistol -->
  <ThingDef ParentName="BaseHumanMakeableGun" Name="WW2SingleShotPistol" Abstract="True">
    <description>A crude single-shot pistol used during WW2, is not very effective but very cheap to produce.</description>
    <uiIconScale>1.5</uiIconScale>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <researchPrerequisite>Smithing</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>1000</WorkToMake>
      <Mass>0.5</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.35</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>10</Steel>
    </costList>
    <tradeTags>
      <li>K4GWW2Weapon</li>
      <li>WeaponRanged</li>
    </tradeTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>K4G_Bullet_WW2SingleShotPistol</defaultProjectile>
        <warmupTime>0.3</warmupTime>
        <range>12</range>
        <soundCast>Shot_Autopistol</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>4</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
<!-- Single-Shot Pistol Bullet -->
