<!-- American M1 Bazooka Rocket Launcher -->
  <ThingDef ParentName="BaseMakeableGun">
    <defName>K4G_Gun_WW2AmericanServiceRocketLauncher</defName>
    <label>American M1 Bazooka rocket launcher</label>
    <description>A rocket launcher used during WW2, fires a large-bore explosive rocket designed to disable or destroy armored targets.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/UnitedStates/WW2AmericanServiceRocketLauncher</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>45</equippedAngleOffset>
    <statBases>
      <WorkToMake>70000</WorkToMake>
      <MarketValue>1000</MarketValue>
      <Mass>7</Mass>
      <RangedWeapon_Cooldown>4.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisite>K4G_WW2AntiTankEquipment</researchPrerequisite>
      <skillRequirements>
        <Crafting>9</Crafting>
      </skillRequirements>
    </recipeMaker>
    <costList>
      <Steel>300</Steel>
      <ComponentIndustrial>15</ComponentIndustrial>
    </costList>
    <weaponTags Inherit="False">
      <li>K4GWW2UnitedStatesTrading</li>
      <li>K4GWW2UnitedStatesAntiTank</li>
	  <li>K4GWW2UnitedKingdomAntiTankSharedAllies</li>
	  <li>K4GWW2RussiaAntiTankSharedAllies</li>
	  <li>K4GWW2FranceAntiTankSharedAllies</li>
	  <li>K4GWW2FranceAntiTankSharedExile</li>
	  <li>K4GWW2GermanyAntiTankSharedAxis</li>
    </weaponTags>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <tradeTags>
      <li>K4GWW2Weapon</li>
    </tradeTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>K4G_Bullet_WW2AmericanServiceRocket</defaultProjectile>
        <forcedMissRadius>2.9</forcedMissRadius>
        <warmupTime>4.5</warmupTime>
        <ai_AvoidFriendlyFireRadius>5</ai_AvoidFriendlyFireRadius>
        <range>35.9</range>
        <ticksBetweenBurstShots>20</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>InfernoCannon_Fire</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <onlyManualCast>true</onlyManualCast>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>11.7</power>
        <cooldownTime>2.6</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>3.9</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>
