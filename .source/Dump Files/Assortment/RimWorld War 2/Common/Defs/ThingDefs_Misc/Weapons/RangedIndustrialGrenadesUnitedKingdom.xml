<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
<!-- British No. 36M Mk I Mills Bomb Grenades -->
  <ThingDef ParentName="BaseMakeableGrenade">
    <defName>K4G_Weapon_WW2BritishServiceGrenades</defName>
    <label>British No. 36M Mk I Mills Bomb grenades</label>
    <description>Old-school fragmentation grenades used during WW2. They can be thrown a short distance, where they'll explode, damaging anything and anyone nearby.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/UnitedKingdom/WW2BritishServiceGrenades</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
	<recipeMaker>
      <researchPrerequisite>K4G_WW2InfantryHandGrenades</researchPrerequisite>
	</recipeMaker>
    <uiIconScale>1.3</uiIconScale>
    <soundInteract>Interact_Grenade</soundInteract>
    <techLevel>Industrial</techLevel>
    <statBases>
      <Mass>1</Mass>
      <RangedWeapon_Cooldown>2.66</RangedWeapon_Cooldown>
      <WorkToMake>12000</WorkToMake>
    </statBases>
    <costList>
      <Steel>20</Steel>
      <Chemfuel>80</Chemfuel>
    </costList>
    <weaponTags Inherit="False">
		<li>K4GWW2UnitedKingdomTrading</li>
      <li>K4GWW2UnitedKingdomGrenade</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <tradeTags>
      <li>K4GWW2Weapon</li>
    </tradeTags>
    <verbs>
      <li>
        <label>throw British No. 36M Mk I Mills Bomb grenade</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>12.9</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <warmupTime>1.5</warmupTime>
        <noiseRadius>4</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>ThrowGrenade</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>K4G_Proj_WW2BritishServiceGrenade</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>2.66</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>

  <ThingDef Name="BaseWW2BritishServiceGrenadeProjectile" ParentName="BaseGrenadeProjectile" Abstract="True">
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/WW2BritishServiceGrenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>1.9</explosionRadius >
      <damageDef>Bomb</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionDelay>100</explosionDelay>
    </projectile>
  </ThingDef>

  <ThingDef ParentName="BaseWW2BritishServiceGrenadeProjectile">
    <defName>K4G_Proj_WW2BritishServiceGrenade</defName>
    <label>British No. 36M Mk I Mills Bomb grenade</label>
  </ThingDef>
  
