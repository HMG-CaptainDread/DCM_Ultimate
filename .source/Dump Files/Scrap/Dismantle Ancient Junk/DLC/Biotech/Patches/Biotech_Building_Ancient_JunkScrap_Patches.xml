<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<Operation Class="PatchOperationSequence">
	<success>Normal</success>
		<operations>
			<!-- AncientMechBuildingBase alwaysDeconstructible -->
			<li Class="PatchOperationConditional">
				<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building/alwaysDeconstructible</xpath>
				<nomatch Class="PatchOperationAdd">
				<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building</xpath>
					<value>
						<alwaysDeconstructible>true</alwaysDeconstructible>
					</value>
				</nomatch>
				<match Class="PatchOperationReplace">
					<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building/deconstructible</xpath>
					<value>
						<alwaysDeconstructible>true</alwaysDeconstructible>
					</value>
				</match>
			</li>
			<!-- AncientMechBuildingBase deconstructible -->
			<li Class="PatchOperationConditional">
				<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building/deconstructible</xpath>
				<nomatch Class="PatchOperationAdd">
				<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building</xpath>
					<value>
						<deconstructible>true</deconstructible>
					</value>
				</nomatch>
				<match Class="PatchOperationReplace">
					<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/building/deconstructible</xpath>
					<value>
						<deconstructible>true</deconstructible>
					</value>
				</match>
			</li>
			<!-- AncientMechBuildingBase WorkToBuild 1000 to 10000 -->
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[@Name="AncientMechBuildingBase"]/statBases/WorkToBuild</xpath>
				<value>
					<WorkToBuild>10000</WorkToBuild>
				</value>
			</li>
			<!-- costList -->
			<!-- Ancient Exostrider Head, AncientExostriderCannon -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientExostriderHead"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>4</ChunkSlagSteel>
						<Steel>20</Steel>
					</costList>
				</value>
			</li>
		<!-- Ancient Exostrider Leg -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientExostriderLeg"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>3</ChunkSlagSteel>
						<Steel>40</Steel>
					</costList>
				</value>
			</li>
		<!-- Ancient Mech Gestator, Ancient Basic Recharger, Ancient Standard Recharger -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientMechGestator" or defName="AncientBasicRecharger" or defName="AncientStandardRecharger"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>4</ChunkSlagSteel>
					</costList>
				</value>
			</li>
		<!-- Ancient Large Mech Gestator -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientLargeMechGestator"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>5</ChunkSlagSteel>
					</costList>
				</value>
			</li>
		<!-- Ancient Toxifier Generator -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientToxifierGenerator"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>2</ChunkSlagSteel>
						<Steel>12</Steel>
						<ComponentIndustrial>1</ComponentIndustrial>
					</costList>
				</value>
			</li>
		<!-- Ancient Band Node -->
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AncientBandNode"]</xpath>
				<order>Append</order>
				<value>
					<costList>
						<ChunkSlagSteel>4</ChunkSlagSteel>
						<Steel>20</Steel>
						<ComponentIndustrial>1</ComponentIndustrial>
					</costList>
				</value>
			</li>
		</operations>
</Operation>

</Patch>