  <ThingDef ParentName="BuildingBase">
    <defName>Turret_MiniTurretLaser</defName>
    <label>Grav turret</label>
    <description>An ultratech weapon that emits gamma ray laser bursts in a rapid sequence, assisted by an internal system making use of a graviton field. The accelerated gamma beams can pierce shields and most armors.</description>
    <thingClass>Building_TurretGun</thingClass>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Building/Gravship/Gravship_Turret_Base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shadowData>
        <volume>(0.0,0.0,0.0)</volume>
        <offset>(0,0,0)</offset>
      </shadowData>
    </graphicData>
    <uiIconPath>Things/Building/Gravship/Gravship_ProbeTurret_UI</uiIconPath>
    <uiIconScale>1.0</uiIconScale>
    <minifiedDef>MinifiedThing</minifiedDef>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <rotatable>false</rotatable>
    <thingCategories>
      <li>BuildingsSecurity</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>1250</MaxHitPoints>
      <Flammability>0</Flammability>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>50</Mass>
      <ShootingAccuracyTurret>0.97</ShootingAccuracyTurret>
    </statBases>
	<stealable>false</stealable>
    <tickerType>Normal</tickerType>
    <comps>
			<li>
				<compClass>CompColorable</compClass>
			</li>
      <li Class="CompProperties_Stunnable">
        <affectedDamageDefs>
          <li>Stun</li>
          <li>EMP</li>
        </affectedDamageDefs>
      </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>150</basePowerConsumption>
      </li>
      <li Class="CompProperties_Explosive">
        <wickTicks>240</wickTicks>
        <explosiveRadius>0</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
      </li>
      <li Class="CompProperties_Stunnable">
        <useLargeEMPEffecter>true</useLargeEMPEffecter>
        <empChancePerTick>0.03</empChancePerTick>
        <affectedDamageDefs>
          <li>EMP</li>
        </affectedDamageDefs>
      </li>
      <li Class="CompProperties_Breakdownable"/>
    </comps>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.50</fillPercent>
	<pathCost>50</pathCost>
    <hasTooltip>true</hasTooltip>
		<costList>
			<Steel>100</Steel>
			<Plasteel>25</Plasteel>
			<GravlitePanel>50</GravlitePanel>
			<ComponentIndustrial>3</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
			<Gravcore>1</Gravcore>
		</costList>
    <costStuffCount>20</costStuffCount>
    <stuffCategories Inherit="False">
      <li>Metallic</li>
    </stuffCategories>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>Odyssey</designationCategory>
    <constructionSkillPrerequisite>10</constructionSkillPrerequisite>
    <building>
	<isAirtight>false</isAirtight>
      <combatPower>45</combatPower>   <!-- same as a scavenger -->
      <ai_combatDangerous>true</ai_combatDangerous>
      <turretGunDef>Gun_GravshipMiniTurretLaser</turretGunDef>
      <turretBurstCooldownTime>3</turretBurstCooldownTime>
	  <paintable>true</paintable>
	  <turretTopDrawSize>0.95</turretTopDrawSize>
      <relatedBuildCommands Inherit="False">
        <li>PowerConduit</li>
        <li>GravshipHull</li>
        <li>GravshipHullArmor</li>
        <li>GravshipHullPowered</li>
        <li>GravshipHullSolar</li>
        <li>VacBarrier</li>
      </relatedBuildCommands>
      <relatedTerrain>
        <li>Substructure</li>
      </relatedTerrain>
    </building>
    <placeWorkers>
      <li>PlaceWorker_TurretTop</li>
      <li>PlaceWorker_ShowTurretRadius</li>
      <li>PlaceWorker_OnSubstructure</li>
    </placeWorkers>
    <designationHotKey>Misc2</designationHotKey>
    <researchPrerequisites>
      <li>GunTurrets</li>
      <li>BeamWeapons</li>
      <li>OrbitalTech</li>
      <li>StandardGravtech</li>
    </researchPrerequisites>
  </ThingDef>


