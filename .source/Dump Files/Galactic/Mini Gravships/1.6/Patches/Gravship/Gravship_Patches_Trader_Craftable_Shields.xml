<!-- Check Gravship_Mini_Parts for GravshipSmallShieldGenerator if editing -->

<!-- Craftable GravshipShieldGenerator -->
		<Operation Class="PatchOperationFindMod">
		<mods>
		<li>Odyssey</li>
		</mods>
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "GravshipShieldGenerator"]/costList</xpath>
			<value>
				<costList>
					<Steel>200</Steel>
					<GravlitePanel>80</GravlitePanel>
					<ComponentSpacer>8</ComponentSpacer>
					<Gravcore>2</Gravcore>
				</costList>
			</value>
		</match>
	</Operation>
	<Operation Class="PatchOperationAdd">
<xpath>Defs/ThingDef[defName="GravshipShieldGenerator"]</xpath>
<value>
    <designationCategory>Odyssey</designationCategory>
	<designatorDropdown>Gravship_Shields</designatorDropdown>
    <researchPrerequisites>
      <li>AdvancedGravtech</li>
      <li>OrbitalTech</li>
    </researchPrerequisites>
</value>
</Operation>

	<Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Gravcore"]</xpath>
