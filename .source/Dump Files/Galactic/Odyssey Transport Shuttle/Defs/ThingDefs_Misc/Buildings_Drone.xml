<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>TransportDrone</defName>
    <label>transport drone</label>
    <description>Drone for longer journeys and reaching orbit. Requires a shuttle engine, which can only be obtained from orbital traders and missions. Compared to a regular Shuttle, it has worse cargo capacity, faster recharge time before departure, and more efficient fuel consumption.</description>
    <thingClass>Building_PassengerShuttle</thingClass>
    <preventDroppingThingsOn>true</preventDroppingThingsOn>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <passability>PassThroughOnly</passability>
    <fillPercent>0.9</fillPercent>
    <size>(3,5)</size>
    <drawHighlight>true</drawHighlight>
    <highlightColor>(0.3, 0.7, 0.9)</highlightColor>
    <uiIconScale>1</uiIconScale>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>TransportDrone</texPath>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.1,5.1)</drawSize>
      <drawOffset>(0, 0, 0.1)</drawOffset>
      <shadowData>
        <volume>(1.2, 1.0, 3.5)</volume>
        <offset>(0, 0, 0)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>0.6</Flammability>
      <WorkToBuild>32000</WorkToBuild>
      <Mass>100</Mass>
      <Comfort>0.3</Comfort>
    </statBases>
    <tickerType>Normal</tickerType>
    <designationCategory>Odyssey</designationCategory>
    <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    <costList>
      <Steel>200</Steel>
      <Plasteel>120</Plasteel>
      <ComponentIndustrial>8</ComponentIndustrial>
      <ShuttleEngine>1</ShuttleEngine>
    </costList>
    <canOverlapZones>true</canOverlapZones>
    <killedLeavings>
      <Steel>40</Steel>
      <Plasteel>40</Plasteel>
      <ChunkSlagSteel>3</ChunkSlagSteel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </killedLeavings>
    <rotatable>true</rotatable>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(2, 0, 0)</interactionCellOffset>
    <defaultPlacingRot>East</defaultPlacingRot>
    <selectable>true</selectable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <preventSkyfallersLandingOn>true</preventSkyfallersLandingOn>
    <drawerType>RealtimeOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <building>
      <claimable>false</claimable>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
      <paintable>true</paintable>
      <isInert>true</isInert>
      <forcedCostLeavings>
        <li MayRequire="Ludeon.RimWorld.Odyssey">ShuttleEngine</li>
      </forcedCostLeavings>
    </building>
    <inspectorTabs>
      <li>ITab_ContentsTransporter</li>
    </inspectorTabs>
    <researchPrerequisites>
      <li>TransportDrones</li>
    </researchPrerequisites>
    <comps>
      <li Class="CompProperties_Shuttle">
        <shipDef>Ship_TransportDrone</shipDef>
      </li>
      <li Class="CompProperties_Launchable">
        <fuelPerTile>2.5</fuelPerTile>
        <minFuelCost>30</minFuelCost>
        <skyfallerLeaving>TransportDroneLeaving</skyfallerLeaving>
        <worldObjectDef>TransportDrone</worldObjectDef>
        <cooldownTicks>1875</cooldownTicks>
        <fixedLaunchDistanceMax>124</fixedLaunchDistanceMax>
        <cooldownEndedMessage>{0} is ready to launch again.</cooldownEndedMessage>
      </li>
      <li Class="CompProperties_Transporter">
        <massCapacity>250</massCapacity>
        <max1PerGroup>true</max1PerGroup>
        <canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
        <pawnLoadedSound>Shuttle_PawnLoaded</pawnLoadedSound>
        <pawnExitSound>Shuttle_PawnExit</pawnExitSound>
        <showMassInInspectString>true</showMassInInspectString>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelCapacity>400</fuelCapacity>
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>400</initialConfigurableTargetFuelLevel>
        <fuelFilter>
          <thingDefs>
            <li>Chemfuel</li>
          </thingDefs>
        </fuelFilter>
        <fuelLabel>Chemfuel</fuelLabel>
        <fuelGizmoLabel>Chemfuel</fuelGizmoLabel>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
        <canEjectFuel>true</canEjectFuel>
      </li>
      <li Class="CompProperties_AmbientSound">
        <sound>ShuttleIdle_Ambience</sound>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <uiOrder>2601</uiOrder>
  </ThingDef>
  
  <TransportShipDef>
    <defName>Ship_TransportDrone</defName>
    <label>transport drone</label>
    <shipThing>TransportDrone</shipThing>
    <arrivingSkyfaller>TransportDroneIncoming</arrivingSkyfaller>
    <leavingSkyfaller>TransportDroneLeaving</leavingSkyfaller>
    <worldObject>TransportDrone</worldObject>
    <playerShuttle>true</playerShuttle>
  </TransportShipDef>
  </Defs>