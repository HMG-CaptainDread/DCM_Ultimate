<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>TransportDroneIncoming</defName>
    <label>transport drone (incoming)</label>
    <thingClass>PassengerShuttleIncoming</thingClass>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>TransportDrone</texPath>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,5)</drawSize>
    </graphicData>
    <skyfaller>
      <anticipationSound>Shuttle_Landing</anticipationSound>
      <anticipationSoundTicks>200</anticipationSoundTicks>
      <ticksToImpactRange>160~200</ticksToImpactRange>
      <shadowSize>(3.5,5.5)</shadowSize>
      <rotationCurve>
        <points>
          <li>(0,25)</li>
          <li>(0.5,4)</li>
          <li>(0.9,-4)</li>
          <li>(0.95,0)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0.95,2.5)</li>
          <li>(1,0)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0.6,0.8)</li>
          <li>(0.95,0.12)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

  <ThingDef ParentName="ShuttleSkyfallerBase">
    <defName>TransportDroneLeaving</defName>
    <label>transport drone (leaving)</label>
    <thingClass>PassengerShuttleLeaving</thingClass>
    <rotatable>true</rotatable>
    <graphicData>
      <graphicClass>Graphic_Multi</graphicClass>
      <texPath>TransportDrone</texPath>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,5)</drawSize>
    </graphicData>
    <skyfaller>
      <reversed>true</reversed>
      <anticipationSound>Shuttle_Leaving</anticipationSound>
      <anticipationSoundTicks>-8</anticipationSoundTicks>
      <ticksToImpactRange>-30~-12</ticksToImpactRange>
      <moteSpawnTime>0.05</moteSpawnTime>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(3.5,5.5)</shadowSize>
      <motesPerCell>1</motesPerCell>
      <rotationCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.15,12)</li>
          <li>(0.5,-4)</li>
        </points>
      </rotationCurve>
      <zPositionCurve>
        <points>
          <li>(0,0)</li>
          <li>(0.08,2)</li>
        </points>
      </zPositionCurve>
      <speedCurve>
        <points>
          <li>(0,0.25)</li>
          <li>(0.4,0.9)</li>
        </points>
      </speedCurve>
    </skyfaller>
  </ThingDef>

</Defs>