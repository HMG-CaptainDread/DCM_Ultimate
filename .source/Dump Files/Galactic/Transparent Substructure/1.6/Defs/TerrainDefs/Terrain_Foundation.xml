  <TransparentSubstructure.BridgeTerrainDef ParentName="BridgeBase">
    <defName>TransparentFoundation_HeavyBridge</defName>
    <label>transparent heavy bridge</label>
    <description>A stronger version of the basic bridge which supports heavy structures on top. You can build a whole colony on water with this.\n\nThis bridge is constructed out of transparent composites that allows for an unobstructed view.</description>
    <bridgePropsPath>Terrain/Misc/HeavyBridgeProps</bridgePropsPath>
    <spaceBridgePropsPath>Terrain/Misc/HeavyBridgeSpaceProps</spaceBridgePropsPath>
    <uiIconPath>Aelanna/TransparentSubstructure/BridgeIcon</uiIconPath>
    <dontRender>true</dontRender>
    <affordances>
      <li>Light</li>
      <li>Medium</li>
      <li>Heavy</li>
      <li>Walkable</li>
    </affordances>
    <constructEffect>ConstructMetal</constructEffect>
    <statBases>
      <WorkToBuild>2500</WorkToBuild>
    </statBases>
    <costList>
      <Steel>14</Steel>
    </costList>
    <researchPrerequisites>
      <li>HeavyBridges</li>
    </researchPrerequisites>
    <destroyOnBombDamageThreshold>45</destroyOnBombDamageThreshold>
  </TransparentSubstructure.BridgeTerrainDef>

</Defs>
