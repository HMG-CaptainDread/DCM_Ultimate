<?xml version="1.0" encoding="utf-8" ?>

<Patch>


  <Operation Class="PatchOperationFindMod">  <!-- Mushroom  -->
		<mods>
			<li>Into the Wild: Caveworld Flora Unleashed</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations> 
			  
			  <li Class="PatchOperationReplace">
					
					<xpath>Defs/ThingDef[@Name="ItW_CaveWorldMushroomBase"]/plant/harvestAfterGrowth</xpath>
					<value>
						<harvestAfterGrowth>0.05</harvestAfterGrowth>			
					</value>
			  </li>
			  
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[@Name="ItW_CaveWorldMushroomBase"]/plant</xpath>
					<value>
						<dieFromToxicFallout>False</dieFromToxicFallout>
						<lifespanDaysPerGrowDays>0</lifespanDaysPerGrowDays>			
					</value>
			  </li>
			  
			</operations>
		</match>
  </Operation>
  
</Patch>  