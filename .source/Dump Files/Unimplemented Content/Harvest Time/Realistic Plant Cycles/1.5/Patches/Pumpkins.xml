				<xpath>Defs/ThingDef[defName="PUMPKIN_PLANT_DEF"]/plant/harvestYield</xpath>
				<value>
					<harvestYield>50</harvestYield>			<!-- 18  -->	
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
