<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Pumpkins</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=7.2, LD/GD=8, LS=57.6 Min=.65 est/harvest=12 -->  <!--Real=13.29-->
			<operations> 
			  
			   <li Class="PatchOperationReplace">  <!-- GD=13, LD/GD=39, LS=26 Min=.65 est/harvest=12 -->  <!--Real=27.69-->
				
				<xpath>Defs/ThingDef[defName="PUMPKIN_PLANT_DEF"]/plant/growDays</xpath>
				<value>
