			   <li Class="PatchOperationReplace">  <!-- GD=8.7, LD/GD=5, LS=43.50 Min=.65 est/harvest=12 -->  <!--Real=16.06-->
				
				<xpath>Defs/ThingDef[defName="WATERMELON_PLANT_DEF"]/plant/growDays</xpath>
				<value>
					<growDays>8.7</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="WATERMELON_PLANT_DEF"]/plant/harvestYield</xpath>
