<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Watermelons</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=8, LD/GD=8, LS=64 Min=.65 est/harvest=12 -->  <!--Real=14.77-->
