<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Peanuts (And Peanut Accessories)</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=4, LD/GD=8, LS=32 Min=.65 est/harvest=12 work=400--> <!--Real=7.38-->
			<operations>			  
			   
			   
			  <li Class="PatchOperationReplace">    <!-- GD=19, LD/GD=4, LS=76 Min=.65 est/harvest=12 --> <!--Real=35.07-->
				
				<xpath>Defs/ThingDef[defName="PlantPeanut"]/plant/growDays</xpath>
				<value>
					<growDays>19</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[defName="PlantPeanut"]/plant</xpath>
					<value>
						<lifespanDaysPerGrowDays>4</lifespanDaysPerGrowDays>  
						<harvestMinGrowth>0.80</harvestMinGrowth>
					</value>
			  </li>
			  <li Class="PatchOperationRemove">
					
					<xpath>Defs/ThingDef[defName="PlantPeanut"]/plant/harvestAfterGrowth</xpath>
			  </li>
			  <li Class="PatchOperationReplace">
					
					<xpath>Defs/ThingDef[defName="PlantPeanut"]/plant/harvestYield</xpath>
					<value>
						<harvestYield>145</harvestYield>
					</value>
			  </li>
			  <li Class="PatchOperationReplace">
					
					<xpath>Defs/ThingDef[defName="PlantPeanut"]/plant/harvestWork</xpath>
					<value>
						<harvestWork>1900</harvestWork>
					</value>
			  </li>
			  
			</operations>
		</match>
  </Operation>                              <!-- FinalValue= LS=70.5 --> <!--Real=35.07/1Full Yield V=142, New=145 --> <!-- Work V=1900.81, New=1900  -->
  
  
  
</Patch> 