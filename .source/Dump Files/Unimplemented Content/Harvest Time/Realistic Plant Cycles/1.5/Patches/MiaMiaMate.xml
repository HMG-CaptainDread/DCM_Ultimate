<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Mia Mia Mate</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=9.5, LD/GD=8, LS=76 Min=.65 est/harvest=12 -->  <!--Real=17.54-->
			<operations> 
			  
			   <li Class="PatchOperationReplace">  <!-- GD=65.75, LD/GD=18.25, LS=1199 Min=.65 est/harvest=12 -->  <!--Real=120.20-->
				
				<xpath>Defs/ThingDef[defName="LEK_Plant_Mate"]/plant/growDays</xpath>
				<value>
					<growDays>65.75</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="LEK_Plant_Mate"]/plant/harvestYield</xpath>
				<value>
					<harvestYield>18</harvestYield>			<!-- 13 -->			
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="LEK_Plant_Mate"]/plant/dieIfLeafless</xpath>
				<value>
					<dieIfLeafless>true</dieIfLeafless>			<!-- 23 -->			
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[defName="LEK_Plant_Mate"]/plant</xpath>
					<value>
						<lifespanDaysPerGrowDays>18.25</lifespanDaysPerGrowDays>
						<harvestAfterGrowth>0.75</harvestAfterGrowth>
