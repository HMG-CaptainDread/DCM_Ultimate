<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Argentinian Mate</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=7.8, LD/GD=8, LS=62.4 Min=.65 est/harvest=12 -->  <!--Real=14.4-->
			<operations> 
			  
			   <li Class="PatchOperationReplace">  <!-- GD=65.75, LD/GD=18.25, LS=1199 Min=.65 est/harvest=12 -->  <!--Real=120.20-->
				
				<xpath>Defs/ThingDef[defName="AM_Yerba_Plant"]/plant/growDays</xpath>
				<value>
					<growDays>65.75</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AM_Yerba_Plant"]/plant/harvestYield</xpath>
				<value>
					<harvestYield>28</harvestYield>			<!-- 23 -->			
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[defName="AM_Yerba_Plant"]/plant</xpath>
					<value>
						<lifespanDaysPerGrowDays>18.25</lifespanDaysPerGrowDays>
						<harvestAfterGrowth>0.75</harvestAfterGrowth>		
					</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AM_Yerba_Plant"]/plant/harvestWork</xpath>
				<value>
					<harvestWork>700</harvestWork>						
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AM_Yerba_Plant"]/description</xpath>
				<value>
					<description>A plant whose leaves can be used to make mate, a very healthy infusion.
\n\nLifespan Days:&lt;color=#33cc33&gt;1,200 &lt;/color&gt;
\nFirst Harvest(Real Grow Days):&lt;color=#33cc33&gt;120.20 &lt;/color&gt;
\nAdditional Harvest Days:&lt;color=#33cc33&gt;30.34 &lt;/color&gt;
\nAdditional Harvests:&lt;color=#33cc33&gt;35 &lt;/color&gt;
\nHarvest Work:&lt;color=#33cc33&gt;700/harvest &lt;/color&gt;
\nBased on &lt;color=#cc3300&gt;Fertile(1.0) Soil. &lt;/color&gt;</description>					
				</value>
			  </li>
			  
			</operations>
		</match>
  </Operation>                              <!-- FinalValue= LS=1199 --> <!--Real=30.34/35.56Full Yield V=915, New=1008-->

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Argentinian Mate - Mixed Herbs</li>
		</mods>
		<match Class="PatchOperationSequence">          <!-- GD=4.2, LD/GD=33.6, LS=62.4 Min=.65 est/harvest=12 -->  <!--Real=7.75-->
			<operations> 
			  
			   <li Class="PatchOperationReplace">  <!-- GD=3.5, LD/GD=0, LS=~ Min=.65 est/harvest=12 -->  <!--Real=6.46-->
				
				<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/plant/growDays</xpath>
				<value>
					<growDays>3.5</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/plant/dieIfLeafless</xpath>
				<value>
					<dieIfLeafless>False</dieIfLeafless>					
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/plant</xpath>
					<value>
						<lifespanDaysPerGrowDays>0</lifespanDaysPerGrowDays>
					</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/plant/harvestWork</xpath>
				<value>
					<harvestWork>40</harvestWork>						
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/plant/harvestAfterGrowth</xpath>
				<value>
					<harvestAfterGrowth>0.05</harvestAfterGrowth>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="AMB_MintPlant"]/description</xpath>
				<value>
					<description>Mentha Spicata, the most popular type of mint. Mint has an invasive taste, added in small quantities it can give a magic taste to Mate.
\n\nLifespan Days:&lt;color=#33cc33&gt;~ &lt;/color&gt;
\nFirst Harvest(Real Grow Days):&lt;color=#33cc33&gt;6.46 &lt;/color&gt;
\nAdditional Harvest Days:&lt;color=#33cc33&gt;6.13 &lt;/color&gt;
\nAdditional Harvests:&lt;color=#33cc33&gt;~ &lt;/color&gt;
\nHarvest Work:&lt;color=#33cc33&gt;40/harvest &lt;/color&gt;
\nBased on &lt;color=#cc3300&gt;Fertile(1.0) Soil. &lt;/color&gt;</description>					
				</value>
			  </li>
			  
			</operations>
		</match>
  </Operation>                              <!-- FinalValue= LS=~ --> <!--Real=6.13/~Full  Yield V=2, New=2--> <!-- Work Work V=39.5, New=40  -->
  
</Patch>  