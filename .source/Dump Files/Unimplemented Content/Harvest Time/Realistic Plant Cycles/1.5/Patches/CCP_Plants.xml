<?xml version="1.0" encoding="utf-8" ?>

<Patch>

  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>CCP's Plant Stuff</li>           
		</mods>
		<match Class="PatchOperationSequence">               
			<operations>
		
			<li Class="PatchOperationAdd">  
			
				<xpath>Defs/ThingDef[defName="PlantCCP_PastureGrass"]/plant</xpath>
				<value>
					<harvestAfterGrowth>0.10</harvestAfterGrowth>
					<lifespanDaysPerGrowDays>0</lifespanDaysPerGrowDays>  <!--Haygrass propagates itself if you don't kill it  -->
				</value>
			</li>                                                                                
			  
			</operations>
		</match>
  </Operation>    




</Patch>  