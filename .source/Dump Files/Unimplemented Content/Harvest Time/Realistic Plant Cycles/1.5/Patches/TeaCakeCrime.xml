<?xml version="1.0" encoding="utf-8" ?>

<Patch>


  <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Cake, Tea, and War Crimes</li>
		</mods>
		<match Class="PatchOperationSequence">   <!-- GD=20, LD/GD=8, LS=160 Min=.65 est/harvest=12 -->  <!--Real=36.92-->
			<operations> 
			  
			  <li Class="PatchOperationReplace">  <!-- GD=12, LD/GD=8, LS=40 Min=.65 est/harvest=12 -->  <!--Real=22.15-->
				
				<xpath>Defs/ThingDef[defName="CnT_Plant_Tea"]/plant/growDays</xpath>
				<value>
					<growDays>12</growDays>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="CnT_Plant_Tea"]/plant/dieIfLeafless</xpath>
				<value>
					<dieIfLeafless>False</dieIfLeafless>					
				</value>
			  </li>
			  <li Class="PatchOperationReplace">  
				
				<xpath>Defs/ThingDef[defName="CnT_Plant_Tea"]/plant/harvestYield</xpath>
				<value>
					<harvestYield>2</harvestYield>			 <!-- 3  -->		
				</value>
			  </li>
			  <li Class="PatchOperationAdd">
					
					<xpath>Defs/ThingDef[defName="CnT_Plant_Tea"]/plant</xpath>
					<value>
						<harvestAfterGrowth>0.38</harvestAfterGrowth>
						<lifespanDaysPerGrowDays>500</lifespanDaysPerGrowDays>
						<harvestMinGrowth>0.70</harvestMinGrowth>
						<harvestWork>120</harvestWork>
					</value>
			  </li>
			  
			</operations>
		</match>
  </Operation>                          <!-- FinalValue= LS=6000 --> <!--Real=13.73/435.39Full  Yield V=487, New=872 -->
  
  
</Patch>  