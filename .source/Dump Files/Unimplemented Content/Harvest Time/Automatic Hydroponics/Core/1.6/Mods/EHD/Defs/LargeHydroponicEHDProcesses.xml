<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--Coffee-->

<PipeSystem.ProcessDef MayRequire="erin.hotdrink">
  <defName>AutoHydroponic_EHDCoffee</defName>
  <label>Growing coffee</label>
  <description>Grow coffee.</description>
  <spawnOnInteractionCell>true</spawnOnInteractionCell>
  <labelOverride>Grow 384 coffee beans in 10 days</labelOverride>
  <priorityInBillList>0</priorityInBillList>
  <ticks>600000</ticks> <!--10 in-game days -->
  <ingredients>
  <li>
    <thing>WoodLog</thing>
    <countNeeded>0</countNeeded>
  </li>
</ingredients>
  <results>
    <li>
      <thing>ERN_CoffeeBeans</thing>
      <count>384</count>
    </li>
  </results>
  <autoExtract>true</autoExtract>
  <sustainerWhenWorking>true</sustainerWhenWorking>
  <sustainerDef>Recipe_CookMeal</sustainerDef>
</PipeSystem.ProcessDef>

<!--Tea-->

<PipeSystem.ProcessDef MayRequire="erin.hotdrink">
  <defName>AutoHydroponic_EHDTea</defName>
  <label>Growing tea</label>
  <description>Grow tea.</description>
  <spawnOnInteractionCell>true</spawnOnInteractionCell>
  <labelOverride>Grow 307 tea leaves in 8.3 days</labelOverride>
  <priorityInBillList>0</priorityInBillList>
  <ticks>498000</ticks> <!--8.3 in-game days -->
  <ingredients>
  <li>
    <thing>WoodLog</thing>
    <countNeeded>0</countNeeded>
  </li>
</ingredients>
  <results>
    <li>
      <thing>ERN_TeaLeaves</thing>
      <count>307</count>
    </li>
  </results>
  <autoExtract>true</autoExtract>
  <sustainerWhenWorking>true</sustainerWhenWorking>
  <sustainerDef>Recipe_CookMeal</sustainerDef>
</PipeSystem.ProcessDef>

</Defs>
