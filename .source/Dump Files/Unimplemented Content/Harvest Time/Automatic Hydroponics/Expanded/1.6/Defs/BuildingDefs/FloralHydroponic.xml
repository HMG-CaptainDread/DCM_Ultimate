<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!--Large Floral hydroponic-->
<ThingDef ParentName="BuildingBase">
  <defName>FloralHydroponic</defName>
  <label>Large Floral hydroponic</label>
  <description>A specialized hydroponics bay designed exclusively for cultivating ornamental flowers. Unlike standard auto-hydroponics, it operates on minimal power by focusing on aesthetic rather than agricultural yield. Once flowers reach the end of their bloom cycle, the system automatically ejects withered plants and replants new seeds, ensuring a continuous cycle of blossoms. The process also yields small amounts of hay as a byproduct.</description>
  <drawerType>MapMeshAndRealTime</drawerType>
  <graphicData>
    <texPath>EmptyAutoHydroponic</texPath>
    <graphicClass>Graphic_Multi</graphicClass>
    <drawSize>3</drawSize>
  </graphicData>
  <altitudeLayer>FloorCoverings</altitudeLayer>
    <blocksAltitudes>
      <li>FloorCoverings</li>
    </blocksAltitudes>
<wipesPlants>true</wipesPlants>
  <passability>Standable</passability>
    <size>(3,3)</size>
  <statBases>
    <MaxHitPoints>500</MaxHitPoints>
    <Flammability>0.1</Flammability>
    <Beauty>0</Beauty>
	<WorkToBuild>36000</WorkToBuild>
  </statBases>
  <costList>
    <Steel>320</Steel>
    <ComponentIndustrial>4</ComponentIndustrial>
  </costList>
      <researchPrerequisites>
        <li>Hydroponics</li>
		<li>MicroelectronicsBasics</li>
      </researchPrerequisites>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
  <comps>
    <li Class="PipeSystem.CompProperties_AdvancedResourceProcessor">
      <processes>
        <!--Base Game-->
        <li>FloralHydroponic_Dandelions</li>
		<li>FloralHydroponic_Daylily</li>
		<li>FloralHydroponic_Rose</li>
		<!--Rimimmortal-->
		<li>FloralHydroponic_RI_Plant_Chrysanthemum</li>
		<li>FloralHydroponic_RI_Plant_Peony</li>
		<li>FloralHydroponic_RI_Plant_Narcissus</li>
		<li>FloralHydroponic_RI_Plant_Orchid</li>
      </processes>
      <progressBarOffset>(0,0,-0.5)</progressBarOffset>
      <inProgressTexture>WorkingFloralHydroponic</inProgressTexture>
      <finishedTexture>EmptyAutoHydroponic</finishedTexture>
	  <notWorkingKey>EmptyAutoHydroponic</notWorkingKey>
    </li>
    <li Class="PipeSystem.CompProperties_GlowerOnProcess">
      <glowRadius>5</glowRadius>
      <glowColor>(245, 192, 226)</glowColor>
	  <colorPickerEnabled>true</colorPickerEnabled>
      <darklightToggle>true</darklightToggle>
    </li>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>120</basePowerConsumption>
		<powerUpgrades>
          <li>
            <researchProject>ColoredLights</researchProject>
            <factor>0.5</factor>
          </li>
       </powerUpgrades>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
	  
	  
	  
<!--	  <li Class="DynamicBeauty.CompProperties_DynamicBeauty">
      <beautyPowered>200</beautyPowered>
      <beautyUnpowered>0</beautyUnpowered>
    </li>-->
	<li Class="BeautyWhileProcessing.CompProperties_BeautyWhileProcessing">
      <beautyWhenProcessing>120</beautyWhenProcessing>
    </li>
	
	
	
  </comps>
  <inspectorTabs>
    <li>PipeSystem.ITab_Processor</li>
  </inspectorTabs>
  <tickerType>Rare</tickerType>
  <designationCategory>Production</designationCategory>
  <building>
      <isEdifice>false</isEdifice>
  </building>
      <clearBuildingArea>false</clearBuildingArea>
</ThingDef>

