<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--バレーボール:本体2*9,範囲22*9-->
  <ThingDef ParentName="BuildingBase">
    <defName>VolleyballNet</defName>
    <label>volleyball net</label>
    <description>A large net for the ball game in which hits over a ball. Good for melee ability training.</description>
    <graphicData>
      <drawSize>(9,2)</drawSize>
        <drawOffset>(0,0,0.2)</drawOffset>
      <texPath>Things/Building/Joy/VolleyballNet</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shadowData>
        <volume>(0.3,0.5,0.3)</volume>
        <offset>(0,0,-0.23)</offset>
      </shadowData>
        <damageData>
        <rect>(0.2,0.2,0.6,0.6)</rect>
      </damageData>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <castEdgeShadows>True</castEdgeShadows>
    <altitudeLayer>Building</altitudeLayer>
    <socialPropernessMatters>true</socialPropernessMatters>
    <fillPercent>0.40</fillPercent>
    <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
    <drawPlaceWorkersWhileSelected>true</drawPlaceWorkersWhileSelected>
    <building>
      <joyKind>Gaming_Agility</joyKind>
      <watchBuildingStandDistanceRange>5~10</watchBuildingStandDistanceRange>
      <watchBuildingStandRectWidth>9</watchBuildingStandRectWidth>
      <watchBuildingInSameRoom>true</watchBuildingInSameRoom>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <WorkToBuild>12000</WorkToBuild>
      <Mass>100</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>5</Beauty>
      <JoyGainFactor>1.3</JoyGainFactor>
    </statBases>
    <size>(9,2)</size>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>80</costStuffCount>
    <costList>
      <Cloth>200</Cloth>
      <Steel>50</Steel>
    </costList>
    <pathCost>14</pathCost>
    <passability>PassThroughOnly</passability>
    <designationCategory>Joy</designationCategory>
    <canOverlapZones>false</canOverlapZones>
    <placeWorkers>
      <li>BallGames.PlaceWorker_BallGameCourt</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>ComplexFurniture</li>
    </researchPrerequisites>
    <uiIconScale>2</uiIconScale>
    <modExtensions>
        <li Class="BallGames.ThingDefExtension">
            <interactFromBothSide>true</interactFromBothSide>
        </li>
    </modExtensions>
  </ThingDef>
