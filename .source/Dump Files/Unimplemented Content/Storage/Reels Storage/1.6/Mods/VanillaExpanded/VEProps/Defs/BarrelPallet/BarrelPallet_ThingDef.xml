<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageBarrelPallet</defName>
		<label>barrel pallet</label>
		<graphicData>
			<texPath>Things/Building/IndustrialProps/PalletBarrels/PalletBarrelsA</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
			<drawRotated>false</drawRotated>
			<color>(142,44,26)</color>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>A large storage structure designed to hold barrels of chemfuel for use in generators, vehicles, and other machinery. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 60 
Stack per tile: 15 

Allowed items: Chemfuel</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(2,2)</size>
        	<rotatable>true</rotatable>
        	<defaultPlacingRot>North</defaultPlacingRot>
        	<researchPrerequisites>
			<li>ReelIndustrialStorage</li>
			<li>BiofuelRefining</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>300</MaxHitPoints>
			<WorkToBuild>4600</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>25</Mass>
			<Flammability>1</Flammability>
		</statBases>
		<costList>
			<Steel>100</Steel>
			<WoodLog>35</WoodLog>
		</costList>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>15</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<thingDefs>  
                        			<li>Chemfuel</li>                						
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<thingDefs>  
                        			<li>Chemfuel</li>                						
					</thingDefs>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>