<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageHayBale</defName>
		<label>hay bale</label>
		<graphicData>
			<texPath>Things/Building/FarmProps/HayBaleMedium/HayBaleMedium</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.1,1.1)</drawSize>
			<drawRotated>false</drawRotated>
			<color>(255,255,255)</color>
		</graphicData>
		<description>A compact bundle of hay, bound together with twine or rope. It is designed to keep the hay dry and accessible for feeding livestock and other animals. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 8 
Stack per tile: 8 

Allowed items: Hay</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>0.7</uiIconScale>
		<size>(1,1)</size>
		<rotatable>false</rotatable>
		<defaultPlacingRot>East</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelNeolithicStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>50</MaxHitPoints>
			<WorkToBuild>300</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>1</Mass>
			<Flammability>1</Flammability>
		</statBases>
		<costList>
			<Hay>80</Hay>
		</costList>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>8</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<thingDefs>  
						<li>Hay</li>	
						<li MayRequire="vanillaexpanded.vplantsemore,Ludeon.RimWorld.Ideology">VCE_RawMoss</li>						
					</thingDefs>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<thingDefs>  
						<li>Hay</li>	
						<li MayRequire="vanillaexpanded.vplantsemore,Ludeon.RimWorld.Ideology">VCE_RawMoss</li>						
					</thingDefs>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>