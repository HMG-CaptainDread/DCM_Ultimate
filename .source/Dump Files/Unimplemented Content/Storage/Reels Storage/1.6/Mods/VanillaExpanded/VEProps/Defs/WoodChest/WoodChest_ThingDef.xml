<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageWoodChest</defName>
		<label>chest</label>
		<graphicData>
			<texPath>Things/Building/MedievalProps/Chest/Chest</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(1.1,1.1)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
		<description>A small, single-tile wooden chest designed for storing a limited amount of items. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 4 
Stack per tile: 4 

Allowed items: Everything except Foods, Corpses and Chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>0.7</uiIconScale>
		<size>(1,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelNeolithicStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>57</MaxHitPoints>
			<WorkToBuild>400</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>4</Mass>
			<Flammability>1</Flammability>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>15</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>4</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<specialFiltersToAllow>
						<li MayRequire="ludeon.rimworld.ideology">AllowVegetarian</li>
					</specialFiltersToAllow>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>