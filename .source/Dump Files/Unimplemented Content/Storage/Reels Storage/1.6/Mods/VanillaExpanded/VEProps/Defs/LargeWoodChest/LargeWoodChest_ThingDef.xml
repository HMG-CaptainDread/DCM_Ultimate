<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageLargeWoodChest</defName>
		<label>large chest</label>
		<graphicData>
			<texPath>Things/Building/MedievalProps/ChestLarge/ChestLarge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2,2)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
		<description>A larger wooden chest that spans two tiles, offering increased storage capacity compared to its smaller counterpart. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 8 
Stack per tile: 4 

Allowed items: Everything except Foods, Corpses and Chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>0.7</uiIconScale>
		<size>(2,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelNeolithicStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>110</MaxHitPoints>
			<WorkToBuild>700</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>7</Mass>
			<Flammability>1</Flammability>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>30</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>4</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<specialFiltersToAllow>
						<li MayRequire="ludeon.rimworld.ideology">AllowVegetarian</li>
					</specialFiltersToAllow>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                      				<li>Chunks</li>             
                       				<li>Corpses</li>
                       				<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                      				<li>Chunks</li>             
                       				<li>Corpses</li>
                       				<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>