<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageBookshelf</defName>
		<label>bookshelf</label>
		<graphicData>
			<texPath>Things/Building/FurnitureProps/Bookshelf/Bookshelf</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3.3,3.3)</drawSize>
			<drawRotated>false</drawRotated>
		<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>A sturdy bookshelf designed to hold books and other written materials. The bookshelf is constructed from durable wood and features multiple shelves for storing books, scrolls, and documents. It is designed to keep the written materials organized and easily accessible for reading. Can be used to increase Research speed. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 20 
Stack per tile: 10 

Allowed items: Books</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1.05</uiIconScale>
		<size>(2,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelMedievalStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>80</MaxHitPoints>
			<WorkToBuild>1400</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>25</Mass>
		<Flammability>1</Flammability>
		</statBases>
    <comps>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.05</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>7</maxDistance>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
    </placeWorkers>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>80</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>10</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Books</li>                 						
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>ResourcesRaw</li>                                   						
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>