<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageLargeSpacerContainer</defName>
		<label>large spacer container</label>
		<graphicData>
			<texPath>Things/Building/SpacerProps/SpacerContainerLarge/SpacerContainerLarge</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.5,2.1)</drawSize>
			<drawRotated>false</drawRotated>
            <shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>A larger advanced container designed for storing large quantities of goods and valuables in vessels and colonies. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 30 
Stack per tile: 15 

Allowed items: Everything except Foods, Corpses and Chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(2,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>South</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelSpacerStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>1100</MaxHitPoints>
			<WorkToBuild>14400</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>11</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Plasteel>80</Plasteel>
			<ComponentIndustrial>6</ComponentIndustrial>
			<ComponentSpacer>1</ComponentSpacer>
		</costList>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>15</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>