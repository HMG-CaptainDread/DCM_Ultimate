<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageSpacerLocker</defName>
		<label>spacer locker</label>
		<graphicData>
			<texPath>Things/Building/SpacerProps/SpacerStorage/SpacerStorage</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
			<drawRotated>false</drawRotated>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<description>An advanced locker designed to keep your gear secure and accessible for outfitting your colonists in vessels and colonies. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 60 
Stack per tile: 20 

Allowed items: Weapons, Apparel</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(3,1)</size>
		<rotatable>true</rotatable>
		<defaultPlacingRot>North</defaultPlacingRot>
		<researchPrerequisites>
			<li>ReelSpacerStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>1425</MaxHitPoints>
			<WorkToBuild>16400</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>16</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<costList>
			<Plasteel>210</Plasteel>
			<ComponentIndustrial>10</ComponentIndustrial>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>20</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
                        			<li>Weapons</li>             
                        			<li>Apparel</li>     						
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<disallowNotEverStorable>true</disallowNotEverStorable>
					<categories>
                        			<li>Weapons</li>             
                        			<li>Apparel</li>     						
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>