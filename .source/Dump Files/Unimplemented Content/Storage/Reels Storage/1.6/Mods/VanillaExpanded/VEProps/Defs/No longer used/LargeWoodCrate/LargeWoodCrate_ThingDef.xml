<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageLargeWoodCrate</defName>
		<label>crate stack</label>
    <designationCategory Inherit="False" />
		<graphicData>
			<texPath>Things/Building/IndustrialProps/PalletBoxes/PalletBoxesA</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(3,3)</drawSize>
			<drawRotated>false</drawRotated>
			<color>(255,255,255)</color>
		</graphicData>
		<description>A collection of wooden crates designed for storing mass quantities of goods and valuables. Items stored inside will not deteriorate over time and have no impact on the beauty of their surroundings. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 40 
Stack per tile: 10 

Allowed items: Everything except Foods, Corpses and Chunks</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(2,2)</size>
		<rotatable>false</rotatable>
		<defaultPlacingRot>North</defaultPlacingRot>
<!-- 		<researchPrerequisites>
			<li>ReelMedievalStorage</li>
		</researchPrerequisites> -->
		<statBases>
			<MaxHitPoints>320</MaxHitPoints>
			<WorkToBuild>4000</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>24</Mass>
			<Flammability>1</Flammability>
		</statBases>
        <stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>240</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>10</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<specialFiltersToAllow>
						<li MayRequire="ludeon.rimworld.ideology">AllowVegetarian</li>
					</specialFiltersToAllow>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
						<li>Root</li>                    						
					</categories>
                    			<disallowedCategories>
                        			<li>Chunks</li>             
                        			<li>Corpses</li>
                        			<li>FoodMeals</li>
						<li>Foods</li>   
                    			</disallowedCategories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<modExtensions>
			<li Class="AdaptiveStorage.Extension">
				<labelFormat>StuffAsNoun</labelFormat>
			</li>
		</modExtensions>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>