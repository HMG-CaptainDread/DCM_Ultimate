<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="AdaptiveStorageBase">
        <defName>ReelStorageWeaponRack</defName>
		<label>weapon rack</label>
		<graphicData>
			<texPath>Things/Building/MedievalProps/WeaponRackEmpty/WeaponRackEmpty</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(2.0,2.0)</drawSize>
			<drawRotated>false</drawRotated>
		</graphicData>
		<description>A specialized rack designed to display numerous melee and ranged weapons for armories and outposts. Items stored inside will not deteriorate over time. \n\n&lt;color=#E5E54C&gt;Storage stats:&lt;/color&gt; 
Stack size total: 8 
Stack per tile: 4 

Allowed items: Melee weapons, Ranged weapons.</description>
		<fillPercent>0.20</fillPercent>
		<uiIconScale>1</uiIconScale>
		<size>(2,1)</size>
		<rotatable>true</rotatable>
       		<defaultPlacingRot>South</defaultPlacingRot>
        	<researchPrerequisites>
			<li>ReelNeolithicStorage</li>
		</researchPrerequisites>
		<statBases>
			<MaxHitPoints>70</MaxHitPoints>
			<WorkToBuild>900</WorkToBuild>
			<Beauty>0</Beauty>
			<Mass>5</Mass>
          	  <Flammability>1</Flammability>
		</statBases>
       		 <stuffCategories>
			<li>Woody</li>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>50</costStuffCount>
		<building>
			<preventDeteriorationOnTop>true</preventDeteriorationOnTop>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<maxItemsInCell>4</maxItemsInCell>
			<fixedStorageSettings>
				<filter>
					<categories>
                        	<li>Weapons</li>      
							<li MayRequire="ceteam.combatextended">Shields</li>				
					</categories>
				</filter>
			</fixedStorageSettings>
			<defaultStorageSettings>
				<priority>Preferred</priority>
				<filter>
					<categories>
                        	<li>Weapons</li>     
							<li MayRequire="ceteam.combatextended">Shields</li>								
					</categories>
				</filter>
			</defaultStorageSettings>
			<paintable>true</paintable>
		</building>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
	</ThingDef>
</Defs>