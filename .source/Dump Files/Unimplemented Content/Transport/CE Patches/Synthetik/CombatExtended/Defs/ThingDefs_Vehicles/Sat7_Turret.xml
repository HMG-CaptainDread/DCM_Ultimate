		<gizmoIconTexPath>Synthetik/Icons/Coax_Icon</gizmoIconTexPath>
		<gizmoDescription>Laser Machinegun</gizmoDescription>

		<ammunition>
			<thingDefs>
				<li>Plasteel</li>
				<li>Ammo_SynthetikLaserCell</li>
				<li>Ammo_SynthetikLaserCellAP</li>
				<li>Ammo_SynthetikLaserCellIncendiary</li>
			</thingDefs>
		</ammunition>

		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_LaserFlash</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>

		<modExtensions>
			<li Class="Vehicles.CETurretDataDefModExtension">
				<ammoSet>AmmoSet_SynthetikLaserCell</ammoSet>
				<shotHeight>1.2</shotHeight>
				<speed>168</speed>
				<sway>1.0</sway>
				<spread>0.01</spread>
			</li>
		</modExtensions>
	</Vehicles.VehicleTurretDef>

