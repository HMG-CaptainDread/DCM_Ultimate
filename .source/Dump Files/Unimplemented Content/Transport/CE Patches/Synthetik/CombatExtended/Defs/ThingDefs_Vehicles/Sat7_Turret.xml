<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>Sat7_MainGun</defName>
		<label>Saturn 7 Main gun</label>
		<description>Fires shells at near-instant speeds.</description>
		<turretType>Rotatable</turretType>
		<shotSound>Synthetik_Sat7MainGun</shotSound>
		<projectile>Bullet_100mmEnergyCanister_HE</projectile>
		<reloadTimer>9.8</reloadTimer>
		<warmUpTimer>1.0</warmUpTimer>
		<magazineCapacity>25</magazineCapacity>
		<chargePerAmmoCount>1</chargePerAmmoCount>
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>0.5</rotationSpeed>
		<projectileOffset>6.0</projectileOffset>
		<hitFlags>IntendedTarget</hitFlags>
		<attachProjectileFlag>Tank</attachProjectileFlag>
		<minRange>10</minRange>
		<maxRange>92</maxRange>

		<recoil>
			<distanceTotal>0.1</distanceTotal>
			<distancePerTick>0.05</distancePerTick>
			<speedMultiplierPostRecoil>0.1</speedMultiplierPostRecoil>
		</recoil>

		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<spreadRadius>3</spreadRadius>
				<ticksBetweenShots>60</ticksBetweenShots>
				<ticksBetweenBursts>588</ticksBetweenBursts>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
		</fireModes>

		<graphicData>
			<texPath>Synthetik/Vehicles/Sat7_Top</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>7.5</drawSize>
		</graphicData>

		<gizmoIconTexPath>Synthetik/Icons/Cannon_Icon</gizmoIconTexPath>
		<gizmoDescription>100mm Energy Cannon</gizmoDescription>

		<ammunition>
			<thingDefs>
				<li>Ammo_100mmEnergyCanister_HE</li>
				<li>Ammo_100mmEnergyCanister_EMP</li>
				<li>Ammo_100mmEnergyCanister_Plasma</li>
			</thingDefs>
		</ammunition>

		<motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_CannonPlume</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes>

		<modExtensions>
			<li Class="Vehicles.CETurretDataDefModExtension">
				<ammoSet>AmmoSet_100mmEnergyCanister</ammoSet>
				<shotHeight>1.2</shotHeight>
				<speed>426</speed>
				<sway>1.0</sway>
				<spread>0.01</spread>
			</li>
		</modExtensions>
	</Vehicles.VehicleTurretDef>

	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
