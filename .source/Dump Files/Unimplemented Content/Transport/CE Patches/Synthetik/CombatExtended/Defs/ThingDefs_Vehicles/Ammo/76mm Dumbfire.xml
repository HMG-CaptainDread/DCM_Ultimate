<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!-- If youre going to copy, please at least give credit, I spent hours collecting data for this-->

	<ThingCategoryDef>
		<defName>Ammo76mmMissile</defName>
		<label>76mm Missile</label>
		<parent>AmmoMissiles</parent>
		<iconPath>UI/Icons/ThingCategories/AmmoMissiles</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_76mmMissile</defName>
		<label>76mm Missile</label>
		<ammoTypes>
			<Ammo_76mmMissile_HE>Bullet_76mmMissile_HE</Ammo_76mmMissile_HE>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="76mmMissileBase" ParentName="MediumAmmoBase" Abstract="True">
		<description>Tube launched missile used by Z277 Madness Accelerator. After being fired, a rocket motor kicks in to propel the warhead further.</description>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_TableMachining</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo76mmMissile</li>
		</thingCategories>
		<stackLimit>25</stackLimit>
		<cookOffFlashScale>40</cookOffFlashScale>
		<cookOffSound>MortarBomb_Explode</cookOffSound>
		<isMortarAmmo>true</isMortarAmmo>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="76mmMissileBase">
		<defName>Ammo_76mmMissile_HE</defName>
		<label>76mm Missile (HE)</label>
		<graphicData>
			<texPath>Synthetik/Ammo/Rocket/76mmDumbfire</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>351.44</MarketValue>
			<Mass>42</Mass>
			<Bulk>34.85</Bulk>
		</statBases>
		<ammoClass>RocketHE</ammoClass>
		<detonateProjectile>Bullet_76mmMissile_HE</detonateProjectile>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base76mmMissile" ParentName="BaseExplosiveBullet" Abstract="true">
		<thingClass>CombatExtended.ProjectileCE_Explosive</thingClass>
		<graphicData>
			<texPath>Synthetik/Projectile/Rocket_Projectile</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<speed>122</speed>
			<soundAmbient>RocketPropelledLoop_Small</soundAmbient>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ProjectileFleck">
				<FleckDatas>
					<li>
						<fleck>Fleck_CERocketFlame</fleck>
						<emissionsPerTick>7</emissionsPerTick>
						<flecksPerEmission>3</flecksPerEmission>
						<scale>1</scale>
						<cutoffTickRange>25~30</cutoffTickRange>
						<originOffset>0.4</originOffset>
					</li>
					<li>
						<fleck>Fleck_CERocketSmokeTrail</fleck>
						<emissionsPerTick>2</emissionsPerTick>
						<rotation>0~360</rotation>
						<scale>0.5</scale>
						<flecksPerEmission>1</flecksPerEmission>
					</li>
					<li>
						<fleck>Fleck_CERocketSmoke</fleck>
						<emissionsPerTick>2</emissionsPerTick>
						<rotation>0~360</rotation>
						<flecksPerEmission>2</flecksPerEmission>
						<cutoffTickRange>25~60</cutoffTickRange>
					</li>
				</FleckDatas>
			</li>
		</comps>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="Base76mmMissile">
		<defName>Bullet_76mmMissile_HE</defName>
		<label>76mm Missile (HE)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bomb</damageDef>
			<damageAmountBase>330</damageAmountBase>
			<explosionRadius>4.2</explosionRadius>
			<soundExplode>Synthetik_HE_Explode</soundExplode>
			<applyDamageToExplosionCellsNeighbors>true</applyDamageToExplosionCellsNeighbors>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_Fragments">
				<fragments>
					<Fragment_Large>20</Fragment_Large>
					<Fragment_Small>87</Fragment_Small>
				</fragments>
			</li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="LauncherAmmoRecipeBase">
		<defName>MakeAmmo_76mmMissile_HE</defName>
		<label>make 76mm Missile launch tube x5</label>
		<description>Craft 5 76mm Missile launch tube.</description>
		<jobString>Making 76mm Missile launch tube.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Steel</li>
					</thingDefs>
				</filter>
				<count>84</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>7</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Steel</li>
				<li>FSX</li>
				<li>ComponentIndustrial</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_76mmMissile_HE>1</Ammo_76mmMissile_HE>
		</products>
		<workAmount>13600</workAmount>
	</RecipeDef>

</Defs>