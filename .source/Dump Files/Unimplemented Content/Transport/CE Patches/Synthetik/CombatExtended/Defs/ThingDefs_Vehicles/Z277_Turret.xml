		<rotationSpeed>0.5</rotationSpeed>

		<hitFlags>All</hitFlags>
		<minRange>4</minRange>
		<maxRange>86</maxRange>
		
		<attachProjectileFlag>Tank</attachProjectileFlag>
		<projectileOffset>0.25</projectileOffset>
		<projectileShifting> <!-- CE doesnt like Projectile shifting it seems-->
			<li>0</li>
			<!--li>1.0</li>
			<li>-1.0</li-->
			<!--li>1.05</li>
			<li>0.95</li>
			<li>1.05</li>
			<li>0.95</li>
			<li>-1.05</li>
			<li>-0.95</li>
			<li>-1.05</li>
			<li>-0.95</li-->
		</projectileShifting>

		<fireModes>
			<li>
				<shotsPerBurst>1</shotsPerBurst>
				<spreadRadius>3</spreadRadius>
				<ticksBetweenShots>6</ticksBetweenShots>
				<ticksBetweenBursts>60</ticksBetweenBursts>
				<label>Single</label>
				<texPath>UI/Gizmos/FireRate_Single</texPath>
			</li>
			<li>
				<shotsPerBurst>4</shotsPerBurst>
				<spreadRadius>3</spreadRadius>
				<ticksBetweenShots>6</ticksBetweenShots>
				<ticksBetweenBursts>60</ticksBetweenBursts>
				<label>Quad</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
			<li>
				<shotsPerBurst>8</shotsPerBurst>
				<spreadRadius>3</spreadRadius>
				<ticksBetweenShots>6</ticksBetweenShots>
				<ticksBetweenBursts>60</ticksBetweenBursts>
				<label>Fire everything</label>
				<texPath>UI/Gizmos/FireRate_Auto</texPath>
			</li>
		</fireModes>

		<graphicData>
			<texPath>Synthetik/Vehicles/Z277_Top</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>0.5</drawSize>
		</graphicData>

		<gizmoIconTexPath>Synthetik/Icons/Rocket_Icon</gizmoIconTexPath>
		<gizmoDescription>76mm Missile Tube</gizmoDescription>

		<ammunition>
			<thingDefs>
				<li>Ammo_76mmMissile_HE</li>
			</thingDefs>
		</ammunition>

		<!--motes>
			<li>
				<cycles>1</cycles>
				<moteDef>Mote_MuzzleFlash_Synthetik</moteDef>
				<animationType>Reset</animationType>
			</li>
		</motes-->

		<modExtensions>
			<li Class="Vehicles.CETurretDataDefModExtension">
				<ammoSet>AmmoSet_76mmMissile</ammoSet>
				<shotHeight>0.9</shotHeight>
				<speed>122</speed>
				<sway>1.0</sway>
				<spread>0.01</spread>
			</li>
		</modExtensions>
	</Vehicles.VehicleTurretDef>

</Defs>