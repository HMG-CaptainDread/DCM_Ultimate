<?xml version="1.0" encoding="utf-8"?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>
				<!-- Turret -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/projectile</xpath>
					<value>
						<projectile>Bullet_23x152mmB_AP</projectile>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/chargePerAmmoCount</xpath>
					<value>
						<chargePerAmmoCount>1</chargePerAmmoCount>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/reloadTimer</xpath>
					<value>
						<reloadTimer>7.8</reloadTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/warmUpTimer</xpath>
					<value>
						<warmUpTimer>2.3</warmUpTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/magazineCapacity</xpath>
					<value>
						<magazineCapacity>100</magazineCapacity>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/genericAmmo</xpath>
					<value>
						<genericAmmo>false</genericAmmo>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/projectileShifting</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/maxRange</xpath>
					<value>
						<maxRange>78</maxRange>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/ammunition/thingDefs</xpath>
					<value>
						<thingDefs>
							<li>Ammo_23x152mmB_AP</li>
							<li>Ammo_23x152mmB_Incendiary</li>
							<li>Ammo_23x152mmB_APHE</li>
							<li>Ammo_23x152mmB_Sabot</li>
						</thingDefs>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]</xpath>
					<value>
						<li Class="Vehicles.CETurretDataDefModExtension">
							<ammoSet>AmmoSet_23x152mmB</ammoSet>
							<shotHeight>2.0</shotHeight>
							<speed>139</speed>
							<sway>1.88</sway>
							<spread>0.08</spread>
						</li>
					</value>
				</li>
				
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Fellowtown_Turret"]/fireModes</xpath>
					<value>
						<fireModes>
							<li>
								<shotsPerBurst>10</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>90</ticksBetweenBursts>
								<label>Auto</label>
								<texPath>UI/Gizmos/FireRate_Auto</texPath>
							</li>
							<li>
								<shotsPerBurst>5</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>90</ticksBetweenBursts>
								<label>Burst</label>
								<texPath>UI/Gizmos/FireRate_Burst</texPath>
							</li>
							<li>
								<shotsPerBurst>1</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>90</ticksBetweenBursts>
								<label>Single</label>
								<texPath>UI/Gizmos/FireRate_Single</texPath>
							</li>
						</fireModes>
					</value>
				</li>


				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/projectile</xpath>
					<value>
						<projectile>Bullet_50mmRocket_HE</projectile>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/chargePerAmmoCount</xpath>
					<value>
						<chargePerAmmoCount>1</chargePerAmmoCount>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/reloadTimer</xpath>
					<value>
						<reloadTimer>64</reloadTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/warmUpTimer</xpath>
					<value>
						<warmUpTimer>1.3</warmUpTimer>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/magazineCapacity</xpath>
					<value>
						<magazineCapacity>32</magazineCapacity>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/genericAmmo</xpath>
					<value>
						<genericAmmo>false</genericAmmo>
					</value>
				</li>

				<li Class="PatchOperationRemove">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/projectileShifting</xpath>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/maxRange</xpath>
					<value>
						<maxRange>128</maxRange>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/ammunition/thingDefs</xpath>
					<value>
						<thingDefs>
							<li>Ammo_50mmRocket_HE</li>
						</thingDefs>
					</value>
				</li>

				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]</xpath>
					<value>
						<li Class="Vehicles.CETurretDataDefModExtension">
							<ammoSet>AmmoSet_50mmRocket</ammoSet>
							<shotHeight>2.0</shotHeight>
							<speed>100</speed>
							<sway>2</sway>
							<spread>0.25</spread>
						</li>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="TC_Katyusha_Turret"]/fireModes</xpath>
					<value>
						<fireModes>
							<li>
								<shotsPerBurst>32</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>60</ticksBetweenBursts>
								<label>Auto</label>
								<texPath>UI/Gizmos/FireRate_Auto</texPath>
							</li>
							<li>
								<shotsPerBurst>8</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>60</ticksBetweenBursts>
								<label>Burst</label>
								<texPath>UI/Gizmos/FireRate_Burst</texPath>
							</li>
							<li>
								<shotsPerBurst>1</shotsPerBurst>
								<ticksBetweenShots>2</ticksBetweenShots>
								<ticksBetweenBursts>60</ticksBetweenBursts>
								<label>Single</label>
								<texPath>UI/Gizmos/FireRate_Single</texPath>
							</li>
						</fireModes>
					</value>
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
