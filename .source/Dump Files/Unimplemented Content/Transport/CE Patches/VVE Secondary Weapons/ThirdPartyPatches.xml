						<rotationSpeed>2.5</rotationSpeed>
					</value>
				</li>
				
				<!-- Mk19 -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Paladin_MainTurret"]/fireModes</xpath>
