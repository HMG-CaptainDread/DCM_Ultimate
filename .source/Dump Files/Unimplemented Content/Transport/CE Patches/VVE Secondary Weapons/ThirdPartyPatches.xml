<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ========== Third Party ========== -->
	<!-- Vanilla Vehicles Expanded - Upgrades -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Vehicles Expanded - Upgrades</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- Mini-turret -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Prowler_MiniTurret"]/reloadTimer</xpath>
					<value>
						<reloadTimer>7.8</reloadTimer>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Prowler_MiniTurret"]/shotSound</xpath>
					<value>
						<shotSound>Shot_AssaultRifle</shotSound>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Prowler_MiniTurret"]/autoSnapTargeting</xpath>
					<value>
						<autoSnapTargeting>false</autoSnapTargeting>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Prowler_MiniTurret"]/fireModes</xpath>
					<value>
						<fireModes>
							<li>
								<shotsPerBurst>1</shotsPerBurst>
								<ticksBetweenShots>5</ticksBetweenShots>
								<ticksBetweenBursts>30</ticksBetweenBursts>
								<label>Single</label>
								<texPath>UI/Gizmos/FireRate_Single</texPath>
							</li>
							<li>
								<shotsPerBurst>5</shotsPerBurst>
								<ticksBetweenShots>5</ticksBetweenShots>
								<ticksBetweenBursts>30</ticksBetweenBursts>
								<label>Burst</label>
								<texPath>UI/Gizmos/FireRate_Burst</texPath>
							</li>
							<li>
								<shotsPerBurst>10</shotsPerBurst>
								<ticksBetweenShots>5</ticksBetweenShots>
								<ticksBetweenBursts>30</ticksBetweenBursts>
								<label>Auto</label>
								<texPath>UI/Gizmos/FireRate_Auto</texPath>
							</li>
						</fireModes>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/Vehicles.VehicleTurretDef[defName="Prowler_MiniTurret"]</xpath>
					<value>
						<rotationSpeed>3</rotationSpeed>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<!-- Vanilla Vehicles Expanded - Tier 3 -->
