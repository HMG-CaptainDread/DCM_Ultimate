<?xml version="1.0" encoding="utf-8" ?>
<Defs> 
	<XmlExtensions.SettingsMenuDef>
		<defName>Victor.AnimaBionicsForked.Settings</defName>
		<modId>Seti.Victor.AnimaBodies</modId>
		<label>Anima Bionics Forked</label>
		<settings>
			<li Class="XmlExtensions.Setting.Text">
				<text>CHANGES REQUIRE RESTART</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.GapLine"/>
			
			<li Class="XmlExtensions.Setting.Text">
				<text>Brain Implant mechanics:</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
			</li>

			<li Class="XmlExtensions.Setting.RadioButtons">
				<key>BrainImplant_Setting</key>
				<defaultValue>0</defaultValue>
				<buttons>
					<li>
						<label>Reworked</label>
						<value>0</value>
						<tooltip>Reworked version adds a MeleeDodgeChance penalty to the Psychic Dryad and a setMax to conscionousness capping it to 130% on the Mind Dryad.</tooltip>
					</li>
					<li>
						<label>Classic</label>
						<value>1</value>
						<tooltip>Classic version doesn't have any disadvantages on both the Brain Implants.</tooltip>
					</li>
				</buttons>
			</li>
			<li Class="XmlExtensions.Setting.GapLine"/>
			<li Class="XmlExtensions.Setting.Text" MayRequire="ghastly.visualcybernetics">
				<text>Visible bionics graphics (Compatibility with Visible Cybernetics):</text>
				<font>Medium</font>
				<anchor>Middle</anchor>
			</li>
			<li Class="XmlExtensions.Setting.Checkbox" MayRequire="ghastly.visualcybernetics"> <key>Visible_AnimaEye</key>
                <label>Visible Anima Eyes.</label>
                <defaultValue>true</defaultValue>
                <tooltip>Texture by Seti.</tooltip>
            </li>
			<li Class="XmlExtensions.Setting.Checkbox" MayRequire="ghastly.visualcybernetics"> <key>Visible_AnimaJaw</key>
                <label>Visible Anima Jaw.</label>
                <defaultValue>true</defaultValue>
                <tooltip>Texture by Seti.</tooltip>
            </li>
			<li Class="XmlExtensions.Setting.Checkbox" MayRequire="ghastly.visualcybernetics"> <key>Visible_AnimaHorn</key>
                <label>Visible Anima Horn.</label>
                <defaultValue>true</defaultValue>
                <tooltip>Texture by Seti.</tooltip>
            </li>
			<li Class="XmlExtensions.Setting.Checkbox" MayRequire="ghastly.visualcybernetics"> <key>Visible_AnimaSpine</key>
                <label>Visible Anima Spine.</label>
                <defaultValue>true</defaultValue>
                <tooltip>Texture by Seti.</tooltip>
            </li>
			<li Class="XmlExtensions.Setting.Checkbox" MayRequire="ghastly.visualcybernetics"> <key>Visible_AnimaPlate</key>
                <label>Visible Anima Barkskin.</label>
                <defaultValue>true</defaultValue>
                <tooltip>Texture by Seti.</tooltip>
            </li>
